@model IEnumerable<QuanLyRapPhim.Models.Showtime>

@{
    ViewData["Title"] = "Chọn lịch chiếu";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var movieId = ViewBag.MovieId;
    var movieTitle = Model.FirstOrDefault()?.Movie?.Title ?? "Phim không xác định";
}

<div class="container my-5 position-relative">
    <!-- Các hình tròn gradient trang trí -->
    <div class="circle circle-1"></div>
    <div class="circle circle-2"></div>
    <div class="circle circle-3"></div>

    <h1 class="text-primary mb-2">Chọn lịch chiếu</h1>
    <h4 class="text-muted mb-4">Phim: @movieTitle</h4>

    <!-- Thông báo lỗi -->
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @ViewBag.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    else
    {
        <!-- Danh sách lịch chiếu -->
        <div class="row">
            @foreach (var showtime in Model)
            {
                <div class="col-md-4 col-lg-3 mb-4">
                    <div class="card movie-card h-100 shadow-sm text-light">
                        <img src="@showtime.Poster" class="card-img-top" alt="@showtime.Title" style="height: 200px; object-fit: cover;" />
                        <div class="card-body">
                            <h5 class="card-title">@showtime.Title</h5>
                            <p class="card-text">
                                <i class="fas fa-calendar-alt text-primary me-2"></i>
                                <strong>Ngày chiếu:</strong> @showtime.Date.ToString("dd/MM/yyyy")
                            </p>
                            <p class="card-text">
                                <i class="fas fa-clock text-primary me-2"></i>
                                <strong>Giờ chiếu:</strong> @showtime.StartTime.ToString(@"hh\:mm")
                            </p>
                        </div>
                        <div class="card-footer d-flex justify-content-between">
                            <a asp-controller="Tickets" asp-action="SelectRoomAndSeat" asp-route-showtimeId="@showtime.ShowtimeId" class="btn btn-primary btn-sm">
                                <i class="fas fa-ticket-alt me-1"></i> Chọn lịch này
                            </a>
                            @if (User.IsInRole("Admin"))
                            {
                                <div class="d-flex">
                                    <a asp-action="Edit" asp-route-id="@showtime.ShowtimeId" class="btn btn-warning btn-sm me-2">
                                        <i class="fas fa-edit"></i> Sửa
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@showtime.ShowtimeId" class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash-alt"></i> Xóa
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <!-- Nút quay lại và tạo lịch chiếu mới -->
    <div class="mt-4">
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" asp-route-movieId="@movieId" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i> Tạo lịch chiếu mới
            </a>
        }
        <a asp-controller="Movies" asp-action="Index" class="btn btn-back ms-3">
            <i class="fas fa-arrow-left me-1"></i> Quay lại danh sách phim
        </a>
    </div>
</div>

<!-- CSS tùy chỉnh -->
<style>
    body {
        background: linear-gradient(135deg, #ff9a8b 0%, #ff6a88 50%, #6b48ff 100%);
        font-family: 'Arial', sans-serif;
        color: #fff;
    }

    .showtime-card {
        border: none;
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px);
        border-radius: 15px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .showtime-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3) !important;
        }

    .card-img-top {
        border-top-left-radius: 15px;
        border-top-right-radius: 15px;
        height: 200px;
        object-fit: cover;
    }

    .card-title {
        font-size: 1.25rem;
        font-weight: bold;
        color: #fff;
    }

    .card-text {
        color: #f8f9fa;
        font-size: 0.95rem;
        margin-bottom: 0.5rem;
    }

    .card-footer {
        background: rgba(255, 255, 255, 0.1);
        border-top: none;
        border-radius: 0 0 15px 15px;
    }

    .search-form input[type="text"],
    .search-form input[type="date"],
    .search-form input[type="time"],
    .search-form select {
        width: 150px; /* Giảm chiều rộng */
        padding: 5px; /* Giảm padding */
        font-size: 14px; /* Cỡ chữ nhỏ hơn */
        border-radius: 6px; /* Bo góc nhẹ */
    }

    .search-form button {
        padding: 6px 10px;
        font-size: 14px;
        border-radius: 6px;
    }

    .btn-primary {
        background: linear-gradient(90deg, #ff6a88 0%, #6b48ff 100%);
        color: #fff;
        border: none;
        border-radius: 8px;
        transition: background 0.3s ease;
    }

        .btn-primary:hover {
            background: linear-gradient(90deg, #ff6a88 50%, #6b48ff 100%);
            transform: scale(1.05);
        }
</style>
<style>
    .admin-dashboard {
        position: fixed;
        top: 0;
        left: -300px;
        width: 300px;
        height: 100vh;
        background: linear-gradient(135deg, #222, #444);
        color: white;
        padding: 20px;
        z-index: 999;
        transition: left 0.4s ease-in-out;
        box-shadow: 5px 0 15px rgba(0, 0, 0, 0.3);
    }

    .dashboard-toggle {
        position: fixed;
        top: 20px;
        left: 10px;
        background: #222;
        color: white;
        border: none;
        padding: 12px 15px;
        font-size: 18px;
        cursor: pointer;
        z-index: 1000;
        border-radius: 50%;
        box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.3);
    }

        .dashboard-toggle:hover {
            background: #555;
        }

    .dashboard-header {
        text-align: center;
        font-size: 20px;
        margin-bottom: 20px;
    }

    .dashboard-menu {
        list-style: none;
        padding: 0;
    }

        .dashboard-menu li {
            margin-bottom: 15px;
        }

            .dashboard-menu li a {
                display: flex;
                align-items: center;
                gap: 10px;
                color: white;
                text-decoration: none;
                padding: 10px;
                border-radius: 5px;
                transition: background 0.3s ease;
            }

                .dashboard-menu li a:hover {
                    background: rgba(255, 255, 255, 0.2);
                }
</style>
<script>
    document.getElementById("toggleDashboard").addEventListener("click", function() {
        let dashboard = document.getElementById("adminDashboard");
        let toggleButton = document.getElementById("toggleDashboard");

        if (dashboard.style.left === "-300px") {
            dashboard.style.left = "0";
            toggleButton.style.left = "310px";
        } else {
            dashboard.style.left = "-300px";
            toggleButton.style.left = "10px";
        }
    });
</script>
<script>
    function resetSearch() {
        window.location.href = '/Showtimes/Search'; // Tải lại trang tìm kiếm
    }
</script>
