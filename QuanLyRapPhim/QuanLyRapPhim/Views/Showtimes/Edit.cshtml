@model QuanLyRapPhim.Models.Showtime

@{
    ViewData["Title"] = "Chỉnh sửa lịch chiếu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <h1 class="section-title mb-2">Chỉnh sửa lịch chiếu</h1>
    <h4 class="text-muted mb-4">Lịch chiếu: @Model.Title</h4>
    <hr class="border-dark" />

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card movie-card">
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="ShowtimeId" />

                        <div class="form-group mb-3">
                            <label asp-for="Title" class="control-label"></label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="MovieId" class="control-label"></label>
                            <select asp-for="MovieId" class="form-control" asp-items="ViewBag.MovieId">
                                <option value="">-- Chọn phim --</option>
                            </select>
                            <span asp-validation-for="MovieId" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="RoomId" class="control-label"></label>
                            <select asp-for="RoomId" class="form-control" asp-items="ViewBag.RoomId">
                                <option value="">-- Chọn phòng --</option>
                            </select>
                            <span asp-validation-for="RoomId" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Poster" class="control-label"></label>
                            <input asp-for="Poster" class="form-control" />
                            <span asp-validation-for="Poster" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="StartTime" class="control-label"></label>
                            <input asp-for="StartTime" class="form-control" type="time" />
                            <span asp-validation-for="StartTime" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Date" class="control-label"></label>
                            <input asp-for="Date" class="form-control" type="date" />
                            <span asp-validation-for="Date" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-4 d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i> Lưu
                            </button>
                            <a asp-action="Index" class="btn btn-back">
                                <i class="fas fa-arrow-left me-1"></i> Quay lại danh sách
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- CSS tùy chỉnh -->
<style>
    body {
        background-color: #333; /* Light red background */
        color: #1c1c1c; /* Dark text */
        font-family: 'Montserrat', sans-serif;
    }

    .container {
        padding-top: 20px;
        padding-bottom: 20px;
    }

    .section-title {
        font-size: 2.5rem;
        font-weight: 700;
        text-transform: uppercase;
        color: #1c1c1c;
        text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.2);
    }

    .text-muted {
        color: #4a4a4a !important; /* Darker muted text for contrast */
        font-size: 1.2rem;
        font-weight: 500;
    }

    .movie-card {
        background-color: #ffffff; /* White card for contrast */
        border: 2px solid #000000; /* Black border */
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
        transition: transform 0.3s ease;
    }

        .movie-card:hover {
            transform: scale(1.02);
        }

    .card-body {
        background-color: #ffffff;
        padding: 20px;
    }

    .form-control {
        background-color: #f1f1f1; /* Light gray for form inputs */
        border: 2px solid #000000; /* Black border */
        color: #1c1c1c;
        border-radius: 20px;
        font-size: 1rem;
        font-weight: 500;
        transition: border-color 0.3s ease;
    }

        .form-control:focus {
            background-color: #f1f1f1;
            border-color: #ff0033; /* Primary red for focus */
            color: #1c1c1c;
            box-shadow: 0 0 5px rgba(255, 0, 51, 0.5);
        }

    .control-label {
        color: #1c1c1c;
        font-weight: 500;
        font-size: 1.1rem;
    }

    .text-danger {
        font-size: 0.875rem;
        color: #d32f2f !important; /* Darker red for errors */
    }

    .btn-primary {
        background-color: #ff0033; /* Primary red */
        border: 2px solid #000000; /* Black border */
        border-radius: 20px;
        color: #ffffff;
        padding: 10px 20px;
        font-weight: 600;
        font-size: 1rem;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #e6002e;
            transform: scale(1.05);
        }

    .btn-back {
        background-color: #ffffff; /* White background */
        border: 2px solid #000000; /* Black border */
        color: #ff0033; /* Red text */
        border-radius: 20px;
        padding: 10px 20px;
        font-weight: 600;
        font-size: 1rem;
        transition: background-color 0.3s ease, transform 0.3s ease, color 0.3s ease;
    }

        .btn-back:hover {
            background-color: #ff0033;
            color: #ffffff;
            transform: scale(1.05);
        }

    .border-dark {
        border-color: #000000 !important; /* Black border for hr */
    }

    :root {
        --primary-color: #e50914;
        --secondary-color: #f40612;
        --dark-bg: #f8d7da; /* Light red background */
        --card-bg: #ffffff;
        --text-primary: #1c1c1c; /* Dark text */
        --text-secondary: #4a4a4a;
        --text-muted: #999999;
        --border-color: #000000; /* Black borders */
        --gradient-primary: linear-gradient(135deg, #e50914 0%, #f40612 100%);
    }
</style>

<!-- Thêm Font Awesome và Bootstrap -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}