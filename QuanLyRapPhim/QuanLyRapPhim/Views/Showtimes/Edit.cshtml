@model QuanLyRapPhim.Models.Showtime

@{
    ViewData["Title"] = "Chỉnh sửa lịch chiếu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5 position-relative">
    <!-- Các hình tròn gradient trang trí -->
    <div class="circle circle-1"></div>
    <div class="circle circle-2"></div>
    <div class="circle circle-3"></div>

    <h1 class="text-light mb-2">Chỉnh sửa lịch chiếu</h1>
    <h4 class="text-muted mb-4">Lịch chiếu: @Model.Title</h4>
    <hr />

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card movie-card text-light">
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="ShowtimeId" />

                        <div class="form-group mb-3">
                            <label asp-for="Title" class="control-label text-light"></label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="MovieId" class="control-label text-light"></label>
                            <select asp-for="MovieId" class="form-control" asp-items="ViewBag.MovieId">
                                <option value="">-- Chọn phim --</option>
                            </select>
                            <span asp-validation-for="MovieId" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="RoomId" class="control-label text-light"></label>
                            <select asp-for="RoomId" class="form-control" asp-items="ViewBag.RoomId">
                                <option value="">-- Chọn phòng --</option>
                            </select>
                            <span asp-validation-for="RoomId" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Poster" class="control-label text-light"></label>
                            <input asp-for="Poster" class="form-control" />
                            <span asp-validation-for="Poster" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="StartTime" class="control-label text-light"></label>
                            <input asp-for="StartTime" class="form-control" type="time" />
                            <span asp-validation-for="StartTime" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Date" class="control-label text-light"></label>
                            <input asp-for="Date" class="form-control" type="date" />
                            <span asp-validation-for="Date" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-4 d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i> Lưu
                            </button>
                            <a asp-action="Index" class="btn btn-back">
                                <i class="fas fa-arrow-left me-1"></i> Quay lại danh sách
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- CSS tùy chỉnh -->
<style>
    body {
        background: linear-gradient(135deg, #ff9a8b 0%, #ff6a88 50%, #6b48ff 100%);
        font-family: 'Arial', sans-serif;
        color: #fff;
    }

    .container {
        padding-top: 20px;
        padding-bottom: 20px;
    }

    .circle {
        position: absolute;
        border-radius: 50%;
        background: linear-gradient(135deg, #ff9a8b 0%, #ff6a88 50%, #6b48ff 100%);
        opacity: 0.3;
    }

    .circle-1 {
        width: 300px;
        height: 300px;
        top: -50px;
        left: -50px;
    }

    .circle-2 {
        width: 200px;
        height: 200px;
        bottom: -50px;
        left: 50px;
    }

    .circle-3 {
        width: 150px;
        height: 150px;
        top: 50%;
        left: 20%;
    }

    .movie-card {
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px);
        border-radius: 15px;
        border: none;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        padding: 20px;
    }

    .form-control {
        background-color: #2a2a2a;
        color: #e0e0e0;
        border: 1px solid #444;
        transition: border-color 0.3s ease;
    }

        .form-control:focus {
            background-color: #2a2a2a;
            color: #e0e0e0;
            border-color: #007bff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }

    .control-label {
        color: #e0e0e0;
        font-weight: 500;
    }

    .text-danger {
        font-size: 0.875rem;
    }

    .btn-primary {
        background: linear-gradient(90deg, #ff6a88 0%, #6b48ff 100%);
        color: #fff;
        border: none;
        border-radius: 8px;
        padding: 10px 20px;
        transition: background 0.3s ease;
    }

        .btn-primary:hover {
            background: linear-gradient(90deg, #ff6a88 50%, #6b48ff 100%);
            transform: scale(1.05);
        }

    .btn-back {
        background: linear-gradient(90deg, #4e54c8 0%, #8f94fb 100%);
        color: #fff;
        border: none;
        border-radius: 8px;
        padding: 10px 20px;
        transition: transform 0.3s ease, background 0.3s ease;
        font-weight: bold;
    }

        .btn-back:hover {
            background: linear-gradient(90deg, #8f94fb 0%, #4e54c8 100%);
            transform: scale(1.05);
        }

    .text-muted {
        color: #dcdcdc !important;
    }
</style>

<!-- Thêm Font Awesome và Bootstrap -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}