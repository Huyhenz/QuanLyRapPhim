@model QuanLyRapPhim.Models.Showtime

@{
    ViewData["Title"] = "Chỉnh sửa lịch chiếu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <h1 class="text-light mb-2">Chỉnh sửa lịch chiếu</h1>
    <h4 class="text-muted mb-4">Lịch chiếu: @Model.Title</h4>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ShowtimeId" />

                <div class="form-group mb-3">
                    <label asp-for="Title" class="control-label text-light"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="MovieId" class="control-label text-light"></label>
                    <select asp-for="MovieId" class="form-control" asp-items="ViewBag.MovieId">
                        <option value="">-- Chọn phim --</option>
                    </select>
                    <span asp-validation-for="MovieId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="RoomId" class="control-label text-light"></label>
                    <select asp-for="RoomId" class="form-control" asp-items="ViewBag.RoomId">
                        <option value="">-- Chọn phòng --</option>
                    </select>
                    <span asp-validation-for="RoomId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Poster" class="control-label text-light"></label>
                    <input asp-for="Poster" class="form-control" />
                    <span asp-validation-for="Poster" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="StartTime" class="control-label text-light"></label>
                    <input asp-for="StartTime" class="form-control" type="time" />
                    <span asp-validation-for="StartTime" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Date" class="control-label text-light"></label>
                    <input asp-for="Date" class="form-control" type="date" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="fas fa-save me-1"></i> Lưu
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Quay lại danh sách
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- CSS tùy chỉnh -->
<style>
    body {
        background-color: #1a1a1a;
    }

    .form-control {
        background-color: #2a2a2a;
        color: #e0e0e0;
        border: 1px solid #444;
        transition: border-color 0.3s ease;
    }

        .form-control:focus {
            background-color: #2a2a2a;
            color: #e0e0e0;
            border-color: #007bff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }

    .control-label {
        color: #e0e0e0;
        font-weight: 500;
    }

    .text-danger {
        font-size: 0.875rem;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
        transition: background-color 0.3s ease;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

    .text-muted {
        color: #a0a0a0 !important;
    }
</style>

<!-- Thêm Font Awesome để sử dụng icon -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}