@model QuanLyRapPhim.Models.Showtime

@{
    ViewData["Title"] = "Tạo lịch chiếu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5 position-relative">
    <h1 class="text-white mb-4">Tạo lịch chiếu</h1>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card movie-card text-white">
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="Title" class="control-label"></label>
                            <input asp-for="Title" class="form-control" style="background-color: #333; border: 1px solid #444; color: #fff; border-radius: 20px; font-size: 1rem; font-weight: 500;" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="MovieId" class="control-label"></label>
                            <select asp-for="MovieId" class="form-control" asp-items="ViewBag.MovieId" style="background-color: #333; border: 1px solid #444; color: #fff; border-radius: 20px; font-size: 1rem; font-weight: 500;"></select>
                            <span asp-validation-for="MovieId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="RoomId" class="control-label"></label>
                            <select asp-for="RoomId" class="form-control" asp-items="ViewBag.RoomId" style="background-color: #333; border: 1px solid #444; color: #fff; border-radius: 20px; font-size: 1rem; font-weight: 500;"></select>
                            <span asp-validation-for="RoomId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Poster" class="control-label"></label>
                            <input asp-for="Poster" class="form-control" style="background-color: #333; border: 1px solid #444; color: #fff; border-radius: 20px; font-size: 1rem; font-weight: 500;" />
                            <span asp-validation-for="Poster" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="StartTime" class="control-label"></label>
                            <input asp-for="StartTime" class="form-control" style="background-color: #333; border: 1px solid #444; color: #fff; border-radius: 20px; font-size: 1rem; font-weight: 500;" />
                            <span asp-validation-for="StartTime" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Date" class="control-label"></label>
                            <input asp-for="Date" class="form-control" type="date" style="background-color: #333; border: 1px solid #444; color: #fff; border-radius: 20px; font-size: 1rem; font-weight: 500;" />
                            <span asp-validation-for="Date" class="text-danger"></span>
                        </div>
                        <div class="form-group d-flex justify-content-between mt-4">
                            <input type="submit" value="Tạo" class="btn btn-primary" style="background-color: #ff0033; border: none; border-radius: 20px; padding: 8px 20px; font-weight: 600; font-size: 1rem;" />
                            <a asp-action="Index" class="btn btn-back" style="border-color: #ff0033; color: #ff0033; border-radius: 20px; padding: 8px 20px; font-weight: 600; font-size: 1rem;">⏪ Quay lại danh sách</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- CSS tùy chỉnh -->
<style>
    body {
        background-color: #0F0F0F; /* Galaxy Black */
        color: #ffffff;
        font-family: 'Montserrat', sans-serif;
    }

    .container {
        padding-top: 20px;
        padding-bottom: 20px;
    }

    .movie-card {
        background-color: #1c1c1c;
        border: none;
        border-radius: 15px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
        padding: 20px;
        transition: transform 0.3s ease;
    }

        .movie-card:hover {
            transform: translateY(-5px);
        }

    .form-control:focus {
        background-color: #333;
        border-color: #ffffff;
        color: #ffffff;
        box-shadow: none;
    }

    .btn-primary {
        background-color: #ff0033;
        border: none;
        border-radius: 20px;
        padding: 8px 20px;
        font-weight: 600;
        font-size: 1rem;
    }

        .btn-primary:hover {
            background-color: #e6002e;
            transform: scale(1.05);
        }

    .btn-back {
        border-color: #ff0033;
        color: #ff0033;
        border-radius: 20px;
        padding: 8px 20px;
        font-weight: 600;
        font-size: 1rem;
        text-decoration: none;
    }

        .btn-back:hover {
            background-color: #ff0033;
            color: #ffffff;
            border-color: #ff0033;
            transform: scale(1.05);
        }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}