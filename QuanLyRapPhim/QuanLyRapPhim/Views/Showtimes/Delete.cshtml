@model QuanLyRapPhim.Models.Showtime

@{
    ViewData["Title"] = "Xóa lịch chiếu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5 position-relative">
    <!-- Các hình tròn gradient trang trí -->
    <div class="circle circle-1"></div>
    <div class="circle circle-2"></div>
    <div class="circle circle-3"></div>

    <!-- Tiêu đề -->
    <h1 class="text-primary mb-4">Xóa lịch chiếu</h1>

    <!-- Cảnh báo xác nhận -->
    <div class="alert alert-warning">
        <h3 class="mb-3">Bạn có chắc chắn muốn xóa lịch chiếu này?</h3>
    </div>

    <!-- Thông tin lịch chiếu -->
    <div class="card movie-card text-light">
        <div class="card-body">
            <h4 class="mb-3">Thông tin lịch chiếu</h4>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Title)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Title)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Poster)
                </dt>
                <dd class="col-sm-10">
                    <img src="@Model.Poster" class="img-fluid rounded" alt="@Model.Title" />
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.StartTime)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.StartTime)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Date)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Date)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Movie)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Movie.Title)
                </dd>
            </dl>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-back">
                ⏪ Quay lại danh sách
            </a>
            <form asp-action="Delete" method="post" class="d-inline">
                <input type="hidden" asp-for="ShowtimeId" />
                <input type="submit" value="Xóa" class="btn btn-danger" />
            </form>
        </div>
    </div>
</div>

<!-- CSS tùy chỉnh -->
<style>
    body {
        background: linear-gradient(135deg, #ff9a8b 0%, #ff6a88 50%, #6b48ff 100%);
        font-family: 'Arial', sans-serif;
        color: #fff;
    }

    .container {
        padding-top: 20px;
        padding-bottom: 20px;
    }

    .circle {
        position: absolute;
        border-radius: 50%;
        background: linear-gradient(135deg, #ff9a8b 0%, #ff6a88 50%, #6b48ff 100%);
        opacity: 0.3;
    }

    .circle-1 {
        width: 300px;
        height: 300px;
        top: -50px;
        left: -50px;
    }

    .circle-2 {
        width: 200px;
        height: 200px;
        bottom: -50px;
        left: 50px;
    }

    .circle-3 {
        width: 150px;
        height: 150px;
        top: 50%;
        left: 20%;
    }

    .movie-card {
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px);
        border-radius: 15px;
        border: none;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }

    .text-primary {
        color: #fff;
        font-weight: bold;
    }

    .btn-back {
        background: linear-gradient(90deg, #4e54c8 0%, #8f94fb 100%);
        color: #fff;
        border: none;
        border-radius: 8px;
        padding: 10px 20px;
        transition: transform 0.3s ease, background 0.3s ease;
        display: flex;
        align-items: center;
        gap: 5px;
        font-weight: bold;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }

        .btn-back:hover {
            background: linear-gradient(90deg, #8f94fb 0%, #4e54c8 100%);
            transform: scale(1.05);
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.3);
        }

    .btn-danger {
        background-color: #ff4444;
        color: #fff;
        border: none;
        border-radius: 8px;
        padding: 10px 20px;
        transition: background 0.3s ease;
    }

        .btn-danger:hover {
            background-color: #cc0000;
            transform: scale(1.05);
        }
</style>