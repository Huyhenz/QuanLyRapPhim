@model QuanLyRapPhim.Models.Showtime

@{
    ViewData["Title"] = "Xóa lịch chiếu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <h1 class="text-white mb-2 title-gradient">Xóa lịch chiếu</h1>
    <h4 class="text-muted mb-4">Lịch chiếu: @Model.Title</h4>
    <hr />

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card movie-card text-light glow-effect">
                <div class="card-body">
                    <h5 class="text-danger mb-4">Bạn có chắc chắn muốn xóa lịch chiếu này?</h5>
                    <dl class="row">
                        <dt class="col-sm-4">Tiêu đề</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Title)</dd>

                        <dt class="col-sm-4">Phim</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Movie.Title)</dd>

                        <dt class="col-sm-4">Phòng chiếu</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Room.RoomName)</dd>

                        <dt class="col-sm-4">Poster</dt>
                        <dd class="col-sm-8">
                            <img src="@Model.Poster" alt="@Model.Title" style="max-width: 200px; border-radius: 8px;" />
                        </dd>

                        <dt class="col-sm-4">Giờ chiếu</dt>
                        <dd class="col-sm-8">@Model.StartTime.ToString(@"hh\:mm")</dd>

                        <dt class="col-sm-4">Ngày chiếu</dt>
                        <dd class="col-sm-8">@Model.Date.ToString("dd/MM/yyyy")</dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="ShowtimeId" />
                        <div class="form-group mt-4 d-flex justify-content-between">
                            <button type="submit" class="btn btn-danger glow-effect">
                                <i class="fas fa-trash-alt me-1"></i> Xóa
                            </button>
                            <a asp-action="Index" class="btn btn-secondary glow-effect">
                                <i class="fas fa-arrow-left me-1"></i> Hủy
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- CSS tùy chỉnh -->
<style>
    body {
        background-color: #0F0F0F; /* Galaxy Black */
        color: #ffffff;
        font-family: 'Montserrat', sans-serif;
    }

    .title-gradient {
        background: linear-gradient(90deg, #ff0033, #1c1c1c);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        color: transparent;
    }

    .glow-effect {
        box-shadow: 0 0 15px rgba(255, 0, 51, 0.3);
        transition: box-shadow 0.3s ease, transform 0.3s ease;
    }

        .glow-effect:hover {
            box-shadow: 0 0 25px rgba(255, 0, 51, 0.5);
            transform: scale(1.05);
        }

    .movie-card {
        background-color: #1c1c1c;
        border: none;
        border-radius: 15px;
    }

        .movie-card .card-body {
            background-color: #1c1c1c;
            border-radius: 15px;
        }

    .text-danger {
        color: #e6002e !important;
    }

    .text-muted {
        color: #b3b3b3 !important;
    }

    dl.row dt, dd {
        margin-bottom: 10px;
        color: #b3b3b3;
    }

    dl.row dd {
        color: #ffffff;
    }

    .btn-danger {
        background-color: #e6002e;
        border: none;
        border-radius: 20px;
        padding: 10px 20px;
        font-weight: 600;
        font-size: 1rem;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

        .btn-danger:hover {
            background-color: #cc0027;
            transform: scale(1.05);
        }

    .btn-secondary {
        border-color: #ff0033;
        color: #ff0033;
        border-radius: 20px;
        padding: 10px 20px;
        font-weight: 600;
        font-size: 1rem;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

        .btn-secondary:hover {
            background-color: #ff0033;
            color: #ffffff;
            border-color: #ff0033;
            transform: scale(1.05);
        }
</style>

