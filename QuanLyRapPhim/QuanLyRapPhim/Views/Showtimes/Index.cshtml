@model IEnumerable<QuanLyRapPhim.Models.Showtime>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["SelectShowtime"].Value;
    Layout = "~/Views/Shared/_Layout.cshtml";
    var movieId = ViewBag.MovieId;
    var movieTitle = ViewBag.MovieTitle ?? Localizer["UnknownMovie"].Value;
    bool isAdmin = User.IsInRole("Admin");
}
<div class="container-fluid d-flex position-relative">
    <!-- Include Christmas Dashboard -->
    @Html.Partial("_ChristmasDashboard")

    <!-- MAIN CONTENT -->
    <div class="frame-wrapper flex-grow-1 @(isAdmin ? "admin-view" : "")">
        <div class="content-inner">
            <h2 class="page-title">@Localizer["SelectShowtime"]</h2>
            <h4 class="text-white mb-4">@Localizer["Movie"] @movieTitle</h4>
            <!-- Search Form -->
            <form class="search-form d-flex mb-4" asp-controller="Showtimes" asp-action="Search" method="get">
                <input type="hidden" name="movieId" value="@movieId" />
                <input class="form-control me-2 search-input" type="text" name="searchTitle" placeholder="@Localizer["EnterMovieName"]..."
                       value="@Context.Request.Query["searchTitle"]">
                <input class="form-control me-2 search-input" type="date" name="startDate" placeholder="@Localizer["FromDate"]"
                       value="@Context.Request.Query["startDate"]">
                <input class="form-control me-2 search-input" type="date" name="endDate" placeholder="@Localizer["ToDate"]"
                       value="@Context.Request.Query["endDate"]">
                <select class="form-control me-2 search-input" name="genre">
                    <option value="">@Localizer["SelectGenre"]...</option>
                    @foreach (var genre in new[] {
                    Localizer["Action"].Value,
                    Localizer["Romance"].Value,
                    Localizer["Horror"].Value,
                    Localizer["Animation"].Value,
                    Localizer["SciFi"].Value,
                    Localizer["War"].Value,
                    Localizer["Comedy"].Value,
                    Localizer["Fantasy"].Value
                    })
                    {
                        <option value="@genre" selected="@(Context.Request.Query["genre"] == genre ? "selected" : null)">
                            @genre
                        </option>
                    }
                </select>
                <button class="btn btn-primary me-2 search-btn" type="submit"><i class="fas fa-search"></i> @Localizer["Search"]</button>
                <button class="btn btn-secondary search-btn" type="button" onclick="window.location.href='/Showtimes?movieId=@movieId'"><i class="fas fa-sync-alt"></i> @Localizer["ReloadPage"]</button>
            </form>
            <!-- Thông báo lỗi nếu không có lịch chiếu -->
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-warning" role="alert" style="background-color: #1c1c1c; color: #fff; border: 1px solid #ff0033; border-radius: 10px;">
                    @ViewBag.ErrorMessage
                </div>
            }
            else
            {
                <!-- Danh sách lịch chiếu -->
                <div class="row">
                    @foreach (var showtime in Model)
                    {
                        <div class="col-md-4 col-lg-3 mb-4">
                            <div class="card showtime-card h-100 shadow-sm">
                                <img src="@showtime.Poster" class="card-img-top" alt="@showtime.Title" style="height: 200px; object-fit: cover;" />
                                <div class="card-body">
                                    <h5 class="card-title text-white">@showtime.Title</h5>
                                    <p class="card-text">
                                        <i class="fas fa-calendar-alt text-primary me-2"></i>
                                        <strong>@Localizer["ShowDate"]:</strong> @showtime.Date.ToString("dd/MM/yyyy")
                                    </p>
                                    <p class="card-text">
                                        <i class="fas fa-clock text-primary me-2"></i>
                                        <strong>@Localizer["ShowTime"]:</strong>
                                        @DateTime.Today.Add(showtime.StartTime).ToString("hh:mm tt")
                                    </p>
                                    <p class="card-text">
                                        <i class="fas fa-door-open text-primary me-2"></i>
                                        <strong>@Localizer["Room"]:</strong> @showtime.Room?.RoomName
                                    </p>
                                </div>
                                <div class="card-footer d-flex justify-content-between">
                                    <a asp-controller="Tickets" asp-action="SelectRoomAndSeat" asp-route-showtimeId="@showtime.ShowtimeId" class="btn btn-primary btn-sm" style="background-color: #ff0033; border: none; border-radius: 20px; padding: 5px 15px; font-weight: 600;">
                                        <i class="fas fa-ticket-alt me-1"></i> @Localizer["SelectThisShowtime"]
                                    </a>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <div class="d-flex">
                                            <a asp-controller="Showtimes" asp-action="Edit" asp-route-id="@showtime.ShowtimeId" class="btn btn-warning btn-sm me-2" style="background-color: #ffcc00; border: none; border-radius: 20px; padding: 5px 15px; font-weight: 600; color: #000;">
                                                <i class="fas fa-edit"></i> @Localizer["Edit"]
                                            </a>
                                            <a asp-controller="Showtimes" asp-action="Delete" asp-route-id="@showtime.ShowtimeId" class="btn btn-danger btn-sm" style="background-color: #e6002e; border: none; border-radius: 20px; padding: 5px 15px; font-weight: 600;">
                                                <i class="fas fa-trash-alt"></i> @Localizer["Delete"]
                                            </a>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            @if (!Model.Any() && ViewBag.ErrorMessage == null)
            {
                <div class="alert alert-danger text-center" style="background-color: #1c1c1c; color: #fff; border: 1px solid #e6002e; border-radius: 10px;">
                    <i class="fas fa-exclamation-circle"></i> @Localizer["NoShowtimesAvailable"]
                </div>
            }
            <!-- Nút quay lại, tạo lịch chiếu và quay lại danh sách phim -->
            <div class="mt-4">
                @if (User.IsInRole("Admin"))
                {
                    <a asp-controller="Showtimes" asp-action="Create" asp-route-movieId="@movieId" class="btn btn-success ms-3" style="background-color: #00cc00; border: none; border-radius: 20px; padding: 8px 20px; font-weight: 600;">
                        <i class="fas fa-plus me-1"></i> @Localizer["CreateNewShowtime"]
                    </a>
                }
                <a asp-controller="Movies" asp-action="Index" class="btn btn-info ms-3" style="background-color: #00bfff; border: none; border-radius: 20px; padding: 8px 20px; font-weight: 600;">
                    <i class="fas fa-list me-1"></i> @Localizer["BackToMovieList"]
                </a>
            </div>
        </div>
    </div>
    <footer class="footer text-center py-3">
        <p class="text-white mb-0">© 2025 CinemaX. All rights reserved.</p>
    </footer>
</div>
<style>
    body {
        margin: 0;
        background-color: #0F0F0F;
        color: #ffffff;
        font-family: 'Montserrat', sans-serif;
        overflow-x: hidden;
    }

    .frame-wrapper.admin-view {
        margin-left: 280px;
        transition: margin-left 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55);
    }

        .frame-wrapper.admin-view.shifted {
            margin-left: 0;
        }

    .content-inner {
        max-width: 1200px;
        width: 100%;
    }

    .page-title {
        background-color: #1c1c1c;
        color: #fff;
        padding: 15px;
        text-align: center;
        border-radius: 15px;
        font-family: 'Montserrat', sans-serif;
        font-weight: 700;
        text-transform: uppercase;
        margin-bottom: 20px;
    }

    .showtime-card {
        border: none;
        background-color: #1c1c1c;
        border-radius: 15px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .showtime-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
        }

    .card-img-top {
        border-top-left-radius: 15px;
        border-top-right-radius: 15px;
        height: 200px;
        object-fit: cover;
    }

    .card-title {
        font-size: 1.25rem;
        font-weight: bold;
        color: #fff;
    }

    .card-text {
        color: #b3b3b3;
        font-size: 0.95rem;
        margin-bottom: 0.5rem;
    }

    .card-footer {
        background-color: #1c1c1c;
        border-top: none;
        border-radius: 0 0 15px 15px;
    }

    .search-form {
        display: flex;
        align-items: center;
        flex-wrap: wrap;
        gap: 8px;
    }

    .search-input {
        background-color: #1c1c1c;
        border: 1px solid #ff0033;
        color: #ffffff;
        border-radius: 15px;
        font-size: 0.85rem;
        font-weight: 500;
        padding: 4px 8px;
        width: 150px;
        height: 32px;
    }

        .search-input:focus {
            background-color: #1c1c1c;
            border-color: #ff0033;
            color: #ffffff;
            box-shadow: 0 0 5px rgba(255, 0, 51, 0.5);
        }

    .search-btn {
        border-radius: 15px;
        padding: 4px 12px;
        font-size: 0.85rem;
        font-weight: 600;
        height: 32px;
        display: flex;
        align-items: center;
    }

    .btn-primary.search-btn {
        background-color: #ff0033;
        border: none;
    }

        .btn-primary.search-btn:hover {
            background-color: #e6002e;
            transform: scale(1.05);
        }

    .btn-secondary.search-btn {
        border-color: #ff0033;
        color: #ff0033;
    }

        .btn-secondary.search-btn:hover {
            background-color: #ff0033;
            color: #ffffff;
            border-color: #ff0033;
        }

    .btn-warning {
        background-color: #ffcc00;
        border: none;
        border-radius: 20px;
        padding: 5px 15px;
        font-weight: 600;
        color: #000;
    }

        .btn-warning:hover {
            background-color: #e6b800;
        }

    .btn-danger {
        background-color: #e6002e;
        border: none;
        border-radius: 20px;
        padding: 5px 15px;
        font-weight: 600;
    }

        .btn-danger:hover {
            background-color: #cc0026;
        }

    .btn-success {
        background-color: #00cc00;
        border: none;
        border-radius: 20px;
        padding: 8px 20px;
        font-weight: 600;
    }

        .btn-success:hover {
            background-color: #00b300;
        }

    .btn-info {
        background-color: #00bfff;
        border: none;
        border-radius: 20px;
        padding: 8px 20px;
        font-weight: 600;
    }

        .btn-info:hover {
            background-color: #00a3cc;
        }

    .alert-warning {
        background-color: #1c1c1c;
        color: #fff;
        border: 1px solid #ff0033;
        border-radius: 10px;
    }

    .alert-danger {
        background-color: #1c1c1c;
        color: #fff;
        border: 1px solid #e6002e;
        border-radius: 10px;
    }

    @@media (max-width: 768px) {
        .frame-wrapper.admin-view

    {
        margin-left: 220px;
    }

    .frame-wrapper.admin-view.shifted {
        margin-left: 0;
    }

    .search-input {
        width: 120px;
        font-size: 0.8rem;
        height: 28px;
    }

    .search-btn {
        font-size: 0.8rem;
        padding: 4px 10px;
        height: 28px;
    }

    }

    @@media (max-width: 576px) {
        .container-fluid.d-flex

    {
        flex-direction: column;
    }

    .frame-wrapper.admin-view {
        margin-left: 0;
        width: 100%;
        min-height: auto;
    }

    .content-inner {
        width: 100%;
        padding: 20px;
    }

    .search-form {
        flex-direction: column;
        align-items: stretch;
    }

    .search-input, .search-btn {
        width: 100%;
        margin: 5px 0;
    }

    .search-btn {
        justify-content: center;
    }

    }
</style>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const toggleBtn = document.getElementById('sidebar-toggle');
        const sidebar = document.querySelector('.christmas-sidebar');
        const frameWrapper = document.querySelector('.frame-wrapper');
        if (toggleBtn && sidebar && frameWrapper) {
            toggleBtn.addEventListener('click', function() {
                sidebar.classList.toggle('collapsed');
                frameWrapper.classList.toggle('shifted');
                const icon = toggleBtn.querySelector('i');
                if (sidebar.classList.contains('collapsed')) {
                    icon.className = 'fas fa-bars';
                } else {
                    icon.className = 'fas fa-times';
                }
            });
        }
    });
</script>