@model IEnumerable<QuanLyRapPhim.Models.Showtime>

@{
    ViewData["Title"] = "Chọn lịch chiếu";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var movieId = ViewBag.MovieId;
    var movieTitle = Model.FirstOrDefault()?.Movie?.Title ?? "Phim không xác định";
}

<div class="container my-5">
    <!-- Tiêu đề -->
    <h1 class="text-white mb-2">Chọn lịch chiếu</h1>
    @* <h4 class="text-white mb-4">Phim: @movieTitle</h4> *@

    <form class="search-form d-flex mb-4" asp-controller="Showtimes" asp-action="Search" method="get">
        <input class="form-control me-2" type="text" name="searchTitle" placeholder="Nhập tên phim..."
               value="@Context.Request.Query["searchTitle"]" style="background-color: #333; border: 1px solid #444; color: #fff; border-radius: 20px; font-size: 1rem; font-weight: 500;">

        <input class="form-control me-2" type="date" name="startDate" placeholder="Từ ngày"
               value="@Context.Request.Query["startDate"]" style="background-color: #333; border: 1px solid #444; color: #fff; border-radius: 20px; font-size: 1rem; font-weight: 500;">

        <input class="form-control me-2" type="date" name="endDate" placeholder="Đến ngày"
               value="@Context.Request.Query["endDate"]" style="background-color: #333; border: 1px solid #444; color: #fff; border-radius: 20px; font-size: 1rem; font-weight: 500;">

        <select class="form-control me-2" name="genre" style="background-color: #333; border: 1px solid #444; color: #fff; border-radius: 20px; font-size: 1rem; font-weight: 500;">
            <option value="">Chọn thể loại...</option>
            @foreach (var genre in new[] { "Hành động", "Tình cảm", "Kinh dị", "Hoạt hình", "Khoa học viễn tưởng", "Chiến tranh", "Hài hước", "Viễn tưởng" })
            {
                <option value="@genre" selected="@(Context.Request.Query["genre"] == genre ? "selected" : null)">
                    @genre
                </option>
            }
        </select>

        <button class="btn btn-primary me-2" type="submit" style="background-color: #ff0033; border: none; border-radius: 20px; padding: 8px 20px; font-weight: 600; font-size: 1rem;"><i class="fas fa-search"></i> Tìm kiếm</button>

        <button class="btn btn-secondary" type="button" onclick="resetSearch()" style="border-color: #ff0033; color: #ff0033; border-radius: 20px; padding: 8px 20px; font-weight: 600; font-size: 1rem;"><i class="fas fa-sync-alt"></i> Load lại trang</button>
    </form>
    <!-- Thông báo lỗi nếu không có lịch chiếu -->
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-warning" role="alert" style="background-color: #333; color: #fff; border: 1px solid #444; border-radius: 10px;">
            @ViewBag.ErrorMessage
        </div>
    }
    else
    {
        <!-- Danh sách lịch chiếu -->
        <div class="row">
            @foreach (var showtime in Model)
            {
                <div class="col-md-4 col-lg-3 mb-4">
                    <div class="card showtime-card h-100 shadow-sm">
                        <!-- Poster phim -->
                        <img src="@showtime.Poster" class="card-img-top" alt="@showtime.Title" style="height: 200px; object-fit: cover;" />
                        <div class="card-body">
                            <h5 class="card-title text-white">@showtime.Title</h5>
                            <p class="card-text">
                                <i class="fas fa-calendar-alt text-primary me-2"></i>
                                <strong>Ngày chiếu:</strong> @showtime.Date.ToString("dd/MM/yyyy")
                            </p>
                            <p class="card-text">
                                <i class="fas fa-clock text-primary me-2"></i>
                                <strong>Giờ chiếu:</strong> @showtime.StartTime
                            </p>
                        </div>
                        <div class="card-footer d-flex justify-content-between" style="background-color: #1c1c1c; border-top: none; border-radius: 0 0 15px 15px;">
                            <!-- Chọn lịch chiếu -->
                            <a asp-controller="Tickets" asp-action="SelectRoomAndSeat" asp-route-showtimeId="@showtime.ShowtimeId" class="btn btn-primary btn-sm" style="background-color: #ff0033; border: none; border-radius: 20px; padding: 5px 15px; font-weight: 600;">
                                <i class="fas fa-ticket-alt me-1"></i> Chọn lịch này
                            </a>

                            <!-- Chỉ hiển thị nếu là Admin -->
                            @if (User.IsInRole("Admin"))
                            {
                                <div class="d-flex">
                                    <a asp-controller="Showtimes" asp-action="Edit" asp-route-id="@showtime.ShowtimeId" class="btn btn-warning btn-sm me-2" style="background-color: #ffcc00; border: none; border-radius: 20px; padding: 5px 15px; font-weight: 600; color: #000;">
                                        <i class="fas fa-edit"></i> Sửa
                                    </a>
                                    <a asp-controller="Showtimes" asp-action="Delete" asp-route-id="@showtime.ShowtimeId" class="btn btn-danger btn-sm" style="background-color: #e6002e; border: none; border-radius: 20px; padding: 5px 15px; font-weight: 600;">
                                        <i class="fas fa-trash-alt"></i> Xóa
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    @if (!Model.Any())
    {
        <div class="alert alert-danger text-center" style="background-color: #333; color: #fff; border: 1px solid #e6002e; border-radius: 10px;">
            <i class="fas fa-exclamation-circle"></i> Không có phim này!
        </div>
    }

    <!-- Nút quay lại, tạo lịch chiếu và quay lại danh sách phim -->
    <div class="mt-4">
        <!-- New Button to Create Showtime -->
        @if (User.IsInRole("Admin"))
        {
            <a asp-controller="Showtimes" asp-action="Create" asp-route-movieId="@movieId" class="btn btn-success ms-3" style="background-color: #00cc00; border: none; border-radius: 20px; padding: 8px 20px; font-weight: 600;">
                <i class="fas fa-plus me-1"></i> Tạo lịch chiếu mới
            </a>
        }

        <!-- New Button to go back to Movie List -->
        <a asp-controller="Movies" asp-action="Index" class="btn btn-info ms-3" style="background-color: #00bfff; border: none; border-radius: 20px; padding: 8px 20px; font-weight: 600;">
            <i class="fas fa-list me-1"></i> Quay lại danh sách phim
        </a>
    </div>
</div>

@if (User.IsInRole("Admin"))
{
    <button id="toggleDashboard" class="dashboard-toggle"><i class="fas fa-bars"></i></button>
    <aside id="adminDashboard" class="admin-dashboard">
        <div class="dashboard-header">
            <h4><i class="fas fa-user-shield"></i> Quản lý Admin</h4>
        </div>
        <ul class="dashboard-menu">
            <li><a href="/Admin/Index"><i class="fas fa-chart-line"></i> Dashboard</a></li>
            <li><a href="/Movies"><i class="fas fa-film"></i> Danh sách phim</a></li>
            <li><a href="/Showtimes"><i class="fas fa-clock"></i> Lịch chiếu</a></li>
            <li><a href="/Rooms"><i class="fas fa-door-open"></i> Quản lý phòng</a></li>
            <li><a href="/Seats"><i class="fas fa-chair"></i> Quản lý ghế</a></li>
            <li><a href="/Admin/ManageBookings"><i class="fas fa-ticket-alt"></i> Quản lý đặt vé</a></li>
            <li><a href="/Admin/RevenueStatistics"><i class="fas fa-file-alt"></i> Báo cáo thống kê</a></li>
        </ul>
    </aside>
}
