            transform: scale(1.05);
        }

    .btn-secondary {
        border-color: #ff0033;
        color: #ff0033;
        border-radius: 20px;
        padding: 8px 20px;
        font-weight: 600;
        font-size: 1rem;
    }

        .btn-secondary:hover {
            background-color: #ff0033;
            color: #ffffff;
            border-color: #ff0033;
        }

    .btn-warning {
        background-color: #ffcc00;
        border: none;
        border-radius: 20px;
        padding: 5px 15px;
        font-weight: 600;
        color: #000;
    }

        .btn-warning:hover {
            background-color: #e6b800;
        }

    .btn-danger {
        background-color: #e6002e;
        border: none;
        border-radius: 20px;
        padding: 5px 15px;
        font-weight: 600;
    }

        .btn-danger:hover {
            background-color: #cc0026;
        }

    .btn-success {
        background-color: #00cc00;
        border: none;
        border-radius: 20px;
        padding: 8px 20px;
        font-weight: 600;
    }

        .btn-success:hover {
            background-color: #00b300;
        }

    .btn-info {
        background-color: #00bfff;
        border: none;
        border-radius: 20px;
        padding: 8px 20px;
        font-weight: 600;
    }

        .btn-info:hover {
            background-color: #00a3cc;
        }

    .alert-warning {
        background-color: #333;
        color: #fff;
        border: 1px solid #444;
        border-radius: 10px;
    }

    .alert-danger {
        background-color: #333;
        color: #fff;
        border: 1px solid #e6002e;
        border-radius: 10px;
    }

    .admin-dashboard {
        position: fixed;
        top: 0;
        left: -300px;
        width: 300px;
        height: 100vh;
        background: #333;
        color: #ffffff;
        padding: 20px;
        z-index: 999;
        transition: left 0.4s ease-in-out;
        box-shadow: 5px 0 15px rgba(0, 0, 0, 0.3);
    }

    .dashboard-toggle {
        position: fixed;
        top: 20px;
        left: 10px;
        background: #ff0033;
        color: #ffffff;
        border: none;
        padding: 12px 15px;
        font-size: 18px;
        cursor: pointer;
        z-index: 1000;
        border-radius: 50%;
        box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.3);
    }

        .dashboard-toggle:hover {
            background: #e6002e;
        }

    .dashboard-header {
        text-align: center;
        font-size: 20px;
        margin-bottom: 20px;
        font-weight: 600;
    }

    .dashboard-menu {
        list-style: none;
        padding: 0;
    }

        .dashboard-menu li {
            margin-bottom: 15px;
        }

            .dashboard-menu li a {
                display: flex;
                align-items: center;
                gap: 10px;
                color: #ffffff;
                text-decoration: none;
                padding: 10px;
                border-radius: 5px;
                transition: background 0.3s ease;
                font-weight: 500;
            }

                .dashboard-menu li a:hover {
                    background: #ff4040;
                }
</style>
