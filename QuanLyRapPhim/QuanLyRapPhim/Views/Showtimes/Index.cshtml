@model IEnumerable<QuanLyRapPhim.Models.Showtime>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["SelectShowtime"].Value;
    Layout = "~/Views/Shared/_Layout.cshtml";
    var movieId = ViewBag.MovieId;
    var movieTitle = ViewBag.MovieTitle ?? Localizer["UnknownMovie"].Value;
    bool isAdmin = User.IsInRole("Admin");
}

<div class="dashboard-container">
    @if (isAdmin)
    {
        <!-- Sidebar Toggle Button -->
        <button id="sidebar-toggle" class="sidebar-toggle">
            <i class="fas fa-bars"></i>
        </button>

        <!-- Admin Sidebar -->
        <aside class="admin-sidebar" id="admin-sidebar">
            <div class="sidebar-header">
                <h3 class="sidebar-brand">
                    <i class="fas fa-film"></i>
                    <span class="brand-text">CinemaX Admin</span>
                </h3>
            </div>

            <nav class="sidebar-menu">
                <a href="/Admin/Index" class="menu-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Admin" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")">
                    <i class="fas fa-tachometer-alt"></i>
                    <span class="menu-text">@Localizer["Dashboard"]</span>
                </a>
                <a href="/Movies" class="menu-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Movies" ? "active" : "")">
                    <i class="fas fa-film"></i>
                    <span class="menu-text">@Localizer["ManageMovies"]</span>
                </a>
                <a href="/Showtimes" class="menu-item active">
                    <i class="fas fa-clock"></i>
                    <span class="menu-text">@Localizer["ManageShowtimes"]</span>
                </a>
                <a href="/Rooms" class="menu-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Rooms" ? "active" : "")">
                    <i class="fas fa-door-open"></i>
                    <span class="menu-text">@Localizer["ManageRooms"]</span>
                </a>
                <a href="/Seats" class="menu-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Seats" ? "active" : "")">
                    <i class="fas fa-chair"></i>
                    <span class="menu-text">@Localizer["ManageSeats"]</span>
                </a>
                <a href="/Admin/ManageFoods" class="menu-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "ManageFoods" ? "active" : "")">
                    <i class="fas fa-utensils"></i>
                    <span class="menu-text">@Localizer["ManageFoods"]</span>
                </a>
                <a href="/Admin/ManageBookings" class="menu-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "ManageBookings" ? "active" : "")">
                    <i class="fas fa-ticket-alt"></i>
                    <span class="menu-text">@Localizer["ManageBookings"]</span>
                </a>
                <a href="/Admin/FailedBookings" class="menu-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "FailedBookings" ? "active" : "")">
                    <i class="fas fa-times-circle"></i>
                    <span class="menu-text">@Localizer["FailedBookings"]</span>
                </a>
                <a href="/Admin/RevenueStatistics" class="menu-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "RevenueStatistics" ? "active" : "")">
                    <i class="fas fa-chart-bar"></i>
                    <span class="menu-text">@Localizer["RevenueStatistics"]</span>
                </a>
                <a href="/Vouchers" class="menu-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Vouchers" ? "active" : "")">
                    <i class="fas fa-gift"></i>
                    <span class="menu-text">@Localizer["Vouchers"]</span>
                </a>

                <div class="menu-divider"></div>

                <a href="#" class="menu-item social-link">
                    <i class="fab fa-facebook"></i>
                    <span class="menu-text">Facebook</span>
                </a>
                <a href="#" class="menu-item social-link">
                    <i class="fab fa-twitter"></i>
                    <span class="menu-text">Twitter</span>
                </a>
                <a href="#" class="menu-item social-link">
                    <i class="fab fa-google"></i>
                    <span class="menu-text">Google</span>
                </a>
            </nav>
        </aside>
    }

    <!-- Main Content Area -->
    <main class="main-content @(isAdmin ? "with-sidebar" : "")">
        <div class="content-wrapper">
            <!-- Page Header -->
            <div class="page-header">
                <div class="header-left">
                    <h1 class="page-title">
                        <i class="fas fa-clock me-2"></i>
                        @Localizer["SelectShowtime"]
                    </h1>
                    <p class="page-subtitle">@Localizer["Movie"]: @movieTitle</p>
                </div>
                @if (isAdmin)
                {
                    <div class="header-actions">
                        <a asp-controller="Showtimes" asp-action="Create" asp-route-movieId="@movieId"
                           class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>
                            @Localizer["CreateNewShowtime"]
                        </a>
                        <a asp-controller="Movies" asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-list me-2"></i>
                            @Localizer["BackToMovieList"]
                        </a>
                    </div>
                }
            </div>

            <!-- Alert Messages -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Search Section -->
            <div class="search-section">
                <form class="search-form" asp-controller="Showtimes" asp-action="Search" method="get">
                    <input type="hidden" name="movieId" value="@movieId" />

                    <div class="search-group">
                        <input class="form-control search-input" type="text" name="searchTitle"
                               placeholder="@Localizer["EnterMovieName"]..."
                               value="@Context.Request.Query["searchTitle"]">
                    </div>

                    <div class="search-group">
                        <input class="form-control search-input" type="date" name="startDate"
                               placeholder="@Localizer["FromDate"]"
                               value="@Context.Request.Query["startDate"]">
                    </div>

                    <div class="search-group">
                        <input class="form-control search-input" type="date" name="endDate"
                               placeholder="@Localizer["ToDate"]"
                               value="@Context.Request.Query["endDate"]">
                    </div>

                    <div class="search-group">
                        <select class="form-control search-input" name="genre">
                            <option value="">@Localizer["SelectGenre"]...</option>
                            @foreach (var genre in new[] {
                            Localizer["Action"].Value,
                            Localizer["Romance"].Value,
                            Localizer["Horror"].Value,
                            Localizer["Animation"].Value,
                            Localizer["SciFi"].Value,
                            Localizer["War"].Value,
                            Localizer["Comedy"].Value,
                            Localizer["Fantasy"].Value
                            })
                            {
                                <option value="@genre" selected="@(Context.Request.Query["genre"] == genre ? "selected" : null)">
                                    @genre
                                </option>
                            }
                        </select>
                    </div>

                    <div class="search-buttons">
                        <button class="btn btn-primary" type="submit">
                            <i class="fas fa-search"></i>
                            @Localizer["Search"]
                        </button>
                        <button class="btn btn-secondary" type="button"
                                onclick="window.location.href='/Showtimes?movieId=@movieId'">
                            <i class="fas fa-sync-alt"></i>
                            @Localizer["ReloadPage"]
                        </button>
                    </div>
                </form>
            </div>

            <!-- Error Message -->
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    @ViewBag.ErrorMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            else
            {
                <!-- Showtimes Grid -->
                @if (Model.Any())
                {
                    <div class="showtimes-grid">
                        @foreach (var showtime in Model)
                        {
                            <div class="showtime-card">
                                <div class="card-image">
                                    <img src="@showtime.Poster" alt="@showtime.Title" />
                                    <div class="card-overlay">
                                        <i class="fas fa-play-circle"></i>
                                    </div>
                                </div>
                                <div class="card-content">
                                    <h3 class="card-title">@showtime.Title</h3>
                                    <div class="card-details">
                                        <div class="detail-item">
                                            <i class="fas fa-calendar-alt"></i>
                                            <span>@showtime.Date.ToString("dd/MM/yyyy")</span>
                                        </div>
                                        <div class="detail-item">
                                            <i class="fas fa-clock"></i>
                                            <span>@DateTime.Today.Add(showtime.StartTime).ToString("hh:mm tt")</span>
                                        </div>
                                        <div class="detail-item">
                                            <i class="fas fa-door-open"></i>
                                            <span>@showtime.Room?.RoomName</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <a asp-controller="Tickets" asp-action="SelectRoomAndSeat"
                                       asp-route-showtimeId="@showtime.ShowtimeId"
                                       class="btn btn-primary btn-block">
                                        <i class="fas fa-ticket-alt me-2"></i>
                                        @Localizer["SelectThisShowtime"]
                                    </a>
                                    @if (isAdmin)
                                    {
                                        <div class="admin-actions">
                                            <a asp-controller="Showtimes" asp-action="Edit"
                                               asp-route-id="@showtime.ShowtimeId"
                                               class="btn btn-sm btn-warning">
                                                <i class="fas fa-edit me-1"></i>
                                                @Localizer["Edit"]
                                            </a>
                                            <a asp-controller="Showtimes" asp-action="Delete"
                                               asp-route-id="@showtime.ShowtimeId"
                                               class="btn btn-sm btn-danger">
                                                <i class="fas fa-trash-alt me-1"></i>
                                                @Localizer["Delete"]
                                            </a>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="empty-state">
                        <i class="fas fa-film-slash"></i>
                        <p>@Localizer["NoShowtimesAvailable"]</p>
                    </div>
                }
            }
        </div>

        <!-- Footer -->
        <footer class="dashboard-footer">
            <p class="mb-0">
                @Localizer["Copyright"] 2025 CinemaX. @Localizer["AllRightsReserved"]
            </p>
        </footer>
    </main>
</div>

<style>
    /* Reset & Base Styles */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Inter', 'Segoe UI', sans-serif;
        background: linear-gradient(135deg, #0a0a0a 0%, #1a1a1a 100%);
        color: #e0e0e0;
        overflow-x: hidden;
    }

    /* Dashboard Container */
    .dashboard-container {
        display: flex;
        min-height: 100vh;
        position: relative;
    }

    /* Sidebar Toggle Button */
    .sidebar-toggle {
        position: fixed;
        top: 20px;
        left: 20px;
        z-index: 1100;
        background: linear-gradient(135deg, #dc2626 0%, #991b1b 100%);
        border: none;
        border-radius: 12px;
        width: 44px;
        height: 44px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        cursor: pointer;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        box-shadow: 0 4px 20px rgba(220, 38, 38, 0.4);
    }

        .sidebar-toggle:hover {
            transform: scale(1.05);
            box-shadow: 0 6px 30px rgba(220, 38, 38, 0.6);
        }

        .sidebar-toggle i {
            font-size: 18px;
        }

    /* Admin Sidebar */
    .admin-sidebar {
        position: fixed;
        left: 0;
        top: 0;
        width: 280px;
        height: 100vh;
        background: linear-gradient(180deg, #1a1a1a 0%, #0f0f0f 100%);
        border-right: 1px solid rgba(220, 38, 38, 0.2);
        overflow-y: auto;
        transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        z-index: 1050;
        box-shadow: 4px 0 24px rgba(0, 0, 0, 0.5);
    }

        .admin-sidebar.collapsed {
            transform: translateX(-100%);
        }

    .sidebar-header {
        padding: 24px 20px;
        border-bottom: 1px solid rgba(220, 38, 38, 0.2);
        background: rgba(220, 38, 38, 0.05);
    }

    .sidebar-brand {
        display: flex;
        align-items: center;
        gap: 12px;
        font-size: 24px;
        font-weight: 700;
        color: #dc2626;
        margin: 0;
    }

    .brand-text {
        background: linear-gradient(135deg, #dc2626 0%, #ef4444 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    /* Sidebar Menu */
    .sidebar-menu {
        padding: 20px 16px;
    }

    .menu-item {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 12px 16px;
        margin-bottom: 4px;
        color: #9ca3af;
        text-decoration: none;
        border-radius: 10px;
        transition: all 0.3s ease;
        font-size: 15px;
        font-weight: 500;
    }

        .menu-item i {
            width: 20px;
            text-align: center;
            font-size: 18px;
        }

        .menu-item:hover {
            background: rgba(220, 38, 38, 0.1);
            color: #dc2626;
            transform: translateX(4px);
        }

        .menu-item.active {
            background: linear-gradient(135deg, rgba(220, 38, 38, 0.2) 0%, rgba(220, 38, 38, 0.1) 100%);
            color: #dc2626;
            box-shadow: 0 4px 12px rgba(220, 38, 38, 0.2);
        }

    .menu-divider {
        height: 1px;
        background: rgba(220, 38, 38, 0.2);
        margin: 16px 0;
    }

    .social-link {
        font-size: 14px;
        opacity: 0.7;
    }

        .social-link:hover {
            opacity: 1;
        }

    /* Main Content */
    .main-content {
        flex: 1;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        transition: margin-left 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

        .main-content.with-sidebar {
            margin-left: 280px;
        }

        .main-content.shifted {
            margin-left: 0;
        }

    .content-wrapper {
        flex: 1;
        padding: 32px;
        max-width: 1400px;
        margin: 0 auto;
        width: 100%;
    }

    /* Page Header */
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 32px;
        padding-bottom: 24px;
        border-bottom: 2px solid rgba(220, 38, 38, 0.2);
    }

    .page-title {
        font-size: 32px;
        font-weight: 700;
        background: linear-gradient(135deg, #dc2626 0%, #ef4444 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin: 0;
        display: flex;
        align-items: center;
    }

    .page-subtitle {
        color: #9ca3af;
        font-size: 14px;
        margin-top: 8px;
        margin-bottom: 0;
    }

    .header-actions {
        display: flex;
        gap: 12px;
    }

    /* Buttons */
    .btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 10px 20px;
        border-radius: 10px;
        font-weight: 600;
        font-size: 14px;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
        text-decoration: none;
    }

    .btn-primary {
        background: linear-gradient(135deg, #dc2626 0%, #991b1b 100%);
        color: white;
        box-shadow: 0 4px 12px rgba(220, 38, 38, 0.3);
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(220, 38, 38, 0.4);
            color: white;
        }

    .btn-secondary {
        background: rgba(107, 114, 128, 0.2);
        color: #9ca3af;
        border: 1px solid rgba(107, 114, 128, 0.3);
    }

        .btn-secondary:hover {
            background: rgba(107, 114, 128, 0.3);
            color: #e0e0e0;
        }

    .btn-sm {
        padding: 6px 12px;
        font-size: 13px;
    }

    .btn-warning {
        background: #f59e0b;
        color: white;
    }

        .btn-warning:hover {
            background: #d97706;
            color: white;
        }

    .btn-danger {
        background: #ef4444;
        color: white;
    }

        .btn-danger:hover {
            background: #dc2626;
            color: white;
        }

    .btn-block {
        width: 100%;
    }

    /* Alerts */
    .alert {
        padding: 16px 20px;
        border-radius: 12px;
        margin-bottom: 24px;
        display: flex;
        align-items: center;
        border: none;
    }

    .alert-success {
        background: rgba(34, 197, 94, 0.1);
        color: #22c55e;
        border-left: 4px solid #22c55e;
    }

    .alert-danger {
        background: rgba(239, 68, 68, 0.1);
        color: #ef4444;
        border-left: 4px solid #ef4444;
    }

    .alert-warning {
        background: rgba(245, 158, 11, 0.1);
        color: #f59e0b;
        border-left: 4px solid #f59e0b;
    }

    /* Search Section */
    .search-section {
        background: rgba(26, 26, 26, 0.6);
        border-radius: 16px;
        padding: 24px;
        margin-bottom: 32px;
        border: 1px solid rgba(220, 38, 38, 0.1);
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
    }

    .search-form {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
        gap: 12px;
        align-items: end;
    }

    .search-group {
        display: flex;
        flex-direction: column;
    }

    .search-input {
        background: rgba(0, 0, 0, 0.3);
        border: 1px solid rgba(220, 38, 38, 0.2);
        color: #e0e0e0;
        border-radius: 8px;
        padding: 10px 14px;
        font-size: 14px;
        transition: all 0.3s ease;
    }

        .search-input:focus {
            background: rgba(0, 0, 0, 0.4);
            border-color: #dc2626;
            outline: none;
            box-shadow: 0 0 0 0.2rem rgba(220, 38, 38, 0.25);
            color: #e0e0e0;
        }

        .search-input::placeholder {
            color: #6b7280;
        }

    .search-buttons {
        display: flex;
        gap: 8px;
        grid-column: span 2;
    }

        .search-buttons .btn {
            flex: 1;
        }

    /* Showtimes Grid */
    .showtimes-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 24px;
        margin-bottom: 32px;
    }

    /* Showtime Card */
    .showtime-card {
        background: rgba(26, 26, 26, 0.6);
        border-radius: 16px;
        overflow: hidden;
        border: 1px solid rgba(220, 38, 38, 0.1);
        transition: all 0.3s ease;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.3);
    }

        .showtime-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 12px 40px rgba(220, 38, 38, 0.3);
            border-color: rgba(220, 38, 38, 0.3);
        }

    .card-image {
        position: relative;
        width: 100%;
        height: 200px;
        overflow: hidden;
    }

        .card-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

    .showtime-card:hover .card-image img {
        transform: scale(1.1);
    }

    .card-overlay {
        position: absolute;
        inset: 0;
        background: linear-gradient(to top, rgba(0, 0, 0, 0.8), transparent);
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .showtime-card:hover .card-overlay {
        opacity: 1;
    }

    .card-overlay i {
        font-size: 48px;
        color: white;
    }

    .card-content {
        padding: 20px;
    }

    .card-title {
        font-size: 18px;
        font-weight: 700;
        color: #e0e0e0;
        margin-bottom: 16px;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .card-details {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .detail-item {
        display: flex;
        align-items: center;
        gap: 10px;
        color: #9ca3af;
        font-size: 14px;
    }

        .detail-item i {
            color: #dc2626;
            width: 16px;
        }

    .card-footer {
        padding: 16px 20px;
        background: rgba(0, 0, 0, 0.2);
        border-top: 1px solid rgba(220, 38, 38, 0.1);
    }

    .admin-actions {
        display: flex;
        gap: 8px;
        margin-top: 12px;
    }

        .admin-actions .btn {
            flex: 1;
        }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 80px 20px;
        background: rgba(26, 26, 26, 0.6);
        border-radius: 16px;
        border: 2px dashed rgba(220, 38, 38, 0.2);
    }

        .empty-state i {
            font-size: 64px;
            color: rgba(220, 38, 38, 0.3);
            margin-bottom: 20px;
        }

        .empty-state p {
            color: #9ca3af;
            font-size: 16px;
            margin: 0;
        }

    /* Footer */
    .dashboard-footer {
        padding: 24px 32px;
        text-align: center;
        border-top: 1px solid rgba(220, 38, 38, 0.2);
        background: rgba(26, 26, 26, 0.6);
        color: #9ca3af;
        font-size: 14px;
    }

    /* Scrollbar Styling */
    ::-webkit-scrollbar {
        width: 8px;
        height: 8px;
    }

    ::-webkit-scrollbar-track {
        background: rgba(0, 0, 0, 0.2);
    }

    ::-webkit-scrollbar-thumb {
        background: rgba(220, 38, 38, 0.5);
        border-radius: 4px;
    }

        ::-webkit-scrollbar-thumb:hover {
            background: rgba(220, 38, 38, 0.7);
        }

    /* Responsive Design */
    @@media (max-width: 1024px) {
        .admin-sidebar

    {
        width: 240px;
    }

    .main-content.with-sidebar {
        margin-left: 240px;
    }

    .showtimes-grid {
        grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
    }

    }

    @@media (max-width: 768px) {
        .admin-sidebar

    {
        transform: translateX(-100%);
    }

    .admin-sidebar.show {
        transform: translateX(0);
    }

    .main-content.with-sidebar {
        margin-left: 0;
    }

    .content-wrapper {
        padding: 20px;
    }

    .page-header {
        flex-direction: column;
        align-items: flex-start;
        gap: 16px;
    }

    .page-title {
        font-size: 24px;
    }

    .header-actions {
