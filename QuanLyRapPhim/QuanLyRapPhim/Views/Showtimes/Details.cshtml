@model QuanLyRapPhim.Models.Showtime

@{
    ViewData["Title"] = "Chi tiết lịch chiếu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5 position-relative">
    <!-- Các hình tròn gradient trang trí -->
    <div class="circle circle-1"></div>
    <div class="circle circle-2"></div>
    <div class="circle circle-3"></div>

    <h1 class="text-light mb-2">Chi tiết lịch chiếu</h1>
    <h4 class="text-muted mb-4">Lịch chiếu: @Model.Title</h4>
    <hr />

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card movie-card text-light">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Tiêu đề</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Title)</dd>

                        <dt class="col-sm-4">Phim</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Movie.Title)</dd>

                        <dt class="col-sm-4">Phòng chiếu</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Room.RoomName)</dd>

                        <dt class="col-sm-4">Poster</dt>
                        <dd class="col-sm-8">
                            <img src="@Model.Poster" alt="@Model.Title" style="max-width: 200px; border-radius: 8px;" />
                        </dd>

                        <dt class="col-sm-4">Giờ chiếu</dt>
                        <dd class="col-sm-8">@Model.StartTime.ToString(@"hh\:mm")</dd>

                        <dt class="col-sm-4">Ngày chiếu</dt>
                        <dd class="col-sm-8">@Model.Date.ToString("dd/MM/yyyy")</dd>
                    </dl>

                    <div class="mt-4 d-flex justify-content-between">
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="Edit" asp-route-id="@Model.ShowtimeId" class="btn btn-primary">
                                <i class="fas fa-edit me-1"></i> Sửa
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.ShowtimeId" class="btn btn-danger">
                                <i class="fas fa-trash-alt me-1"></i> Xóa
                            </a>
                        }
                        <a asp-action="Index" class="btn btn-back">
                            <i class="fas fa-arrow-left me-1"></i> Quay lại danh sách
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- CSS tùy chỉnh -->
<style>
    body {
        background: linear-gradient(135deg, #ff9a8b 0%, #ff6a88 50%, #6b48ff 100%);
        font-family: 'Arial', sans-serif;
        color: #fff;
    }

    .container {
        padding-top: 20px;
        padding-bottom: 20px;
    }

    .circle {
        position: absolute;
        border-radius: 50%;
        background: linear-gradient(135deg, #ff9a8b 0%, #ff6a88 50%, #6b48ff 100%);
        opacity: 0.3;
    }

    .circle-1 {
        width: 300px;
        height: 300px;
        top: -50px;
        left: -50px;
    }

    .circle-2 {
        width: 200px;
        height: 200px;
        bottom: -50px;
        left: 50px;
    }

    .circle-3 {
        width: 150px;
        height: 150px;
        top: 50%;
        left: 20%;
    }

    .movie-card {
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px);
        border-radius: 15px;
        border: none;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        padding: 20px;
    }

    .form-control {
        background-color: #2a2a2a;
        color: #e0e0e0;
        border: 1px solid #444;
        transition: border-color 0.3s ease;
    }

        .form-control:focus {
            background-color: #2a2a2a;
            color: #e0e0e0;
            border-color: #007bff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }

    .control-label {
        color: #e0e0e0;
        font-weight: 500;
    }

    .text-danger {
        font-size: 0.875rem;
    }

    .btn-primary {
        background: linear-gradient(90deg, #ff6a88 0%, #6b48ff 100%);
        color: #fff;
        border: none;
        border-radius: 8px;
        padding: 10px 20px;
        transition: background 0.3s ease;
    }

        .btn-primary:hover {
            background: linear-gradient(90deg, #ff6a88 50%, #6b48ff 100%);
            transform: scale(1.05);
        }

    .btn-danger {
        background: linear-gradient(90deg, #dc3545 0%, #ff6a88 100%);
        color: #fff;
        border: none;
        border-radius: 8px;
        padding: 10px 20px;
        transition: background 0.3s ease;
    }

        .btn-danger:hover {
            background: linear-gradient(90deg, #ff6a88 0%, #dc3545 100%);
            transform: scale(1.05);
        }

    .btn-back {
        background: linear-gradient(90deg, #4e54c8 0%, #8f94fb 100%);
        color: #fff;
        border: none;
        border-radius: 8px;
        padding: 10px 20px;
        transition: transform 0.3s ease, background 0.3s ease;
        font-weight: bold;
    }

        .btn-back:hover {
            background: linear-gradient(90deg, #8f94fb 0%, #4e54c8 100%);
            transform: scale(1.05);
        }

    .text-muted {
        color: #dcdcdc !important;
    }

    dl.row dt, dd {
        margin-bottom: 10px;
    }
</style>

<!-- Thêm Font Awesome và Bootstrap -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>