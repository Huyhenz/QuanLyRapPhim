@section Scripts {
    <script>
        $(document).ready(function () {
            // Show Alert
            function showAlert(message, type) {
                var alertHtml = `<div class="alert alert-${type} alert-dismissible fade show" role="alert">
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>`;
                $('#alert-container').html(alertHtml);
            }

            // Add Movie
            $('#add-movie-form').submit(function (e) {
                e.preventDefault();
                $.ajax({
                    url: '@Url.Action("CreateMovie", "Admin")',
                    type: 'POST',
                    data: $(this).serialize(),
                    success: function (response) {
                        if (response.success) {
                            showAlert(response.message, 'success');
                            $('#addMovieModal').modal('hide');
                            location.reload();
                        } else {
                            showAlert(response.message + '<br>' + (response.errors ? response.errors.join('<br>') : ''), 'danger');
                        }
                    },
                    error: function () {
                        showAlert('An error occurred while adding the movie.', 'danger');
                    }
                });
            });

            // Edit Movie - Populate Modal
            $(document).on('click', '.edit-movie-btn', function () {
                var movieId = $(this).data('id');
                var row = $(this).closest('tr');
                $('#editMovieId').val(movieId);
                $('#editTitle').val(row.find('td:eq(0)').text());
                $('#editGenre').val(row.find('td:eq(1)').text());
                $('#editDuration').val(parseInt(row.find('td:eq(2)').text()));
                $('#editDirector').val(row.find('td:eq(3)').text());
                $.ajax({
                    url: '@Url.Action("Details", "Movies")/' + movieId,
                    type: 'GET',
                    success: function (data) {
                        $('#editDescription').val(data.description);
                        $('#editPoster').val(data.poster);
                        $('#editActors').val(data.actors);
                        $('#editTrailerUrl').val(data.trailerUrl);
                    }
                });
                $('#editMovieModal').modal('show');
            });

            // Edit Movie - Submit
            $('#edit-movie-form').submit(function (e) {
                e.preventDefault();
                $.ajax({
                    url: '@Url.Action("EditMovie", "Admin")',
                    type: 'POST',
                    data: $(this).serialize(),
                    success: function (response) {
                        if (response.success) {
                            showAlert(response.message, 'success');
                            $('#editMovieModal').modal('hide');
                            location.reload();
                        } else {
                            showAlert(response.message + '<br>' + (response.errors ? response.errors.join('<br>') : ''), 'danger');
                        }
                    },
                    error: function () {
                        showAlert('An error occurred while updating the movie.', 'danger');
                    }
                });
            });

            // Delete Movie
            $(document).on('click', '.delete-movie-btn', function () {
                if (!confirm('Are you sure you want to delete this movie?')) return;
                var movieId = $(this).data('id');
                $.ajax({
                    url: '@Url.Action("DeleteMovie", "Admin")',
                    type: 'POST',
                    data: { id: movieId, __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val() },
                    success: function (response) {
                        if (response.success) {
                            showAlert(response.message, 'success');
                            location.reload();
                        } else {
                            showAlert(response.message, 'danger');
                        }
                    },
                    error: function () {
                        showAlert('An error occurred while deleting the movie.', 'danger');
                    }
                });
            });

            // Add Showtime
            $('#add-showtime-form').submit(function (e) {
                e.preventDefault();
                $.ajax({
                    url: '@Url.Action("CreateShowtime", "Admin")',
                    type: 'POST',
                    data: $(this).serialize(),
                    success: function (response) {
                        if (response.success) {
                            showAlert(response.message, 'success');
                            $('#addShowtimeModal').modal('hide');
                            location.reload();
                        } else {
                            showAlert(response.message + '<br>' + (response.errors ? response.errors.join('<br>') : ''), 'danger');
                        }
                    },
                    error: function () {
                        showAlert('An error occurred while adding the showtime.', 'danger');
                    }
                });
            });

            // Edit Showtime - Populate Modal
            $(document).on('click', '.edit-showtime-btn', function () {
                var showtimeId = $(this).data('id');
                var row = $(this).closest('tr');
                $('#editShowtimeId').val(showtimeId);
                $('#editShowtimeMovieId').val(ViewBag.Showtimes.find(s => s.ShowtimeId == showtimeId).MovieId);
                $('#editShowtimeRoomId').val(ViewBag.Showtimes.find(s => s.ShowtimeId == showtimeId).RoomId);
                var dateTime = new Date(row.find('td:eq(2)').text().split(' ').join('T').replace(/\//g, '-'));
                $('#editShowtimeDateTime').val(dateTime.toISOString().slice(0, 16));
                $('#editShowtimePrice').val(parseInt(row.find('td:eq(3)').text().replace(/[^0-9]/g, '')));
                $('#editShowtimeModal').modal('show');
            });

            // Edit Showtime - Submit
            $('#edit-showtime-form').submit(function (e) {
                e.preventDefault();
                $.ajax({
                    url: '@Url.Action("EditShowtime", "Admin")',
                    type: 'POST',
                    data: $(this).serialize(),
                    success: function (response) {
                        if (response.success) {
                            showAlert(response.message, 'success');
                            $('#editShowtimeModal').modal('hide');
                            location.reload();
                        } else {
                            showAlert(response.message + '<br>' + (response.errors ? response.errors.join('<br>') : ''), 'danger');
                        }
                    },
                    error: function () {
                        showAlert('An error occurred while updating the showtime.', 'danger');
                    }
                });
            });

            // Delete Showtime
            $(document).on('click', '.delete-showtime-btn', function () {
                if (!confirm('Are you sure you want to delete this showtime?')) return;
                var showtimeId = $(this).data('id');
                $.ajax({
                    url: '@Url.Action("DeleteShowtime", "Admin")',
                    type: 'POST',
                    data: { id: showtimeId, __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val() },
                    success: function (response) {
                        if (response.success) {
                            showAlert(response.message, 'success');
                            location.reload();
                        } else {
                            showAlert(response.message, 'danger');
                        }
                    },
                    error: function () {
                        showAlert('An error occurred while deleting the showtime.', 'danger');
                    }
                });
            });
        });
    </script>
