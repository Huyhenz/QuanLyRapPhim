        </nav>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
        <div class="content-header">
            <h2 class="content-title">Order</h2>
            <div class="header-actions">
                <span class="order-count">28 orders found</span>
                <div class="date-filter">
                    <span>From</span>
                    <input type="date" class="date-input" value="2020-07-31">
                    <span>to</span>
                    <input type="date" class="date-input" value="2020-08-03">
                </div>
                <div class="user-profile">
                    <span>User</span>
                    <i class="fas fa-user"></i>
                </div>
            </div>
        </div>

        <!-- Alerts for Success/Error Messages -->
        <div id="alert-container" class="mb-4"></div>

        <!-- Movies Section -->
        <div class="admin-section">
            <h3 class="section-subtitle">Manage Movies</h3>
            <button class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#addMovieModal">Add New Movie</button>
            <div class="table-responsive">
                <table class="table table-custom">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Genre</th>
                            <th>Duration</th>
                            <th>Director</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="movies-table">
                        @foreach (var movie in ViewBag.Movies)
                        {
                            <tr data-id="@movie.MovieId">
                                <td>@movie.Title</td>
                                <td>@movie.Genre</td>
                                <td>@movie.Duration phút</td>
                                <td>@movie.Director</td>
                                <td>
                                    <button class="btn btn-sm btn-warning edit-movie-btn" data-id="@movie.MovieId">Edit</button>
                                    <button class="btn btn-sm btn-danger delete-movie-btn" data-id="@movie.MovieId">Delete</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="pagination">
                <span>Showing 01-10 of 28</span>
                <div class="pagination-controls">
                    <button class="btn-pag"><i class="fas fa-angle-left"></i></button>
                    <button class="btn-pag active">1</button>
                    <button class="btn-pag">2</button>
                    <button class="btn-pag">3</button>
                    <button class="btn-pag"><i class="fas fa-angle-right"></i></button>
                </div>
            </div>
        </div>

        <!-- Showtimes Section -->
        <div class="admin-section">
            <h3 class="section-subtitle">Manage Showtimes</h3>
            <button class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#addShowtimeModal">Add New Showtime</button>
            <div class="table-responsive">
                <table class="table table-custom">
                    <thead>
                        <tr>
                            <th>Movie</th>
                            <th>Room</th>
                            <th>Date & Time</th>
                            <th>Price</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="showtimes-table">
                        @foreach (var showtime in ViewBag.Showtimes)
                        {
                            <tr data-id="@showtime.ShowtimeId">
                                <td>@showtime.Movie.Title</td>
                                <td>@showtime.Room.RoomName</td>
                                <td>@showtime.Date.ToString("dd/MM/yyyy HH:mm")</td>
                                @* <td>@showtime.TicketPrice.ToString("C", new System.Globalization.CultureInfo("vi-VN"))</td> <!-- Updated Price to TicketPrice --> *@
                                <td>
                                    <button class="btn btn-sm btn-warning edit-showtime-btn" data-id="@showtime.ShowtimeId">Edit</button>
                                    <button class="btn btn-sm btn-danger delete-showtime-btn" data-id="@showtime.ShowtimeId">Delete</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="pagination">
                <span>Showing 01-10 of 28</span>
                <div class="pagination-controls">
                    <button class="btn-pag"><i class="fas fa-angle-left"></i></button>
                    <button class="btn-pag active">1</button>
                    <button class="btn-pag">2</button>
                    <button class="btn-pag">3</button>
                    <button class="btn-pag"><i class="fas fa-angle-right"></i></button>
                </div>
            </div>
        </div>
    </main>
