@model dynamic
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["AdminDashboard"].Value;
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool isAdmin = User.IsInRole("Admin");
}

<div class="container-fluid d-flex position-relative">
    @await Html.PartialAsync("_ChristmasDashboard")

    <div class="frame-wrapper flex-grow-1 @(isAdmin ? "admin-view" : "")">
        <div class="content-inner">
            <h1 class="title-gradient">
                <span class="christmas-icon">🎄</span>
                @Localizer["AdminDashboard"]
                <span class="christmas-icon">🎅</span>
            </h1>

            <!-- Dashboard Content -->
            <div class="dashboard-cards">
                <div class="stat-card glow-effect">
                    <div class="stat-icon">🎬</div>
                    <div class="stat-content">
                        <h3>@Localizer["TotalMovies"]</h3>
                        <p class="stat-number">42</p>
                    </div>
                </div>

                <div class="stat-card glow-effect">
                    <div class="stat-icon">🎫</div>
                    <div class="stat-content">
                        <h3>@Localizer["TotalBookings"]</h3>
                        <p class="stat-number">156</p>
                    </div>
                </div>

                <div class="stat-card glow-effect">
                    <div class="stat-icon">💰</div>
                    <div class="stat-content">
                        <h3>@Localizer["TotalRevenue"]</h3>
                        <p class="stat-number">50,000,000 VND</p>
                    </div>
                </div>

                <div class="stat-card glow-effect">
                    <div class="stat-icon">👥</div>
                    <div class="stat-content">
                        <h3>@Localizer["TotalUsers"]</h3>
                        <p class="stat-number">89</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer class="footer text-center py-3">
        <p class="text-white mb-0">© 2025 CinemaX. @Localizer["AllRightsReserved"]</p>
    </footer>
</div>

<style>
    body {
        background-color: #0F0F0F;
        font-family: 'Montserrat', sans-serif;
    }

    .content-inner {
        max-width: 1200px;
        width: 100%;
        padding: 20px;
    }

    .title-gradient {
        background: linear-gradient(90deg, #FFD700, #FF4500);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-size: 2.5rem;
        font-weight: 800;
        text-align: center;
        margin-bottom: 40px;
        text-transform: uppercase;
    }

    .christmas-icon {
        font-size: 2rem;
        animation: bounce 2s infinite;
    }

    @@keyframes bounce {
        0%, 100%

    {
        transform: translateY(0);
    }

    50% {
        transform: translateY(-10px);
    }

    }

    .dashboard-cards {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-top: 30px;
    }

    .stat-card {
        background: linear-gradient(135deg, #8B0000, #165B33);
        border: 3px solid #FFD700;
        border-radius: 20px;
        padding: 30px;
        display: flex;
        align-items: center;
        gap: 20px;
        transition: all 0.3s ease;
        box-shadow: 0 5px 15px rgba(255, 215, 0, 0.3);
    }

        .stat-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 30px rgba(255, 215, 0, 0.6);
        }

    .stat-icon {
        font-size: 3rem;
        min-width: 60px;
        text-align: center;
    }

    .stat-content h3 {
        color: #FFD700;
        font-size: 1rem;
        margin-bottom: 10px;
        text-transform: uppercase;
        font-weight: 600;
    }

    .stat-number {
        color: #FFFAFA;
        font-size: 2rem;
        font-weight: 800;
        margin: 0;
    }

    .glow-effect {
        animation: glow 2s ease-in-out infinite;
    }

    @@keyframes glow {
        0%, 100%

    {
        box-shadow: 0 5px 15px rgba(255, 215, 0, 0.3);
    }

    50% {
        box-shadow: 0 10px 30px rgba(255, 215, 0, 0.6);
    }

    }

    @@media (max-width: 768px) {
        .dashboard-cards

    {
        grid-template-columns: 1fr;
    }

    .title-gradient {
        font-size: 2rem;
    }

    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const toggleBtn = document.getElementById('sidebar-toggle');
        const sidebar = document.querySelector('.christmas-sidebar');
        const frameWrapper = document.querySelector('.frame-wrapper');

        if (toggleBtn && sidebar && frameWrapper) {
            toggleBtn.addEventListener('click', function() {
                sidebar.classList.toggle('collapsed');
                frameWrapper.classList.toggle('shifted');

                const icon = toggleBtn.querySelector('i');
                if (sidebar.classList.contains('collapsed')) {
                    icon.className = 'fas fa-bars';
                } else {
                    icon.className = 'fas fa-times';
                }
            });
        }
    });
</script>