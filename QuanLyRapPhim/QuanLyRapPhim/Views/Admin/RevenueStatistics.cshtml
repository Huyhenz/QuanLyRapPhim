@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        $(document).ready(function () {
            // Set initial date values
            $('#fromDate').val('@(((dynamic)ViewBag.RevenueData)?.FromDate ?? DateTime.Now.AddMonths(-1).ToString("yyyy-MM-dd"))');
            $('#toDate').val('@(((dynamic)ViewBag.RevenueData)?.ToDate ?? DateTime.Now.ToString("yyyy-MM-dd"))');
            // Update hidden inputs on date change
            function updateFilter() {
                $('#fromDateInput').val($('#fromDate').val());
                $('#toDateInput').val($('#toDate').val());
            }
            // Parse JSON data for charts
            var revenueByDateData = JSON.parse('@Html.Raw(ViewBag.FormattedRevenueByDate ?? "[]")');
            var revenueByMonthData = JSON.parse('@Html.Raw(ViewBag.FormattedRevenueByMonth ?? "[]")');
            // Chart theo ngày
            if (revenueByDateData.length > 0) {
                var ctxDate = document.getElementById('revenueByDateChart').getContext('2d');
                new Chart(ctxDate, {
                    type: 'bar',
                    data: {
                        labels: revenueByDateData.map(item => item.Date),
                        datasets: [
                            {
                                label: '@Localizer["TicketRevenue"] (VND)',
                                data: revenueByDateData.map(item => item.TicketRevenue),
                                backgroundColor: 'rgba(0, 123, 255, 0.2)',
                                borderColor: 'rgba(0, 123, 255, 1)',
                                borderWidth: 1
                            },
                            {
                                label: '@Localizer["FoodRevenue"] (VND)',
                                data: revenueByDateData.map(item => item.FoodRevenue),
                                backgroundColor: 'rgba(255, 193, 7, 0.2)',
                                borderColor: 'rgba(255, 193, 7, 1)',
                                borderWidth: 1
                            },
                            {
                                label: '@Localizer["Total"] (VND)',
                                data: revenueByDateData.map(item => item.TotalRevenue),
                                backgroundColor: 'rgba(255, 0, 51, 0.2)',
                                borderColor: 'rgba(255, 0, 51, 1)',
                                borderWidth: 1
                            }
                        ]
                    },
                    options: {
                        responsive: true,
                        scales: {
                            y: {
                                beginAtZero: true,
                                ticks: {
                                    callback: function(value) {
                                        return new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(value);
                                    },
                                    color: '#FFFFFF'
                                },
                                grid: { color: 'rgba(255, 255, 255, 0.1)' }
                            },
                            x: {
                                ticks: { color: '#FFFFFF' },
                                grid: { color: 'rgba(255, 255, 255, 0.1)' }
                            }
                        },
                        plugins: {
                            legend: { labels: { color: '#FFFFFF' } }
                        }
                    }
                });
            }
            // Chart theo tháng
            if (revenueByMonthData.length > 0) {
                var ctxMonth = document.getElementById('revenueByMonthChart').getContext('2d');
                new Chart(ctxMonth, {
                    type: 'line',
                    data: {
                        labels: revenueByMonthData.map(item => item.Month),
                        datasets: [
                            {
                                label: '@Localizer["TicketRevenue"] (VND)',
                                data: revenueByMonthData.map(item => item.TicketRevenue),
                                borderColor: 'rgba(0, 123, 255, 1)',
                                backgroundColor: 'rgba(0, 123, 255, 0.2)',
                                tension: 0.1
                            },
                            {
                                label: '@Localizer["FoodRevenue"] (VND)',
                                data: revenueByMonthData.map(item => item.FoodRevenue),
                                borderColor: 'rgba(255, 193, 7, 1)',
                                backgroundColor: 'rgba(255, 193, 7, 0.2)',
                                tension: 0.1
                            },
                            {
                                label: '@Localizer["Total"] (VND)',
                                data: revenueByMonthData.map(item => item.TotalRevenue),
                                borderColor: 'rgba(255, 0, 51, 1)',
                                backgroundColor: 'rgba(255, 0, 51, 0.2)',
                                tension: 0.1
                            }
                        ]
                    },
                    options: {
                        responsive: true,
                        scales: {
                            y: {
                                beginAtZero: true,
                                ticks: {
                                    callback: function(value) {
                                        return new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(value);
                                    },
                                    color: '#FFFFFF'
                                },
                                grid: { color: 'rgba(255, 255, 255, 0.1)' }
                            },
                            x: {
                                ticks: { color: '#FFFFFF' },
                                grid: { color: 'rgba(255, 255, 255, 0.1)' }
                            }
                        },
                        plugins: {
                            legend: { labels: { color: '#FFFFFF' } }
                        }
                    }
                });
            }
            // Biểu đồ nhỏ - Doanh thu vé theo tháng
            if (revenueByMonthData.length > 0) {
                var ctxTicket = document.getElementById('monthlyTicketChart').getContext('2d');
                new Chart(ctxTicket, {
                    type: 'bar',
                    data: {
                        labels: revenueByMonthData.map(item => item.Month),
                        datasets: [{
                            label: '@Localizer["TicketRevenue"] (VND)',
                            data: revenueByMonthData.map(item => item.TicketRevenue),
                            backgroundColor: 'rgba(0, 123, 255, 0.6)',
                            borderColor: 'rgba(0, 123, 255, 1)',
                            borderWidth: 1
                        }]
                    },
                    options: {
                        responsive: true,
                        scales: {
                            y: {
                                beginAtZero: true,
                                ticks: {
                                    callback: function(value) {
                                        return new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(value);
                                    },
                                    color: '#FFFFFF'
                                },
                                grid: { color: 'rgba(255, 255, 255, 0.1)' }
                            },
                            x: {
                                ticks: { color: '#FFFFFF' },
                                grid: { color: 'rgba(255, 255, 255, 0.1)' }
                            }
                        },
                        plugins: {
                            legend: { labels: { color: '#FFFFFF' } }
                        }
                    }
                });
            }
            // Biểu đồ nhỏ - Doanh thu thức ăn theo tháng
            if (revenueByMonthData.length > 0) {
                var ctxFood = document.getElementById('monthlyFoodChart').getContext('2d');
                new Chart(ctxFood, {
                    type: 'bar',
                    data: {
                        labels: revenueByMonthData.map(item => item.Month),
                        datasets: [{
                            label: '@Localizer["FoodRevenue"] (VND)',
                            data: revenueByMonthData.map(item => item.FoodRevenue),
                            backgroundColor: 'rgba(255, 193, 7, 0.6)',
                            borderColor: 'rgba(255, 193, 7, 1)',
                            borderWidth: 1
                        }]
                    },
                    options: {
                        responsive: true,
                        scales: {
                            y: {
                                beginAtZero: true,
                                ticks: {
                                    callback: function(value) {
