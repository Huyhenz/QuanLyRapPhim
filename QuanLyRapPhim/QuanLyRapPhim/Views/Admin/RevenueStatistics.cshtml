@model dynamic
@using Newtonsoft.Json
@using System.Collections.Generic
@using System.Globalization
@using System.Linq
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["RevenueStatistics"].Value;
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool isAdmin = User.IsInRole("Admin");
}

<div class="dashboard-container">
    @if (isAdmin)
    {
        <!-- Sidebar Toggle Button -->
        <button id="sidebar-toggle" class="sidebar-toggle">
            <i class="fas fa-bars"></i>
        </button>

        <!-- Admin Sidebar -->
        <aside class="admin-sidebar" id="admin-sidebar">
            <div class="sidebar-header">
                <h3 class="sidebar-brand">
                    <i class="fas fa-film"></i>
                    <span class="brand-text">CinemaX Admin</span>
                </h3>
            </div>

            <nav class="sidebar-menu">
                <a href="/Admin/Index" class="menu-item">
                    <i class="fas fa-tachometer-alt"></i>
                    <span class="menu-text">@Localizer["Dashboard"]</span>
                </a>
                <a href="/Movies" class="menu-item">
                    <i class="fas fa-film"></i>
                    <span class="menu-text">@Localizer["ManageMovies"]</span>
                </a>
                <a href="/Showtimes" class="menu-item">
                    <i class="fas fa-clock"></i>
                    <span class="menu-text">@Localizer["ManageShowtimes"]</span>
                </a>
                <a href="/Rooms" class="menu-item">
                    <i class="fas fa-door-open"></i>
                    <span class="menu-text">@Localizer["ManageRooms"]</span>
                </a>
                <a href="/Seats" class="menu-item">
                    <i class="fas fa-chair"></i>
                    <span class="menu-text">@Localizer["ManageSeats"]</span>
                </a>
                <a href="/Admin/ManageFoods" class="menu-item">
                    <i class="fas fa-utensils"></i>
                    <span class="menu-text">@Localizer["ManageFoods"]</span>
                </a>
                <a href="/Admin/ManageBookings" class="menu-item">
                    <i class="fas fa-ticket-alt"></i>
                    <span class="menu-text">@Localizer["ManageBookings"]</span>
                </a>
                <a href="/Admin/RevenueStatistics" class="menu-item active">
                    <i class="fas fa-chart-bar"></i>
                    <span class="menu-text">@Localizer["RevenueStatistics"]</span>
                </a>
                <a href="/Vouchers" class="menu-item">
                    <i class="fas fa-gift"></i>
                    <span class="menu-text">@Localizer["Vouchers"]</span>
                </a>

                <div class="menu-divider"></div>

                <a href="#" class="menu-item social-link">
                    <i class="fab fa-facebook"></i>
                    <span class="menu-text">Facebook</span>
                </a>
                <a href="#" class="menu-item social-link">
                    <i class="fab fa-twitter"></i>
                    <span class="menu-text">Twitter</span>
                </a>
                <a href="#" class="menu-item social-link">
                    <i class="fab fa-google"></i>
                    <span class="menu-text">Google</span>
                </a>
            </nav>
        </aside>
    }

    <!-- Main Content Area -->
    <main class="main-content @(isAdmin ? "with-sidebar" : "")">
        <div class="content-wrapper">
            <!-- Page Header -->
            <div class="page-header">
                <div class="header-left">
                    <h1 class="page-title">
                        <i class="fas fa-chart-bar me-2"></i>
                        @Localizer["RevenueStatistics"]
                    </h1>
                    <p class="page-subtitle">@Localizer["FinancialAnalysis"]</p>
                </div>
            </div>

            <!-- Date Filter -->
            <div class="filter-section">
                <form id="dateFilterForm" method="get" action="@Url.Action("RevenueStatistics")" class="date-filter-form">
                    <input type="hidden" name="fromDate" id="fromDateInput" value="@(((dynamic)ViewBag.RevenueData)?.FromDate ?? DateTime.Now.AddMonths(-1).ToString("yyyy-MM-dd"))">
                    <input type="hidden" name="toDate" id="toDateInput" value="@(((dynamic)ViewBag.RevenueData)?.ToDate ?? DateTime.Now.ToString("yyyy-MM-dd"))">
                    <div class="filter-group">
                        <label>@Localizer["From"]</label>
                        <input type="date" class="filter-input" id="fromDate" onchange="updateFilter()">
                    </div>
                    <div class="filter-group">
                        <label>@Localizer["To"]</label>
                        <input type="date" class="filter-input" id="toDate" onchange="updateFilter()">
                    </div>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-filter me-2"></i>
                        @Localizer["Filter"]
                    </button>
                </form>
            </div>

            <!-- Revenue Summary Cards -->
            <div class="summary-grid">
                <div class="summary-card">
                    <div class="summary-icon ticket-icon">
                        <i class="fas fa-ticket-alt"></i>
                    </div>
                    <div class="summary-details">
                        <h4>@Localizer["TotalTicketRevenue"]</h4>
                        <p class="revenue-amount">@(((dynamic)ViewBag.RevenueData)?.TotalTicketRevenue.ToString("C", new CultureInfo("vi-VN")) ?? Localizer["N/A"].Value)</p>
                        <p class="quantity-label">@Localizer["TotalTickets"]: <strong>@(((dynamic)ViewBag.RevenueData)?.TotalTicketCount ?? 0)</strong></p>
                    </div>
                </div>

                <div class="summary-card">
                    <div class="summary-icon food-icon">
                        <i class="fas fa-utensils"></i>
                    </div>
                    <div class="summary-details">
                        <h4>@Localizer["TotalFoodRevenue"]</h4>
                        <p class="revenue-amount">@(((dynamic)ViewBag.RevenueData)?.TotalFoodRevenue.ToString("C", new CultureInfo("vi-VN")) ?? Localizer["N/A"].Value)</p>
                        <p class="quantity-label">@Localizer["TotalItems"]: <strong>@(((dynamic)ViewBag.RevenueData)?.TotalFoodCount ?? 0)</strong></p>
                    </div>
                </div>

                <div class="summary-card">
                    <div class="summary-icon drink-icon">
                        <i class="fas fa-cocktail"></i>
                    </div>
                    <div class="summary-details">
                        <h4>@Localizer["TotalDrinkRevenue"]</h4>
                        <p class="revenue-amount">@(((dynamic)ViewBag.RevenueData)?.TotalDrinkRevenue.ToString("C", new CultureInfo("vi-VN")) ?? Localizer["N/A"].Value)</p>
                        <p class="quantity-label">@Localizer["TotalItems"]: <strong>@(((dynamic)ViewBag.RevenueData)?.TotalDrinkCount ?? 0)</strong></p>
                    </div>
                </div>

                <div class="summary-card">
                    <div class="summary-icon combo-icon">
                        <i class="fas fa-gift"></i>
                    </div>
                    <div class="summary-details">
                        <h4>@Localizer["TotalComboRevenue"]</h4>
                        <p class="revenue-amount">@(((dynamic)ViewBag.RevenueData)?.TotalComboRevenue.ToString("C", new CultureInfo("vi-VN")) ?? Localizer["N/A"].Value)</p>
                        <p class="quantity-label">@Localizer["TotalItems"]: <strong>@(((dynamic)ViewBag.RevenueData)?.TotalComboCount ?? 0)</strong></p>
                    </div>
                </div>

                <div class="summary-card highlight-card">
                    <div class="summary-icon total-icon">
                        <i class="fas fa-dollar-sign"></i>
                    </div>
                    <div class="summary-details">
                        <h4>@Localizer["TotalRevenue"]</h4>
                        <p class="revenue-amount-large">@(((dynamic)ViewBag.RevenueData)?.TotalRevenue.ToString("C", new CultureInfo("vi-VN")) ?? Localizer["N/A"].Value)</p>
                        <p class="quantity-label">@Localizer["TotalBookings"]: <strong>@(((dynamic)ViewBag.RevenueData)?.TotalBookingCount ?? 0)</strong></p>
                    </div>
                </div>
            </div>

            <!-- Food Item Statistics -->
            <div class="section-header">
                <h2 class="section-title">
                    <i class="fas fa-chart-pie me-2"></i>
                    @Localizer["FoodItemStatistics"]
                </h2>
            </div>

            <div class="data-table-container">
                <div class="table-responsive">
                    <table class="data-table">
                        <thead>
                            <tr>
                                <th>@Localizer["ItemName"]</th>
                                <th>@Localizer["Category"]</th>
                                <th>@Localizer["QuantitySold"]</th>
                                <th>@Localizer["Revenue"]</th>
                                <th>@Localizer["AveragePrice"]</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var foodStats = ((dynamic)ViewBag.RevenueData)?.FoodItemStatistics as IEnumerable<dynamic> ?? new List<dynamic>();
                                if (foodStats.Any())
                                {
                                    foreach (var item in foodStats)
                                    {
                                        var category = item.Category?.ToString()?.ToLower() ?? "";
                                        var displayCategory = "";
                                        var badgeClass = "";

                                        if (category == "food" || category == "bắp" || category == "thức ăn")
                                        {
                                            displayCategory = "🍿 Thức ăn";
                                            badgeClass = "badge-food";
                                        }
                                        else if (category == "drink" || category == "nước" || category == "thức uống" || category == "nước uống")
                                        {
                                            displayCategory = "🥤 Thức uống";
                                            badgeClass = "badge-drink";
                                        }
                                        else if (category == "combo")
                                        {
                                            displayCategory = "🎁 Combo";
                                            badgeClass = "badge-combo";
                                        }
                                        else
                                        {
                                            displayCategory = item.Category ?? "Unknown";
                                            badgeClass = "";
                                        }

                                        <tr>
                                            <td><strong>@(item.Name ?? Localizer["N/A"].Value)</strong></td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(badgeClass))
                                                {
                                                    <span class="category-badge @badgeClass">@displayCategory</span>
                                                }
                                                else
                                                {
                                                    <span>@displayCategory</span>
                                                }
                                            </td>
                                            <td><span class="quantity-value">@(item.TotalQuantity)</span></td>
                                            <td><span class="revenue-value">@(item.TotalRevenue?.ToString("C", new CultureInfo("vi-VN")) ?? Localizer["N/A"].Value)</span></td>
                                            <td>@(item.AveragePrice?.ToString("C", new CultureInfo("vi-VN")) ?? Localizer["N/A"].Value)</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center py-5">
                                            <i class="fas fa-chart-bar fa-3x mb-3 text-muted"></i><br>
                                            <em class="text-muted">@Localizer["NoData"].Value</em>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Revenue by Movie -->
            <div class="section-header">
                <h2 class="section-title">
                    <i class="fas fa-film me-2"></i>
                    @Localizer["RevenueByMovie"]
                </h2>
            </div>

            <div class="data-table-container">
                <div class="table-responsive">
                    <table class="data-table">
                        <thead>
                            <tr>
                                <th>@Localizer["MovieTitle"]</th>
                                <th>@Localizer["TicketRevenue"]</th>
                                <th>@Localizer["TotalRevenue"]</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var revenueByMovie = ((dynamic)ViewBag.RevenueData)?.RevenueByMovie as IEnumerable<dynamic> ?? new List<dynamic>();
                                if (revenueByMovie.Any())
                                {
                                    foreach (var item in revenueByMovie)
                                    {
                                        <tr>
                                            <td><strong>@(item.MovieTitle ?? Localizer["N/A"].Value)</strong></td>
                                            <td><span class="revenue-value">@(item.TicketRevenue?.ToString("C", new CultureInfo("vi-VN")) ?? Localizer["N/A"].Value)</span></td>
                                            <td><span class="revenue-value">@(item.TotalRevenue?.ToString("C", new CultureInfo("vi-VN")) ?? Localizer["N/A"].Value)</span></td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="3" class="text-center py-5">
                                            <i class="fas fa-film fa-3x mb-3 text-muted"></i><br>
                                            <em class="text-muted">@Localizer["NoData"].Value</em>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Revenue Chart -->
            <div class="section-header">
                <h2 class="section-title">
                    <i class="fas fa-chart-line me-2"></i>
                    @Localizer["RevenueChartByDate"]
                </h2>
            </div>

            <div class="chart-container">
                <canvas id="revenueByDateChart"></canvas>
            </div>
        </div>

        <!-- Footer -->
        <footer class="dashboard-footer">
            <p class="mb-0">
                @Localizer["Copyright"] 2025 CinemaX. @Localizer["AllRightsReserved"]
            </p>
        </footer>
    </main>
</div>

<style>
    /* Reset & Base Styles */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Inter', 'Segoe UI', sans-serif;
        background: linear-gradient(135deg, #0a0a0a 0%, #1a1a1a 100%);
        color: #e0e0e0;
        overflow-x: hidden;
    }

    /* Dashboard Container */
    .dashboard-container {
        display: flex;
        min-height: 100vh;
        position: relative;
    }

    /* Sidebar Toggle Button */
    .sidebar-toggle {
        position: fixed;
        top: 20px;
        left: 20px;
        z-index: 1100;
        background: linear-gradient(135deg, #dc2626 0%, #991b1b 100%);
        border: none;
        border-radius: 12px;
        width: 44px;
        height: 44px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        cursor: pointer;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        box-shadow: 0 4px 20px rgba(220, 38, 38, 0.4);
    }

        .sidebar-toggle:hover {
            transform: scale(1.05);
            box-shadow: 0 6px 30px rgba(220, 38, 38, 0.6);
        }

        .sidebar-toggle i {
            font-size: 18px;
        }

    /* Admin Sidebar */
    .admin-sidebar {
        position: fixed;
        left: 0;
        top: 0;
        width: 280px;
        height: 100vh;
        background: linear-gradient(180deg, #1a1a1a 0%, #0f0f0f 100%);
        border-right: 1px solid rgba(220, 38, 38, 0.2);
        overflow-y: auto;
        transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        z-index: 1050;
        box-shadow: 4px 0 24px rgba(0, 0, 0, 0.5);
    }

        .admin-sidebar.collapsed {
            transform: translateX(-100%);
        }

    .sidebar-header {
        padding: 24px 20px;
        border-bottom: 1px solid rgba(220, 38, 38, 0.2);
        background: rgba(220, 38, 38, 0.05);
    }

    .sidebar-brand {
        display: flex;
        align-items: center;
        gap: 12px;
        font-size: 24px;
        font-weight: 700;
        color: #dc2626;
        margin: 0;
    }

    .brand-text {
        background: linear-gradient(135deg, #dc2626 0%, #ef4444 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    /* Sidebar Menu */
    .sidebar-menu {
        padding: 20px 16px;
    }

    .menu-item {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 12px 16px;
        margin-bottom: 4px;
        color: #9ca3af;
        text-decoration: none;
        border-radius: 10px;
        transition: all 0.3s ease;
        font-size: 15px;
        font-weight: 500;
    }

        .menu-item i {
            width: 20px;
            text-align: center;
            font-size: 18px;
        }

        .menu-item:hover {
            background: rgba(220, 38, 38, 0.1);
            color: #dc2626;
            transform: translateX(4px);
        }

        .menu-item.active {
            background: linear-gradient(135deg, rgba(220, 38, 38, 0.2) 0%, rgba(220, 38, 38, 0.1) 100%);
            color: #dc2626;
            box-shadow: 0 4px 12px rgba(220, 38, 38, 0.2);
        }

    .menu-divider {
        height: 1px;
        background: rgba(220, 38, 38, 0.2);
        margin: 16px 0;
    }

    .social-link {
        font-size: 14px;
        opacity: 0.7;
    }

        .social-link:hover {
            opacity: 1;
        }

    /* Main Content */
    .main-content {
        flex: 1;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        transition: margin-left 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

        .main-content.with-sidebar {
            margin-left: 280px;
        }

        .main-content.shifted {
            margin-left: 0;
        }

    .content-wrapper {
        flex: 1;
        padding: 32px;
        max-width: 1600px;
        margin: 0 auto;
        width: 100%;
    }

    /* Page Header */
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 32px;
        padding-bottom: 24px;
        border-bottom: 2px solid rgba(220, 38, 38, 0.2);
    }

    .page-title {
        font-size: 32px;
        font-weight: 700;
        background: linear-gradient(135deg, #dc2626 0%, #ef4444 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin: 0;
        display: flex;
        align-items: center;
    }

    .page-subtitle {
        color: #9ca3af;
        font-size: 14px;
        margin-top: 8px;
        margin-bottom: 0;
    }

    /* Filter Section */
    .filter-section {
        margin-bottom: 32px;
        padding: 24px;
        background: rgba(26, 26, 26, 0.6);
        border-radius: 16px;
        border: 1px solid rgba(220, 38, 38, 0.1);
    }

    .date-filter-form {
        display: flex;
        gap: 16px;
        align-items: flex-end;
        flex-wrap: wrap;
    }

    .filter-group {
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

        .filter-group label {
            font-size: 14px;
            font-weight: 600;
            color: #9ca3af;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

    .filter-input {
        padding: 10px 16px;
        border-radius: 8px;
        border: 1px solid rgba(220, 38, 38, 0.3);
        background: rgba(10, 10, 10, 0.8);
        color: #e0e0e0;
        font-size: 14px;
        transition: all 0.3s ease;
    }

        .filter-input:focus {
            outline: none;
            border-color: #dc2626;
            box-shadow: 0 0 0 3px rgba(220, 38, 38, 0.1);
        }

    /* Summary Grid */
    .summary-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 20px;
        margin-bottom: 40px;
    }

    .summary-card {
        background: linear-gradient(135deg, rgba(26, 26, 26, 0.8) 0%, rgba(15, 15, 15, 0.8) 100%);
        padding: 24px;
        border-radius: 16px;
        border: 1px solid rgba(220, 38, 38, 0.2);
        display: flex;
        align-items: center;
        gap: 20px;
        transition: all 0.3s ease;
    }

        .summary-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 24px rgba(220, 38, 38, 0.2);
            border-color: rgba(220, 38, 38, 0.4);
        }

        .summary-card.highlight-card {
            background: linear-gradient(135deg, rgba(220, 38, 38, 0.2) 0%, rgba(153, 27, 27, 0.2) 100%);
            border: 2px solid #dc2626;
            box-shadow: 0 8px 24px rgba(220, 38, 38, 0.3);
        }

    .summary-icon {
        width: 64px;
        height: 64px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 28px;
        flex-shrink: 0;
    }

    .ticket-icon {
        background: linear-gradient(135deg, rgba(59, 130, 246, 0.2), rgba(37, 99, 235, 0.2));
        color: #3b82f6;
    }

    .food-icon {
        background: linear-gradient(135deg, rgba(251, 191, 36, 0.2), rgba(245, 158, 11, 0.2));
        color: #fbbf24;
    }

    .drink-icon {
        background: linear-gradient(135deg, rgba(34, 197, 94, 0.2), rgba(22, 163, 74, 0.2));
        color: #22c55e;
    }

    .combo-icon {
        background: linear-gradient(135deg, rgba(168, 85, 247, 0.2), rgba(147, 51, 234, 0.2));
        color: #a855f7;
    }

    .total-icon {
        background: linear-gradient(135deg, rgba(220, 38, 38, 0.3), rgba(153, 27, 27, 0.3));
        color: #ef4444;
    }

    .summary-details h4 {
        color: #9ca3af;
        font-size: 13px;
        margin: 0 0 12px 0;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        font-weight: 600;
    }

    .revenue-amount {
        color: #22c55e;
        font-size: 20px;
        font-weight: 700;
        margin: 0 0 8px 0;
    }

    .revenue-amount-large {
        color: #ef4444;
        font-size: 24px;
        font-weight: 700;
        margin: 0 0 8px 0;
    }

    .quantity-label {
        color: #6b7280;
        font-size: 13px;
        margin: 0;
    }

        .quantity-label strong {
            color: #e0e0e0;
            font-weight: 700;
        }

    /* Section Header */
    .section-header {
        margin: 48px 0 24px 0;
    }

    .section-title {
        font-size: 24px;
        font-weight: 700;
        background: linear-gradient(135deg, #dc2626 0%, #ef4444 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin: 0;
        display: flex;
        align-items: center;
    }

    /* Data Table Container */
    .data-table-container {
        background: rgba(26, 26, 26, 0.6);
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
        border: 1px solid rgba(220, 38, 38, 0.1);
        margin-bottom: 32px;
    }

    .table-responsive {
        overflow-x: auto;
    }

    /* Data Table */
    .data-table {
        width: 100%;
        border-collapse: collapse;
        margin: 0;
    }

        .data-table thead {
            background: linear-gradient(135deg, rgba(220, 38, 38, 0.2) 0%, rgba(220, 38, 38, 0.1) 100%);
        }

        .data-table th {
            padding: 16px;
            text-align: left;
            font-weight: 600;
            font-size: 13px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            color: #dc2626;
            border-bottom: 2px solid rgba(220, 38, 38, 0.3);
        }

        .data-table td {
            padding: 16px;
            border-bottom: 1px solid rgba(220, 38, 38, 0.1);
            color: #e0e0e0;
            font-size: 14px;
        }

        .data-table tbody tr {
            transition: all 0.3s ease;
        }

            .data-table tbody tr:hover {
                background: rgba(220, 38, 38, 0.05);
            }

    .category-badge {
        display: inline-block;
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
    }

    .badge-food {
        background: rgba(251, 191, 36, 0.2);
        color: #fbbf24;
    }

    .badge-drink {
        background: rgba(34, 197, 94, 0.2);
        color: #22c55e;
    }

    .badge-combo {
        background: rgba(168, 85, 247, 0.2);
        color: #a855f7;
    }

