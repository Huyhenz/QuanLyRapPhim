@model IEnumerable<QuanLyRapPhim.Models.FoodItem>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["ManageFoods"].Value;
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool isAdmin = User.IsInRole("Admin");
}

<div class="dashboard-container">
    @if (isAdmin)
    {
        <!-- Sidebar Toggle Button -->
        <button id="sidebar-toggle" class="sidebar-toggle">
            <i class="fas fa-bars"></i>
        </button>

        <!-- Admin Sidebar -->
        <aside class="admin-sidebar" id="admin-sidebar">
            <div class="sidebar-header">
                <h3 class="sidebar-brand">
                    <i class="fas fa-film"></i>
                    <span class="brand-text">CinemaX Admin</span>
                </h3>
            </div>

            <nav class="sidebar-menu">
                <a href="/Admin/Index" class="menu-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Admin" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")">
                    <i class="fas fa-tachometer-alt"></i>
                    <span class="menu-text">@Localizer["Dashboard"]</span>
                </a>
                <a href="/Movies" class="menu-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Movies" ? "active" : "")">
                    <i class="fas fa-film"></i>
                    <span class="menu-text">@Localizer["ManageMovies"]</span>
                </a>
                <a href="/Showtimes" class="menu-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Showtimes" ? "active" : "")">
                    <i class="fas fa-clock"></i>
                    <span class="menu-text">@Localizer["ManageShowtimes"]</span>
                </a>
                <a href="/Rooms" class="menu-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Rooms" ? "active" : "")">
                    <i class="fas fa-door-open"></i>
                    <span class="menu-text">@Localizer["ManageRooms"]</span>
                </a>
                <a href="/Seats" class="menu-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Seats" ? "active" : "")">
                    <i class="fas fa-chair"></i>
                    <span class="menu-text">@Localizer["ManageSeats"]</span>
                </a>
                <a href="/Admin/ManageFoods" class="menu-item active">
                    <i class="fas fa-utensils"></i>
                    <span class="menu-text">@Localizer["ManageFoods"]</span>
                </a>
                <a href="/Admin/ManageBookings" class="menu-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "ManageBookings" ? "active" : "")">
                    <i class="fas fa-ticket-alt"></i>
                    <span class="menu-text">@Localizer["ManageBookings"]</span>
                </a>
                <a href="/Admin/RevenueStatistics" class="menu-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "RevenueStatistics" ? "active" : "")">
                    <i class="fas fa-chart-bar"></i>
                    <span class="menu-text">@Localizer["RevenueStatistics"]</span>
                </a>
                <a href="/Vouchers" class="menu-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Vouchers" ? "active" : "")">
                    <i class="fas fa-gift"></i>
                    <span class="menu-text">@Localizer["Vouchers"]</span>
                </a>

                <div class="menu-divider"></div>

                <a href="#" class="menu-item social-link">
                    <i class="fab fa-facebook"></i>
                    <span class="menu-text">Facebook</span>
                </a>
                <a href="#" class="menu-item social-link">
                    <i class="fab fa-twitter"></i>
                    <span class="menu-text">Twitter</span>
                </a>
                <a href="#" class="menu-item social-link">
                    <i class="fab fa-google"></i>
                    <span class="menu-text">Google</span>
                </a>
            </nav>
        </aside>
    }

    <!-- Main Content Area -->
    <main class="main-content @(isAdmin ? "with-sidebar" : "")">
        <div class="content-wrapper">
            <!-- Page Header -->
            <div class="page-header">
                <div class="header-left">
                    <h1 class="page-title">
                        <i class="fas fa-utensils me-2"></i>
                        @Localizer["ManageFoods"]
                    </h1>
                    <p class="page-subtitle">@Localizer["ManageFoodsDescription"]</p>
                </div>
                <div class="header-actions">
                    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createFoodModal">
                        <i class="fas fa-plus me-2"></i>@Localizer["AddFood"]
                    </button>
                </div>
            </div>

            <!-- Foods Table -->
            <div class="data-table-container">
                <div class="table-responsive">
                    <table id="foodsTable" class="data-table">
                        <thead>
                            <tr>
                                <th>@Localizer["Image"]</th>
                                <th>@Localizer["Name"]</th>
                                <th>@Localizer["Size"]</th>
                                <th>@Localizer["Price"]</th>
                                <th>@Localizer["Category"]</th>
                                <th>@Localizer["Actions"]</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Data will be loaded via JS -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <footer class="dashboard-footer">
            <p class="mb-0">
                @Localizer["Copyright"] 2025 CinemaX. @Localizer["AllRightsReserved"]
            </p>
        </footer>
    </main>
</div>

<!-- Create Food Modal -->
<div class="modal fade" id="createFoodModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title"><i class="fas fa-plus me-2"></i>@Localizer["AddFood"]</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="createFoodForm" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Localizer["Name"]</label>
                            <input name="name" class="form-control" required placeholder="@Localizer["EnterName"]" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Localizer["Size"]</label>
                            <select name="size" class="form-control" required>
                                <option value="">@Localizer["SelectSize"]</option>
                                <option value="S">@Localizer["SizeS"]</option>
                                <option value="M">@Localizer["SizeM"]</option>
                                <option value="L">@Localizer["SizeL"]</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Localizer["Price"]</label>
                            <input name="price" type="number" class="form-control" required min="0" step="1000" placeholder="@Localizer["EnterPrice"]" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Localizer["Category"]</label>
                            <select name="category" class="form-control" required>
                                <option value="">@Localizer["SelectCategory"]</option>
                                <option value="Bắp">@Localizer["CategoryPopcorn"]</option>
                                <option value="Nước">@Localizer["CategoryDrink"]</option>
                                <option value="Combo">@Localizer["CategoryCombo"]</option>
                            </select>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">@Localizer["Image"]</label>
                        <input name="imageFile" type="file" class="form-control" accept="image/*" />
                    </div>
                    <button type="submit" class="btn btn-danger w-100 glow-effect"><i class="fas fa-save me-2"></i>@Localizer["Save"]</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Edit Food Modal -->
<div class="modal fade" id="editFoodModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-warning text-dark">
                <h5 class="modal-title"><i class="fas fa-edit me-2"></i>@Localizer["EditFood"]</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="editFoodForm" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="foodItemId" />
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Localizer["Name"]</label>
                            <input name="name" class="form-control" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Localizer["Size"]</label>
                            <select name="size" class="form-control" required>
                                <option value="S">@Localizer["SizeS"]</option>
                                <option value="M">@Localizer["SizeM"]</option>
                                <option value="L">@Localizer["SizeL"]</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Localizer["Price"]</label>
                            <input name="price" type="number" class="form-control" required min="0" step="1000" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Localizer["Category"]</label>
                            <select name="category" class="form-control" required>
                                <option value="Bắp">@Localizer["CategoryPopcorn"]</option>
                                <option value="Nước">@Localizer["CategoryDrink"]</option>
                                <option value="Combo">@Localizer["CategoryCombo"]</option>
                            </select>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">@Localizer["CurrentImage"]</label>
                        <div id="currentImage" class="mb-2"></div>
                        <label class="form-label">@Localizer["NewImage"] (@Localizer["Optional"])</label>
                        <input name="imageFile" type="file" class="form-control" accept="image/*" />
                    </div>
                    <button type="submit" class="btn btn-warning w-100 glow-effect"><i class="fas fa-save me-2"></i>@Localizer["Update"]</button>
                </form>
            </div>
        </div>
    </div>
</div>

