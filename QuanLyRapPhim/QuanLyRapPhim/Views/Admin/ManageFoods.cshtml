    body {
        margin: 0;
        background-color: #0F0F0F;
        color: #ffffff;
        font-family: 'Montserrat', sans-serif;
        overflow-x: hidden;
    }

    .sidebar {
        background: #111;
        width: 250px;
        height: 100vh;
        position: fixed;
        top: 0;
        left: 0;
        padding: 25px 20px;
        overflow-y: auto;
        border-right: 2px solid #e50914;
        box-shadow: 2px 0 10px rgba(0,0,0,0.4);
        transition: all 0.3s ease;
        z-index: 1000;
    }

        .sidebar.collapsed {
            width: 0;
            padding: 0;
            transform: translateX(-100%);
        }

