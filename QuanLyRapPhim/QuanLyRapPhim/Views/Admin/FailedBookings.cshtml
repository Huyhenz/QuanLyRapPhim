@model IEnumerable<QuanLyRapPhim.Models.PaymentFailed>
@using QuanLyRapPhim.Models
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["FailedBookings"].Value;
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool isAdmin = User.IsInRole("Admin");
}

<div class="dashboard-container">
    @if (isAdmin)
    {
        <!-- Sidebar Toggle Button -->
        <button id="sidebar-toggle" class="sidebar-toggle">
            <i class="fas fa-bars"></i>
        </button>

        <!-- Admin Sidebar -->
        <aside class="admin-sidebar" id="admin-sidebar">
            <div class="sidebar-header">
                <h3 class="sidebar-brand">
                    <i class="fas fa-film"></i>
                    <span class="brand-text">CinemaX Admin</span>
                </h3>
            </div>

            <nav class="sidebar-menu">
                <a href="/Admin/Index" class="menu-item">
                    <i class="fas fa-tachometer-alt"></i>
                    <span class="menu-text">@Localizer["Dashboard"]</span>
                </a>
                <a href="/Movies" class="menu-item">
                    <i class="fas fa-film"></i>
                    <span class="menu-text">@Localizer["ManageMovies"]</span>
                </a>
                <a href="/Showtimes" class="menu-item">
                    <i class="fas fa-clock"></i>
                    <span class="menu-text">@Localizer["ManageShowtimes"]</span>
                </a>
                <a href="/Rooms" class="menu-item">
                    <i class="fas fa-door-open"></i>
                    <span class="menu-text">@Localizer["ManageRooms"]</span>
                </a>
                <a href="/Seats" class="menu-item">
                    <i class="fas fa-chair"></i>
                    <span class="menu-text">@Localizer["ManageSeats"]</span>
                </a>
                <a href="/Admin/ManageFoods" class="menu-item">
                    <i class="fas fa-utensils"></i>
                    <span class="menu-text">@Localizer["ManageFoods"]</span>
                </a>
                <a href="/Admin/ManageBookings" class="menu-item">
                    <i class="fas fa-ticket-alt"></i>
                    <span class="menu-text">@Localizer["ManageBookings"]</span>
                </a>
                <a href="/Admin/FailedBookings" class="menu-item active">
                    <i class="fas fa-times-circle"></i>
                    <span class="menu-text">@Localizer["FailedBookings"]</span>
                </a>
                <a href="/Admin/RevenueStatistics" class="menu-item">
                    <i class="fas fa-chart-bar"></i>
                    <span class="menu-text">@Localizer["RevenueStatistics"]</span>
                </a>
                <a href="/Vouchers" class="menu-item">
                    <i class="fas fa-gift"></i>
                    <span class="menu-text">@Localizer["Vouchers"]</span>
                </a>

                <div class="menu-divider"></div>

                <a href="#" class="menu-item social-link">
                    <i class="fab fa-facebook"></i>
                    <span class="menu-text">Facebook</span>
                </a>
                <a href="#" class="menu-item social-link">
                    <i class="fab fa-twitter"></i>
                    <span class="menu-text">Twitter</span>
                </a>
                <a href="#" class="menu-item social-link">
                    <i class="fab fa-google"></i>
                    <span class="menu-text">Google</span>
                </a>
            </nav>
        </aside>
    }

    <!-- Main Content Area -->
    <main class="main-content @(isAdmin ? "with-sidebar" : "")">
        <div class="content-wrapper">
            <!-- Page Header -->
            <div class="page-header">
                <div class="header-left">
                    <h1 class="page-title">
                        <i class="fas fa-times-circle me-2"></i>
                        @Localizer["FailedBookings"]
                    </h1>
                    <p class="page-subtitle">@Localizer["FailedCountFound", Model.Count()]</p>
                </div>
            </div>

            <!-- Alert Messages -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Failed Bookings Table -->
            <div class="data-table-container">
                <div class="table-responsive">
                    <table class="data-table">
                        <thead>
                            <tr>
                                <th>@Localizer["ID"]</th>
                                <th>@Localizer["Customer"]</th>
                                <th>@Localizer["Movie"]</th>
                                <th>@Localizer["Room"]</th>
                                <th>@Localizer["Seats"]</th>
                                <th>@Localizer["ShowDate"]</th>
                                <th>@Localizer["ShowTime"]</th>
                                <th>@Localizer["FoodDrinks"]</th>
                                <th>@Localizer["Amount"]</th>
                                <th>@Localizer["Voucher"]</th>
                                <th>@Localizer["FailedDate"]</th>
                                <th>@Localizer["Status"]</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model?.Any() == true)
                            {
                                @foreach (var failed in Model)
                                {
                                    <tr class="row-failed">
                                        <td>
                                            <span class="booking-id text-danger">#@failed.PaymentFailedId</span>
                                        </td>
                                        <td>@(failed.Email ?? Localizer["NA"].Value)</td>
                                        <td>@(failed.MovieTitle ?? Localizer["NA"].Value)</td>
                                        <td>@(failed.RoomName ?? "—")</td>
                                        <td>
                                            @if (failed.SelectedSeats?.Any() == true)
                                            {
                                                <span class="seats-list">@string.Join(", ", failed.SelectedSeats)</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">—</span>
                                            }
                                        </td>
                                        <td>@(failed.ShowDate?.ToString("dd/MM/yyyy") ?? "—")</td>
                                        <td>@(failed.ShowTime?.ToString(@"hh\:mm") ?? "—")</td>
                                        <td>
                                            @if (failed.SelectedFoods?.Any() == true)
                                            {
                                                <div class="food-list">
                                                    @foreach (var food in failed.SelectedFoods)
                                                    {
                                                        <div class="food-item">@food.Name × @food.Quantity</div>
                                                    }
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="text-muted">@Localizer["None"]</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="amount-cell">
                                                <span class="amount-value">@(failed.Amount.ToString("N0")) VNĐ</span>
                                            </div>
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(failed.VoucherUsed))
                                            {
                                                <span class="voucher-code">@failed.VoucherUsed</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">—</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="date-time">
                                                <div>@failed.FailedDate.ToString("dd/MM/yyyy")</div>
                                                <small>@failed.FailedDate.ToString("HH:mm")</small>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="status-badge bg-danger">
                                                <i class="fas fa-times-circle"></i>
                                                @Localizer["Failed"]
                                            </span>
                                            <br />
                                            <small class="text-danger mt-1 d-block" style="font-size: 11px;">@(failed.FailureReason ?? Localizer["NA"].Value)</small>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="12" class="text-center py-5">
                                        <i class="fas fa-receipt fa-3x mb-3 text-muted"></i><br>
                                        <em class="text-muted">@Localizer["NoFailedBookingsFound"]</em>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <footer class="dashboard-footer">
            <p class="mb-0">
                @Localizer["Copyright"] 2025 CinemaX. @Localizer["AllRightsReserved"]
            </p>
        </footer>
    </main>
</div>

<style>
    /* Reset & Base Styles */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Inter', 'Segoe UI', sans-serif;
        background: linear-gradient(135deg, #0a0a0a 0%, #1a1a1a 100%);
        color: #e0e0e0;
        overflow-x: hidden;
    }

    /* Dashboard Container */
    .dashboard-container {
        display: flex;
        min-height: 100vh;
        position: relative;
    }

    /* Sidebar Toggle Button */
    .sidebar-toggle {
        position: fixed;
        top: 20px;
        left: 20px;
        z-index: 1100;
        background: linear-gradient(135deg, #dc2626 0%, #991b1b 100%);
        border: none;
        border-radius: 12px;
        width: 44px;
        height: 44px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        cursor: pointer;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        box-shadow: 0 4px 20px rgba(220, 38, 38, 0.4);
    }

        .sidebar-toggle:hover {
            transform: scale(1.05);
            box-shadow: 0 6px 30px rgba(220, 38, 38, 0.6);
        }

        .sidebar-toggle i {
            font-size: 18px;
        }

    /* Admin Sidebar */
    .admin-sidebar {
        position: fixed;
        left: 0;
        top: 0;
        width: 280px;
        height: 100vh;
        background: linear-gradient(180deg, #1a1a1a 0%, #0f0f0f 100%);
        border-right: 1px solid rgba(220, 38, 38, 0.2);
        overflow-y: auto;
        transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        z-index: 1050;
        box-shadow: 4px 0 24px rgba(0, 0, 0, 0.5);
    }

        .admin-sidebar.collapsed {
            transform: translateX(-100%);
        }

    .sidebar-header {
        padding: 24px 20px;
        border-bottom: 1px solid rgba(220, 38, 38, 0.2);
        background: rgba(220, 38, 38, 0.05);
    }

    .sidebar-brand {
        display: flex;
        align-items: center;
        gap: 12px;
        font-size: 24px;
        font-weight: 700;
        color: #dc2626;
        margin: 0;
    }

    .brand-text {
        background: linear-gradient(135deg, #dc2626 0%, #ef4444 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    /* Sidebar Menu */
    .sidebar-menu {
        padding: 20px 16px;
    }

    .menu-item {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 12px 16px;
        margin-bottom: 4px;
        color: #9ca3af;
        text-decoration: none;
        border-radius: 10px;
        transition: all 0.3s ease;
        font-size: 15px;
        font-weight: 500;
    }

        .menu-item i {
            width: 20px;
            text-align: center;
            font-size: 18px;
        }

        .menu-item:hover {
            background: rgba(220, 38, 38, 0.1);
            color: #dc2626;
            transform: translateX(4px);
        }

        .menu-item.active {
            background: linear-gradient(135deg, rgba(220, 38, 38, 0.2) 0%, rgba(220, 38, 38, 0.1) 100%);
            color: #dc2626;
            box-shadow: 0 4px 12px rgba(220, 38, 38, 0.2);
        }

    .menu-divider {
        height: 1px;
        background: rgba(220, 38, 38, 0.2);
        margin: 16px 0;
    }

    .social-link {
        font-size: 14px;
        opacity: 0.7;
    }

        .social-link:hover {
            opacity: 1;
        }

    /* Main Content */
    .main-content {
        flex: 1;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        transition: margin-left 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

        .main-content.with-sidebar {
            margin-left: 280px;
        }

        .main-content.shifted {
            margin-left: 0;
        }

    .content-wrapper {
        flex: 1;
        padding: 32px;
        max-width: 1600px;
        margin: 0 auto;
        width: 100%;
    }

    /* Page Header */
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 32px;
        padding-bottom: 24px;
        border-bottom: 2px solid rgba(220, 38, 38, 0.2);
    }

    .page-title {
        font-size: 32px;
        font-weight: 700;
        background: linear-gradient(135deg, #dc2626 0%, #ef4444 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin: 0;
        display: flex;
        align-items: center;
    }

    .page-subtitle {
        color: #9ca3af;
        font-size: 14px;
        margin-top: 8px;
        margin-bottom: 0;
    }

    /* Alerts */
    .alert {
        padding: 16px 20px;
        border-radius: 12px;
        margin-bottom: 24px;
        display: flex;
        align-items: center;
        border: none;
    }

    .alert-success {
        background: rgba(34, 197, 94, 0.1);
        color: #22c55e;
        border-left: 4px solid #22c55e;
    }

    .alert-danger {
        background: rgba(239, 68, 68, 0.1);
        color: #ef4444;
        border-left: 4px solid #ef4444;
    }

    /* Data Table Container */
    .data-table-container {
        background: rgba(26, 26, 26, 0.6);
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
        border: 1px solid rgba(220, 38, 38, 0.1);
    }

    .table-responsive {
        overflow-x: auto;
    }

    /* Data Table */
    .data-table {
        width: 100%;
        border-collapse: collapse;
        margin: 0;
    }

        .data-table thead {
            background: linear-gradient(135deg, rgba(220, 38, 38, 0.2) 0%, rgba(220, 38, 38, 0.1) 100%);
        }

        .data-table th {
            padding: 16px;
            text-align: left;
            font-weight: 600;
            font-size: 13px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            color: #dc2626;
            border-bottom: 2px solid rgba(220, 38, 38, 0.3);
            white-space: nowrap;
        }

        .data-table td {
            padding: 16px;
            border-bottom: 1px solid rgba(220, 38, 38, 0.1);
            color: #e0e0e0;
            font-size: 14px;
        }

        .data-table tbody tr {
            transition: all 0.3s ease;
        }

            .data-table tbody tr:hover {
                background: rgba(220, 38, 38, 0.05);
            }

    /* ✅ ROW STATUS COLORS */
    .row-failed {
        border-left: 4px solid #ef4444 !important;
        background: rgba(239, 68, 68, 0.05) !important;
    }

        .row-failed:hover {
            background: rgba(239, 68, 68, 0.1) !important;
        }

    /* Booking Specific Styles */
    .booking-id {
        display: inline-block;
        padding: 6px 12px;
        background: rgba(239, 68, 68, 0.2);
        border-radius: 6px;
        font-weight: 700;
        color: #ef4444;
        font-family: 'Courier New', monospace;
    }

    .seats-list {
        font-size: 13px;
        color: #9ca3af;
    }

    .food-list {
        font-size: 13px;
    }

    .food-item {
        color: #9ca3af;
        margin-bottom: 2px;
    }

    .amount-cell {
        display: flex;
        flex-direction: column;
        gap: 4px;
    }

    .amount-value {
        font-weight: 700;
        color: #fbbf24;
        font-size: 15px;
    }

    .voucher-code {
        display: inline-block;
        padding: 4px 10px;
        background: rgba(220, 38, 38, 0.2);
        border-radius: 6px;
        font-weight: 600;
        color: #dc2626;
        font-family: 'Courier New', monospace;
        font-size: 12px;
        letter-spacing: 0.5px;
    }

    .date-time {
        font-size: 13px;
    }

        .date-time small {
            color: #9ca3af;
            font-size: 11px;
        }

    .status-badge {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 6px 14px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .bg-danger {
        background: rgba(239, 68, 68, 0.2);
        color: #ef4444;
    }

    .text-muted {
        color: #6b7280;
    }

    /* Footer */
    .dashboard-footer {
        padding: 24px 32px;
        text-align: center;
        border-top: 1px solid rgba(220, 38, 38, 0.2);
        background: rgba(26, 26, 26, 0.6);
        color: #9ca3af;
        font-size: 14px;
    }

    /* Scrollbar Styling */
    ::-webkit-scrollbar {
        width: 8px;
        height: 8px;
    }

    ::-webkit-scrollbar-track {
        background: rgba(0, 0, 0, 0.2);
    }

    ::-webkit-scrollbar-thumb {
        background: rgba(220, 38, 38, 0.5);
        border-radius: 4px;
    }

        ::-webkit-scrollbar-thumb:hover {
            background: rgba(220, 38, 38, 0.7);
        }

    /* Responsive Design */
    @@media (max-width: 1024px) {
        .admin-sidebar {
            width: 240px;
        }

        .main-content.with-sidebar {
            margin-left: 240px;
        }
    }

    @@media (max-width: 768px) {
        .admin-sidebar {
            transform: translateX(-100%);
        }

            .admin-sidebar.show {
                transform: translateX(0);
            }

        .main-content.with-sidebar {
            margin-left: 0;
        }

        .content-wrapper {
            padding: 20px;
        }

        .page-header {
            flex-direction: column;
            align-items: flex-start;
            gap: 16px;
        }

        .page-title {
            font-size: 24px;
        }

        .data-table th,
        .data-table td {
            padding: 12px 8px;
            font-size: 13px;
        }
    }

    @@media (max-width: 480px) {
        .sidebar-toggle {
            top: 12px;
            left: 12px;
            width: 40px;
            height: 40px;
        }

        .content-wrapper {
            padding: 16px;
        }

        .page-title {
            font-size: 20px;
        }

        .data-table th,
        .data-table td {
            padding: 10px 6px;
            font-size: 12px;
        }
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const toggleBtn = document.getElementById('sidebar-toggle');
        const sidebar = document.querySelector('.admin-sidebar');
        const mainContent = document.querySelector('.main-content');

        if (toggleBtn && sidebar && mainContent) {
            toggleBtn.addEventListener('click', function() {
                sidebar.classList.toggle('collapsed');
                sidebar.classList.toggle('show');
                mainContent.classList.toggle('shifted');

                const icon = toggleBtn.querySelector('i');
                if (sidebar.classList.contains('collapsed')) {
                    icon.className = 'fas fa-bars';
                } else {
                    icon.className = 'fas fa-times';
                }
            });
        }

        // Auto-dismiss alerts after 5 seconds
        const alerts = document.querySelectorAll('.alert');
        alerts.forEach(alert => {
            setTimeout(() => {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            }, 5000);
        });
    });
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
