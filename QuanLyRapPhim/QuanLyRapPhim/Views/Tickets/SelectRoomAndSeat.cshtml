@model QuanLyRapPhim.Models.Showtime
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["SelectSeats"].Value;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <!-- Thông tin phim và lịch chiếu -->
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="text-white mb-2 title-gradient">@Localizer["SelectSeats"]</h1>
            <h4 class="text-muted mb-3">@Localizer["Movie"]: @Model.Movie.Title</h4>
            <div class="d-flex flex-wrap text-light">
                <p class="me-4">
                    <i class="fas fa-door-open text-primary me-2"></i>
                    <strong>@Localizer["Room"]:</strong> @Model.Room.RoomName
                </p>
                <p class="me-4">
                    <i class="fas fa-calendar-alt text-primary me-2"></i>
                    <strong>@Localizer["ShowDate"]:</strong> @Model.Date.ToString("dd/MM/yyyy")
                </p>
                <p>
                    <i class="fas fa-clock text-primary me-2"></i>
                    <strong>@Localizer["ShowTime"]:</strong> @Model.StartTime
                </p>
            </div>
        </div>
        <div class="col-md-4 text-end">
            <a asp-controller="Showtimes" asp-action="Index" asp-route-movieId="@Model.MovieId"
               class="btn btn-secondary glow-effect">
                <i class="fas fa-arrow-left me-1"></i> @Localizer["BackToShowtimes"]
            </a>
        </div>
    </div>

    <!-- Thông báo -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger glow-effect" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success glow-effect" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }

    <!-- Form chọn ghế -->
    <form asp-action="ConfirmBooking" method="post">
        <input type="hidden" name="showtimeId" value="@Model.ShowtimeId" />

        <!-- Màn hình chiếu -->
        <div class="screen-container text-center mb-4">
            <div class="screen title-gradient glow-effect">
                <span class="screen-label">@Localizer["Screen"]</span>
            </div>
        </div>

        <!-- Sơ đồ ghế -->
        <div class="seating-chart mb-4">
            <div class="blur-background"></div>
            @{
                var seats = Model.Room.Seats.OrderBy(s => s.SeatNumber).ToList();
                int seatsPerRow = Model.Room.RoomName switch
                {
                    "Room 1" => 8,
                    "Room 2" => 12,
                    "Room 3" => 10,
                    _ => 10
                };
                int totalSeats = seats.Count;
                int totalRows = (int)Math.Ceiling((double)totalSeats / seatsPerRow);
                char lastRowLabel = (char)('A' + totalRows - 1);

                for (int row = 0; row < totalRows; row++)
                {
                    var rowSeats = seats.Skip(row * seatsPerRow).Take(seatsPerRow).ToList();
                    char rowLabel = (char)('A' + row);
                    bool isLastRow = (rowLabel == lastRowLabel);
                    <div class="seat-row d-flex align-items-center mb-3">
                        <span class="row-label text-light me-3 glow-effect">@Localizer["Row"] @rowLabel</span>
                        <div class="d-flex justify-content-center flex-grow-1 seat-container">
                            @if (isLastRow)
                            {
                                for (int i = 0; i < rowSeats.Count; i += 2)
                                {
                                    var seat1 = rowSeats[i];
                                    if (i + 1 < rowSeats.Count)
                                    {
                                        var seat2 = rowSeats[i + 1];
                                        <div class="seat-couple-pair mx-2 glow-effect">
                                            <div class="seat seat-couple @(seat1.Status == "Đã đặt" ? "seat-taken" : "seat-available")">
                                                <input type="checkbox" name="selectedSeats" value="@seat1.SeatId"
                                                       id="seat-@seat1.SeatId" @(seat1.Status == "Đã đặt" ? "disabled" : "")
                                                       data-pair="@seat2.SeatId" />
                                                <label for="seat-@seat1.SeatId" class="seat-label">
                                                    <div class="seat-inner">
                                                        <i class="fas fa-couch"></i>
                                                        <span class="seat-number">@seat1.SeatNumber</span>
                                                    </div>
                                                </label>
                                            </div>
                                            <div class="seat seat-couple @(seat2.Status == "Đã đặt" ? "seat-taken" : "seat-available")">
                                                <input type="checkbox" name="selectedSeats" value="@seat2.SeatId"
                                                       id="seat-@seat2.SeatId" @(seat2.Status == "Đã đặt" ? "disabled" : "")
                                                       data-pair="@seat1.SeatId" />
                                                <label for="seat-@seat2.SeatId" class="seat-label">
                                                    <div class="seat-inner">
                                                        <i class="fas fa-couch"></i>
                                                        <span class="seat-number">@seat2.SeatNumber</span>
                                                    </div>
                                                </label>
                                            </div>
                                            <div class="cup-holder"></div>
                                            <div class="seat-divider"></div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="seat @(seat1.Status == "Đã đặt" ? "seat-taken" : "seat-available") mx-2 glow-effect">
                                            <input type="checkbox" name="selectedSeats" value="@seat1.SeatId"
                                                   id="seat-@seat1.SeatId" @(seat1.Status == "Đã đặt" ? "disabled" : "") />
                                            <label for="seat-@seat1.SeatId" class="seat-label">
                                                <i class="fas fa-chair"></i>
                                                <span class="seat-number">@seat1.SeatNumber</span>
                                            </label>
                                        </div>
                                    }
                                }
                            }
                            else
                            {
                                foreach (var seat in rowSeats)
                                {
                                    <div class="seat @(seat.Status == "Đã đặt" ? "seat-taken" : "seat-available") mx-2 glow-effect">
                                        <input type="checkbox" name="selectedSeats" value="@seat.SeatId"
                                               id="seat-@seat.SeatId" @(seat.Status == "Đã đặt" ? "disabled" : "") />
                                        <label for="seat-@seat.SeatId" class="seat-label">
                                            <i class="fas fa-chair"></i>
                                            <span class="seat-number">@seat.SeatNumber</span>
                                        </label>
                                    </div>
                                }
                            }
                            @if (rowSeats.Count < seatsPerRow)
                            {
                                @for (int i = 0; i < seatsPerRow - rowSeats.Count; i++)
                                {
                                    <div class="seat seat-placeholder mx-2"></div>
                                }
                            }
                        </div>
                    </div>
                }
            }
        </div>

        <!-- Chú thích -->
        <div class="seat-legend text-center mb-4">
            <p class="text-light">
                <span class="badge bg-success me-2 glow-effect">
                    <i class="fas fa-chair me-1"></i> @Localizer["AvailableSeat"]
                </span>
                <span class="badge bg-danger me-2 glow-effect">
                    <i class="fas fa-chair me-1"></i> @Localizer["TakenSeat"]
                </span>
                <span class="badge bg-primary me-2 glow-effect">
                    <i class="fas fa-chair me-1"></i> @Localizer["SelectedSeat"]
                </span>
                <span class="badge bg-warning text-dark me-2 glow-effect">
                    <i class="fas fa-couch me-1"></i> @Localizer["CoupleSeat"]
                </span>
            </p>
        </div>

        <!-- Thông tin đặt vé -->
        <div class="selected-seats-info text-light mb-4 glow-effect">
            <h5>@Localizer["SelectedSeatsLabel"]: <span id="selected-seats-list"></span></h5>
            <h5>@Localizer["TotalPrice"]: <span id="total-price">0</span> VNĐ</h5>
        </div>

        <!-- Nút xác nhận -->
        <div class="text-center">
            <button type="submit" class="btn btn-payment btn-lg glow-effect">
                <i class="fas fa-ticket-alt me-1"></i> @Localizer["ConfirmBooking"]
            </button>
        </div>
    </form>
</div>

<!-- CSS -->
<style>
    body {
        background-color: #0F0F0F;
        color: #ffffff;
        font-family: 'Montserrat', sans-serif;
    }

    .title-gradient {
        background: linear-gradient(90deg, #ff0033, #ff6b6b);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        font-weight: 700;
    }

    .glow-effect {
        box-shadow: 0 0 15px rgba(255, 0, 51, 0.3);
        transition: box-shadow 0.3s ease, transform 0.3s ease;
    }

        .glow-effect:hover {
            box-shadow: 0 0 25px rgba(255, 0, 51, 0.5);
            transform: scale(1.05);
        }

    .screen-container {
        margin: 0 auto;
        max-width: 800px;
        position: relative;
    }

    .screen {
        background: linear-gradient(90deg, #333, #555, #333);
        height: 60px;
        border-radius: 30px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.6);
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .screen-label {
        font-weight: 700;
        font-size: 1.3rem;
        letter-spacing: 3px;
        text-transform: uppercase;
        color: #fff;
    }

    .seating-chart {
        max-width: 100%;
        margin: 0 auto;
        padding: 20px;
        background: linear-gradient(145deg, #1c1c1c, #252525);
        border-radius: 15px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
        position: relative;
        overflow-x: auto;
    }

    .blur-background {
        position: absolute;
        top: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 80%;
        height: 100%;
        background: radial-gradient(circle at top, rgba(255, 255, 255, 0.1) 0%, rgba(255, 255, 255, 0) 70%);
        filter: blur(20px);
        z-index: 1;
    }

    .seat-row {
        display: flex;
        align-items: center;
        position: relative;
        z-index: 2;
        min-width: fit-content;
    }

    .row-label {
        width: 80px;
        font-weight: 600;
        line-height: 40px;
        color: #fff;
        background: #2a2a2a;
        border-radius: 8px;
        text-align: center;
        flex-shrink: 0;
    }

    .seat-container {
        display: flex;
        justify-content: flex-start;
        gap: 10px;
        flex-wrap: nowrap;
        min-width: 0;
    }

    .seat {
        width: 50px;
        height: 50px;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        transition: transform 0.2s ease;
    }

    .seat-available .seat-label i {
        color: #00cc00;
        cursor: pointer;
    }

    .seat-taken .seat-label i {
        color: #e6002e;
        cursor: not-allowed;
    }

    .seat-couple-pair {
        position: relative;
        display: flex;
        gap: 5px;
    }

    .seat-couple {
        width: 60px;
        height: 55px;
        background: linear-gradient(145deg, #ffcc00, #e6b800);
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(255, 204, 0, 0.5);
    }

        .seat-couple.seat-taken {
            background: linear-gradient(145deg, #e6002e, #b30000);
        }

        .seat-couple .seat-label {
            width: 100%;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            background: linear-gradient(145deg, #ffcc00, #e6b800);
            transition: background 0.3s ease;
        }

            .seat-couple .seat-label i {
                color: #ffffff;
                font-size: 1.8rem;
                filter: drop-shadow(0 2px 2px rgba(0, 0, 0, 0.3));
            }

        .seat-couple .seat-number {
            position: absolute;
            font-size: 0.8rem;
            font-weight: 700;
            color: #ffffff;
            top: 10px;
            background: rgba(0, 0, 0, 0.6);
            border-radius: 10px;
            padding: 3px 8px;
        }

        .seat-couple input:checked + .seat-label {
            background: linear-gradient(145deg, #00bfff, #0099cc);
        }

            .seat-couple input:checked + .seat-label .seat-inner i {
                color: #ffffff;
                transform: scale(1.15);
            }

    .seat-couple-pair .cup-holder {
        width: 25px;
        height: 35px;
        background: linear-gradient(145deg, #ccc, #aaa);
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        border-radius: 8px;
        z-index: 1;
        box-shadow: inset 0 2px 5px rgba(0, 0, 0, 0.3);
    }

    .seat input {
        display: none;
    }

    .seat-label {
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        width: 100%;
        height: 100%;
    }

        .seat-label i {
            font-size: 1.5rem;
            transition: color 0.3s ease;
        }

    .seat-number {
        position: absolute;
        font-size: 0.7rem;
        font-weight: 600;
        color: #fff;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background: rgba(0, 0, 0, 0.5);
        border-radius: 50%;
        padding: 2px 5px;
    }

    .seat input:checked + .seat-label i {
        color: #00bfff;
        transform: scale(1.1);
        box-shadow: 0 0 10px rgba(0, 191, 255, 0.5);
    }

    .seat:hover:not(.seat-taken) .seat-label i {
        transform: scale(1.1);
    }

    .seat-legend .badge {
        font-size: 1rem;
        padding: 10px 18px;
        border-radius: 20px;
        font-weight: 600;
    }

    .selected-seats-info {
        max-width: 700px;
        margin: 0 auto;
        padding: 20px;
        background: linear-gradient(145deg, #1c1c1c, #252525);
        border-radius: 20px;
        border: 2px solid #ff0033;
    }

        .selected-seats-info h5 {
            margin: 10px 0;
            font-size: 1.2rem;
            color: #fff;
        }

    .btn-payment {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
        border: none;
        border-radius: 30px;
        padding: 12px 40px;
        font-weight: 700;
        font-size: 1.3rem;
        letter-spacing: 1px;
        text-transform: uppercase;
        color: #ffffff !important;
        box-shadow: 0 8px 20px rgba(102, 126, 234, 0.4);
    }

        .btn-payment:hover {
            background: linear-gradient(135deg, #764ba2 0%, #667eea 100%) !important;
            transform: translateY(-3px) scale(1.05);
            box-shadow: 0 12px 30px rgba(102, 126, 234, 0.6);
            color: #ffffff !important;
        }

    .btn-secondary {
        border: 2px solid #ff0033;
        color: #ff0033;
        border-radius: 20px;
        padding: 10px 25px;
        font-weight: 600;
        background-color: transparent;
    }

        .btn-secondary:hover {
            background-color: #ff0033;
            color: #fff;
        }

    .text-muted {
        color: #b3b3b3 !important;
    }

    .alert {
        border-radius: 15px;
    }
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const seatCheckboxes = document.querySelectorAll('input[name="selectedSeats"]');
        const selectedSeatsList = document.getElementById('selected-seats-list');
        const totalPriceElement = document.getElementById('total-price');
        const normalPrice = 50000;
        const couplePrice = 100000;
        const noSeatsText = '@Localizer["NoSeatsSelected"]';

        function updateSelectedSeats(event) {
            const clickedCheckbox = event.target;
            const pairId = clickedCheckbox.getAttribute('data-pair');
            const isCouple = clickedCheckbox.closest('.seat').classList.contains('seat-couple');

            if (isCouple && pairId) {
                const pairCheckbox = document.getElementById(`seat-${pairId}`);
                if (clickedCheckbox.checked) {
                    pairCheckbox.checked = true;
                } else {
                    pairCheckbox.checked = false;
                }
            }

            const seatNumbers = Array.from(seatCheckboxes)
                .filter(checkbox => checkbox.checked)
                .map(checkbox => {
                    const label = checkbox.nextElementSibling;
                    const numberSpan = label.querySelector('.seat-number');
                    return numberSpan.textContent;
                });

            selectedSeatsList.textContent = seatNumbers.length > 0
                ? seatNumbers.join(', ')
                : noSeatsText;

            const totalPrice = Array.from(seatCheckboxes)
                .filter(checkbox => checkbox.checked)
                .reduce((total, checkbox) => {
                    const isCoupleSeat = checkbox.closest('.seat').classList.contains('seat-couple');
                    return total + (isCoupleSeat ? couplePrice : normalPrice);
                }, 0);

            totalPriceElement.textContent = totalPrice.toLocaleString('vi-VN');
        }

        seatCheckboxes.forEach(checkbox => {
            checkbox.addEventListener('change', updateSelectedSeats);
        });

        updateSelectedSeats({ target: { checked: false } });
    });
</script>