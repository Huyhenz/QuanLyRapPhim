@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["SelectFoodAndDrinks"].Value;
    Layout = "~/Views/Shared/_Layout.cshtml";

    var showtime = ViewBag.Showtime as QuanLyRapPhim.Models.Showtime;
    var isQuickFoodOnly = showtime == null;
}

<div class="container my-5">

    <!-- THÔNG TIN PHIM -->
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="text-white mb-2 title-gradient">@Localizer["SelectFoodAndDrinks"]</h1>

            @if (!isQuickFoodOnly && showtime != null)
            {
                <h4 class="text-muted mb-3">@Localizer["Movie"]: @showtime.Movie?.Title</h4>
                <div class="d-flex flex-wrap text-light">
                    @if (showtime.Room != null)
                    {
                        <p class="me-4">
                            <i class="fas fa-door-open text-primary me-2"></i>
                            <strong>@Localizer["Room"]:</strong> @showtime.Room.RoomName
                        </p>
                    }
                    <p class="me-4">
                        <i class="fas fa-calendar-alt text-primary me-2"></i>
                        <strong>@Localizer["ShowDate"]:</strong> @showtime.Date.ToString("dd/MM/yyyy")
                    </p>
                    <p>
                        <i class="fas fa-clock text-primary me-2"></i>
                        <strong>@Localizer["ShowTime"]:</strong> @showtime.StartTime.ToString(@"hh\:mm")
                    </p>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center glow-effect mb-3">
                    <i class="fas fa-info-circle"></i>
                    <strong>@Localizer["OnlyFoodAndDrinks"]</strong> – @Localizer["NoTicketSelected"]
                </div>
            }
        </div>

        <div class="col-md-4 text-end">
            @if (!isQuickFoodOnly && showtime != null)
            {
                <a asp-action="SelectRoomAndSeat" asp-controller="Tickets" asp-route-showtimeId="@showtime.ShowtimeId" class="btn btn-secondary glow-effect">
                    <i class="fas fa-arrow-left me-2"></i>@Localizer["BackToSeatSelection"]
                </a>
            }
            else
            {
                <a asp-action="Index" asp-controller="Showtimes" class="btn btn-secondary glow-effect">
                    <i class="fas fa-arrow-left me-2"></i>Quay lại chọn suất chiếu
                </a>
            }
        </div>
    </div>

    <!-- THÔNG BÁO -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger glow-effect" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success glow-effect" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }

    <!-- FORM CHỌN ĐỒ ĂN -->
    <form asp-action="SelectFood" asp-controller="Tickets" method="post">

        <!-- MÀN HÌNH QUẦY ĐỒ ĂN -->
        <div class="screen-container text-center mb-5">
            <div class="screen title-gradient glow-effect">
                <span class="screen-label">@Localizer["FoodCounter"]</span>
            </div>
        </div>

        <!-- DANH SÁCH MÓN ĂN -->
        <div class="row g-4 mb-5">
            @foreach (var food in ViewBag.FoodItems as List<QuanLyRapPhim.Models.FoodItem>)
            {
                var currentQty = 0;
                // Load từ ViewBag.SelectedFoods nếu có
                if (ViewBag.SelectedFoods is List<QuanLyRapPhim.Models.TempFoodItem> selectedFoods)
                {
                    var selected = selectedFoods.FirstOrDefault(f => f.FoodItemId == food.FoodItemId);
                    if (selected != null)
                    {
                        currentQty = selected.Quantity;
                    }
                }

                <div class="col-md-6 col-lg-4 col-xl-3">
                    <div class="card h-100 food-card glow-effect @(food.Category == "Combo" ? "border-warning" : food.Category == "Bắp" ? "border-success" : "border-primary")">
                        @if (!string.IsNullOrEmpty(food.ImageUrl))
                        {
                            <img src="@food.ImageUrl" class="card-img-top" alt="@food.Name" style="height:160px; object-fit:cover; border-radius:15px 15px 0 0;" />
                        }
                        else
                        {
                            <div class="bg-dark text-center p-5 d-flex align-items-center justify-content-center" style="height:160px;">
                                <i class="fas fa-utensils fa-3x text-muted"></i>
                            </div>
                        }

                        <div class="card-body d-flex flex-column p-3">
                            <h6 class="card-title mb-1 fw-bold text-white">@food.Name</h6>

                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="badge bg-info">@food.Size</span>
                                <span class="badge @(food.Category == "Combo" ? "bg-warning text-dark" : food.Category == "Bắp" ? "bg-success" : "bg-primary")">
                                    @food.Category
                                </span>
                            </div>

                            <p class="card-text text-warning fw-bold mb-3 fs-5">@food.Price.ToString("N0") đ</p>

                            <div class="input-group mt-auto">
                                <button type="button" class="btn btn-outline-light btn-sm minus-btn glow-effect">
                                    <i class="fas fa-minus"></i>
                                </button>
                                <input type="number" name="selectedFoods[@food.FoodItemId]" value="@currentQty" min="0" max="10" class="form-control text-center qty fw-bold" style="max-width:70px;" />
                                <button type="button" class="btn btn-outline-light btn-sm plus-btn glow-effect">
                                    <i class="fas fa-plus"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- CHÚ THÍCH LOẠI MÓN -->
        <div class="seat-legend text-center mb-4">
            <p class="text-light mb-0">
                <span class="badge bg-success me-2 glow-effect px-3 py-2"><i class="fas fa-popcorn me-1"></i> @Localizer["Popcorn"]</span>
                <span class="badge bg-primary me-2 glow-effect px-3 py-2"><i class="fas fa-glass-martini-alt me-1"></i> @Localizer["Drinks"]</span>
                <span class="badge bg-warning text-dark me-2 glow-effect px-3 py-2"><i class="fas fa-box me-1"></i> @Localizer["Combo"]</span>
            </p>
        </div>

        <!-- TỔNG TIỀN ĐỒ ĂN -->
        <div class="selected-seats-info text-light mb-4 glow-effect p-4">
            <h5 class="mb-3 text-center"><i class="fas fa-shopping-cart me-2"></i>@Localizer["FoodOrder"]:</h5>
            <div id="food-order-list" class="mb-3 text-center"></div>
            <hr class="border-secondary">
            <h4 class="text-warning text-center mb-0">@Localizer["TotalFoodAmount"]: <span id="food-total" class="fw-bold">0</span> VNĐ</h4>
        </div>

        <!-- NÚT XÁC NHẬN -->
        <div class="text-center">
            <button type="submit" class="btn btn-payment btn-lg px-5 py-3 glow-effect">
                <i class="fas fa-arrow-right me-2"></i>Tiếp tục thanh toán
            </button>
        </div>
    </form>
</div>

<!-- CSS -->
<style>
    body {
        background-color: #0F0F0F;
        color: #ffffff;
        font-family: 'Montserrat', sans-serif;
    }

    .title-gradient {
        background: linear-gradient(90deg, #ff0033, #ff6b6b);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-weight: 700;
    }

    .glow-effect {
        box-shadow: 0 0 15px rgba(255, 0, 51, 0.3);
        transition: all 0.3s ease;
    }

        .glow-effect:hover {
            box-shadow: 0 0 25px rgba(255, 0, 51, 0.6);
            transform: translateY(-3px);
        }

    .screen-container {
        max-width: 800px;
        margin: 0 auto;
    }

    .screen {
        background: linear-gradient(90deg, #333, #555, #333);
        height: 60px;
        border-radius: 30px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.6);
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .screen-label {
        font-weight: 700;
        font-size: 1.3rem;
        letter-spacing: 3px;
        text-transform: uppercase;
    }

    .food-card {
        background: linear-gradient(145deg,#1c1c1c,#252525);
        border-radius: 15px;
        overflow: hidden;
        transition: all 0.3s ease;
        border: 2px solid transparent;
    }

        .food-card:hover {
            border-color: #ff0033;
            transform: translateY(-5px);
        }

        .food-card .card-body {
            background: #1a1a1a;
        }

    .input-group .btn {
        border-radius: 8px;
        width: 38px;
        height: 38px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        background-color: #333;
        border: 2px solid #ff0033;
        color: #fff;
    }

        .input-group .btn:hover {
            background-color: #ff0033;
            border-color: #ff0033;
            transform: scale(1.1);
        }

    .qty {
        background-color: #2a2a2a;
        border: 2px solid #ff0033;
        color: #fff;
        font-size: 1.1rem;
    }

        .qty:focus {
            background-color: #2a2a2a;
            border-color: #ff6b6b;
            box-shadow: 0 0 10px rgba(255,0,51,0.5);
        }

    .seat-legend .badge {
        font-size: 1rem;
        padding: 10px 18px;
        border-radius: 20px;
        font-weight: 600;
    }

    .selected-seats-info {
        max-width: 700px;
        margin: 0 auto;
        background: linear-gradient(145deg,#1c1c1c,#252525);
        border-radius: 20px;
        border: 2px solid #ff0033;
    }

    #food-order-list {
        font-size: 1rem;
        line-height: 1.8;
        color: #ccc;
    }

    .btn-payment {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
        border: none;
        border-radius: 30px;
        font-weight: 700;
        font-size: 1.3rem;
        letter-spacing: 1px;
        text-transform: uppercase;
        color: #ffffff !important;
        box-shadow: 0 8px 20px rgba(102,126,234,0.4);
    }

        .btn-payment:hover {
            background: linear-gradient(135deg, #764ba2 0%, #667eea 100%) !important;
            transform: translateY(-3px) scale(1.05);
            box-shadow: 0 12px 30px rgba(102,126,234,0.6);
        }

    .btn-secondary {
        border: 2px solid #ff0033;
        color: #ff0033;
        border-radius: 20px;
        padding: 10px 25px;
        font-weight: 600;
        background-color: transparent;
    }

        .btn-secondary:hover {
            background-color: #ff0033;
            color: #fff;
            border-color: #ff0033;
        }

    .text-muted {
        color: #b3b3b3 !important;
    }

    .alert {
        border-radius: 15px;
        font-size: 1rem;
    }
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const foodData = @Html.Raw(Json.Serialize(ViewBag.FoodItems));
            const orderList = document.getElementById('food-order-list');
            const foodTotal = document.getElementById('food-total');
            const noItemsText = 'Chưa chọn món nào';

            function updateOrder() {
                let total = 0;
                let items = [];
                document.querySelectorAll('.qty').forEach(input => {
                    const qty = parseInt(input.value) || 0;
                    if (qty > 0) {
                        const foodId = input.name.match(/\d+/)[0];
                        const food = foodData.find(f => f.foodItemId == foodId);
                        if (food) {
                            const price = food.price * qty;
                            total += price;
                            items.push(`<span class="text-warning">▶</span> ${food.name} <strong>x${qty}</strong> = <span class="text-success fw-bold">${price.toLocaleString('vi-VN')}đ</span>`);
                        }
                    }
                });
                orderList.innerHTML = items.length > 0 ? items.join('<br>') : `<em class="text-muted">${noItemsText}</em>`;
                foodTotal.textContent = total.toLocaleString('vi-VN');
            }

            document.querySelectorAll('.minus-btn').forEach(btn => {
                btn.addEventListener('click', function () {
                    const input = this.parentElement.querySelector('.qty');
                    let val = parseInt(input.value) || 0;
                    if (val > 0) { input.value = val - 1; updateOrder(); }
                });
            });

            document.querySelectorAll('.plus-btn').forEach(btn => {
                btn.addEventListener('click', function () {
                    const input = this.parentElement.querySelector('.qty');
                    let val = parseInt(input.value) || 0;
                    const max = parseInt(input.getAttribute('max')) || 10;
                    if (val < max) { input.value = val + 1; updateOrder(); }
                });
            });

            document.querySelectorAll('.qty').forEach(input => {
                input.addEventListener('change', updateOrder);
                input.addEventListener('input', updateOrder);
            });

            updateOrder();
        });
    </script>
}