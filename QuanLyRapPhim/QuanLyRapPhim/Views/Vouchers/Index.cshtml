@model IEnumerable<QuanLyRapPhim.Models.Voucher>
@using QuanLyRapPhim.Models
@using System.Linq
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["VoucherList"].Value;
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool isAdmin = User.IsInRole("Admin");
}

<div class="container-fluid d-flex position-relative">
    @await Html.PartialAsync("_ChristmasDashboard")

    <div class="frame-wrapper flex-grow-1 @(isAdmin ? "admin-view" : "")">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="title-gradient">
                <span class="christmas-icon">🎁</span>
                @Localizer["VoucherList"]
                <span class="christmas-icon">🎄</span>
            </h1>
            @if (isAdmin)
            {
                <div class="header-actions">
                    <a asp-action="Create" class="btn btn-create christmas-btn">
                        <i class="fas fa-plus"></i> @Localizer["CreateVoucher"]
                    </a>
                    <span class="order-count ms-3">
                        <i class="fas fa-gift"></i> @Model.Count() @Localizer["VouchersFound"]
                    </span>
                </div>
            }
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success christmas-alert fade show" role="alert">
                <i class="fas fa-check-circle"></i>
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger christmas-alert fade show" role="alert">
                <i class="fas fa-exclamation-circle"></i>
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="table-container">
            <table class="table table-custom christmas-table">
                <thead>
                    <tr>
                        <th><i class="fas fa-barcode"></i> @Localizer["VoucherCode"]</th>
                        <th><i class="fas fa-coins"></i> @Localizer["FixedDiscount"]</th>
                        <th><i class="fas fa-percentage"></i> @Localizer["PercentageDiscount"]</th>
                        <th><i class="fas fa-calendar-times"></i> @Localizer["ExpiryDate"]</th>
                        <th><i class="fas fa-toggle-on"></i> @Localizer["Status"]</th>
                        <th><i class="fas fa-hashtag"></i> @Localizer["UsageLimit"]</th>
                        <th><i class="fas fa-chart-line"></i> @Localizer["UsedCount"]</th>
                        <th><i class="fas fa-tools"></i> @Localizer["Actions"]</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-bold text-warning">
                                <span class="voucher-code">@item.Code</span>
                            </td>
                            <td>
                                @if (item.DiscountAmount > 0)
                                {
                                    <span class="discount-badge fixed">@item.DiscountAmount.ToString("N0") VND</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                @if (item.DiscountPercentage > 0)
                                {
                                    <span class="discount-badge percent">@item.DiscountPercentage%</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>@item.ExpiryDate.ToString("dd/MM/yyyy")</td>
                            <td>
                                @if (item.IsActive)
                                {
                                    <span class="badge badge-active">
                                        <i class="fas fa-check-circle"></i> @Localizer["Active"]
                                    </span>
                                }
                                else
                                {
                                    <span class="badge badge-inactive">
                                        <i class="fas fa-times-circle"></i> @Localizer["Inactive"]
                                    </span>
                                }
                            </td>
                            <td>
                                <span class="usage-count">@item.UsageLimit</span>
                            </td>
                            <td>
                                <span class="usage-count used">@item.UsedCount / @item.UsageLimit</span>
                                <div class="progress mt-1" style="height: 6px;">
                                    <div class="progress-bar bg-warning" role="progressbar"
                                         style="width: @((item.UsedCount * 100.0 / item.UsageLimit).ToString("F2"))%">
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <a asp-action="Details" asp-route-id="@item.VoucherId"
                                       class="btn btn-sm btn-info action-btn" title="@Localizer["Details"]">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.VoucherId"
                                       class="btn btn-sm btn-warning action-btn" title="@Localizer["Edit"]">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.VoucherId"
                                       class="btn btn-sm btn-danger action-btn" title="@Localizer["Delete"]">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <footer class="footer text-center py-3">
        <p class="text-white mb-0">
            <span class="christmas-icon-small">🎅</span>
            @Localizer["Copyright"] 2025 CinemaX. @Localizer["AllRightsReserved"]
            <span class="christmas-icon-small">🎁</span>
        </p>
    </footer>
</div>

<style>
    body {
        background-color: #0F0F0F;
        font-family: 'Montserrat', sans-serif;
    }

    .title-gradient {
        background: linear-gradient(90deg, #FFD700, #FF4500);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-size: 2.5rem;
        font-weight: 700;
    }

    .christmas-icon {
        font-size: 2rem;
        animation: bounce 2s infinite;
    }

    .christmas-icon-small {
        font-size: 1.2rem;
        animation: bounce 2s infinite;
    }

    @@keyframes bounce {
        0%, 100%

    {
        transform: translateY(0);
    }

    50% {
        transform: translateY(-5px);
    }

    }

    .header-actions {
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .order-count {
        color: #FFD700;
        font-weight: 600;
        font-size: 1rem;
    }

    .christmas-btn {
        background: linear-gradient(135deg, #C41E3A, #165B33);
        border: 2px solid #FFD700;
        color: white;
        padding: 10px 25px;
        border-radius: 12px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        display: inline-block;
    }

        .christmas-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(255, 215, 0, 0.6);
            color: white;
        }

        .christmas-btn i {
            margin-right: 8px;
        }

    .christmas-alert {
        background: linear-gradient(135deg, rgba(139, 0, 0, 0.3), rgba(22, 91, 51, 0.3));
        color: #FFD700;
        border: 2px solid #FFD700;
        border-radius: 15px;
        padding: 15px;
    }

        .christmas-alert i {
            margin-right: 10px;
        }

    .table-container {
        overflow-x: auto;
        border-radius: 15px;
    }

    .christmas-table {
        width: 100%;
        background-color: #1c1c1c;
        border: 2px solid #FFD700;
        border-radius: 15px;
        overflow: hidden;
    }

        .christmas-table thead tr {
            background: linear-gradient(135deg, #8B0000, #165B33);
            color: #FFFAFA;
        }

        .christmas-table th {
            padding: 18px 15px;
            border: none;
            font-weight: 700;
            text-transform: uppercase;
            font-size: 0.85rem;
            letter-spacing: 1px;
            border-bottom: 2px solid #FFD700;
        }

            .christmas-table th i {
                margin-right: 8px;
            }

        .christmas-table td {
            padding: 15px;
            border: none;
            color: #FFFAFA;
            border-bottom: 1px solid rgba(255, 215, 0, 0.3);
            vertical-align: middle;
        }

        .christmas-table tr:hover {
            background: linear-gradient(90deg, rgba(139, 0, 0, 0.3), rgba(22, 91, 51, 0.3));
        }

        .christmas-table tbody tr:last-child td {
            border-bottom: none;
        }

    .voucher-code {
        font-family: 'Courier New', monospace;
        background: linear-gradient(135deg, #FFD700, #FFA500);
        color: #000;
        padding: 6px 12px;
        border-radius: 8px;
        font-weight: 700;
        letter-spacing: 2px;
    }

    .discount-badge {
        padding: 6px 12px;
        border-radius: 10px;
        font-weight: 600;
        font-size: 0.9rem;
        display: inline-block;
    }

        .discount-badge.fixed {
            background: linear-gradient(135deg, #22C55E, #16A34A);
            color: white;
        }

        .discount-badge.percent {
            background: linear-gradient(135deg, #3B82F6, #2563EB);
            color: white;
        }

    .badge {
        padding: 8px 16px;
        border-radius: 12px;
        font-weight: 600;
        font-size: 0.85rem;
        display: inline-block;
    }

        .badge i {
            margin-right: 5px;
        }

    .badge-active {
        background: linear-gradient(135deg, #22C55E, #16A34A);
        color: white;
        border: 2px solid #FFD700;
    }

    .badge-inactive {
        background: linear-gradient(135deg, #6B7280, #4B5563);
        color: white;
        border: 2px solid #FFD700;
    }

    .usage-count {
        font-weight: 600;
        color: #FFD700;
    }

        .usage-count.used {
            color: #FFFAFA;
        }

    .action-buttons {
        display: flex;
        gap: 5px;
        justify-content: center;
    }

    .action-btn {
        padding: 8px 12px;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.3s ease;
        border: 2px solid #FFD700;
    }

        .action-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(255, 215, 0, 0.5);
        }

    .btn-info {
        background: linear-gradient(135deg, #0EA5E9, #0284C7);
        color: white;
    }

    .btn-warning {
        background: linear-gradient(135deg, #FFD700, #FFA500);
        color: #000;
    }

    .btn-danger {
        background: linear-gradient(135deg, #8B0000, #C41E3A);
        color: white;
    }

    .progress {
        background-color: rgba(255, 255, 255, 0.1);
        border-radius: 4px;
    }

    .footer {
        background: linear-gradient(135deg, #8B0000, #165B33);
        border-top: 2px solid #FFD700;
        margin-top: 50px;
    }

    @@media (max-width: 768px) {
        .title-gradient

    {
        font-size: 2rem;
    }

    .header-actions {
        flex-direction: column;
        align-items: flex-start;
        gap: 10px;
    }

    .christmas-table {
        font-size: 0.85rem;
    }

    .action-buttons {
        flex-direction: column;
    }

    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const toggleBtn = document.getElementById('sidebar-toggle');
        const sidebar = document.querySelector('.christmas-sidebar');
        const frameWrapper = document.querySelector('.frame-wrapper');

        if (toggleBtn && sidebar && frameWrapper) {
            toggleBtn.addEventListener('click', function() {
                sidebar.classList.toggle('collapsed');
                frameWrapper.classList.toggle('shifted');

                const icon = toggleBtn.querySelector('i');
                if (sidebar.classList.contains('collapsed')) {
                    icon.className = 'fas fa-bars';
                } else {
                    icon.className = 'fas fa-times';
                }
            });
        }
    });
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}