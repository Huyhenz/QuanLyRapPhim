@model IEnumerable<QuanLyRapPhim.Models.Voucher>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "My Vouchers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Localizer["My Vouchers"]</h2>

@if (Model.Any())
{
    <table class="table table-striped">
        <thead class="table-dark">
            <tr>
                <th>@Localizer["Code"]</th>
                <th>@Localizer["Discount Amount"]</th>     
                <th>@Localizer["Discount Percentage"]</th>
                <th>@Localizer["Expiry Date"]</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var voucher in Model)
            {
                <tr>
                    <td>@voucher.Code</td>
                    <td>@voucher.DiscountAmount.ToString("C")</td> <!-- Định dạng như tiền tệ nếu cần -->
                    <td>@voucher.DiscountPercentage %</td>
                    <td>@voucher.ExpiryDate.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>@Localizer["You have no claimed vouchers."]</p>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}