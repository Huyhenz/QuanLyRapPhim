@model IEnumerable<QuanLyRapPhim.Models.Booking>

@{
    ViewData["Title"] = "Ticket History";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Ticket History</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <style>
        body {
            background-color: #0F0F0F;
            color: white;
            font-family: 'Montserrat', sans-serif;
        }

        .table-dark {
            background-color: #1c1c1c;
            border-radius: 15px;
            overflow: hidden;
        }

            .table-dark th {
                background-color: #2a2a2a;
                font-weight: 600;
                text-align: center;
            }

            .table-dark td {
                vertical-align: middle;
                text-align: center;
            }

        .title-gradient {
            background: linear-gradient(90deg, #ff0033, #ff8c00);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            font-size: 2.5rem;
            font-weight: bold;
            text-align: center;
            margin-bottom: 40px;
        }

        .badge-success {
            background-color: #28a745;
            font-weight: 600;
            padding: 8px 16px;
            border-radius: 20px;
        }

        .btn-back {
            background: linear-gradient(45deg, #ff0033, #cc002a);
            border: none;
            color: white;
            padding: 14px 40px;
            border-radius: 30px;
            font-weight: 600;
            font-size: 1.1rem;
            transition: all 0.3s ease;
        }

            .btn-back:hover {
                transform: translateY(-3px);
                box-shadow: 0 10px 20px rgba(255,0,51,0.4);
            }

        .glow-effect {
            box-shadow: 0 0 20px rgba(255,0,51,0.3);
            transition: all 0.3s ease;
        }

            .glow-effect:hover {
                box-shadow: 0 0 30px rgba(255,0,51,0.6);
            }

        .text-muted {
            color: #aaaaaa !important;
            font-style: italic;
        }
    </style>
</head>
<body>
    <div class="container py-5">
        <h1 class="title-gradient">Ticket History</h1>
        <div class="table-responsive">
            <table class="table table-dark table-hover glow-effect">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Phim</th>
                        <th>Phòng</th>
                        <th>Ghế</th>
                        <th>Ngày chiếu</th>
                        <th>Giờ chiếu</th>
                        <th>Đồ ăn/Đồ uống</th>
                        <th>Số tiền</th>
                        <th>Voucher</th>
                        <th>Ngày đặt</th>
                        <th>Trạng thái</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model?.Any() == true)
                    {
                        @foreach (var booking in Model)
                        {
                            var showtime = booking.Showtime;
                            var isFoodOnly = showtime == null;
                            var payment = booking.Payment;
                            var displayAmount = booking.FinalAmount > 0 ? booking.FinalAmount : booking.TotalPrice; // Use TotalPrice if FinalAmount is 0 or invalid
                            var hasDiscount = !string.IsNullOrEmpty(booking.VoucherUsed) && booking.FinalAmount < booking.TotalPrice && booking.FinalAmount > 0;
                            var discountAmount = hasDiscount ? (booking.TotalPrice - booking.FinalAmount) : 0;
                            <tr class="text-center align-middle">
                                <td class="fw-bold text-info">#@booking.BookingId</td>
                                <td>
                                    @(isFoodOnly ? "Chỉ mua đồ ăn" : showtime.Movie.Title)
                                </td>
                                <td>@(isFoodOnly ? "—" : showtime.Room.RoomName)</td>
                                <td>
                                    @(booking.BookingDetails?.Any() == true
                                        ? string.Join(", ", booking.BookingDetails.Select(bd => bd.Seat.SeatNumber))
                                        : Html.Raw("<em class='text-muted'>—</em>"))
                                </td>
                                <td>@(isFoodOnly ? "—" : showtime.Date.ToString("dd/MM/yyyy"))</td>
                                <td>@(isFoodOnly ? "—" : showtime.StartTime.ToString(@"hh\:mm"))</td>
                                <td>
                                    @if (booking.BookingFoods?.Any() == true)
                                    {
                                        <div class="text-start">
                                            @foreach (var bf in booking.BookingFoods)
                                            {
                                                <div>@bf.FoodItem.Name × @bf.Quantity</div>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <em class="text-muted">Không</em>
                                    }
                                </td>
                                <td class="text-end text-warning fw-bold fs-5">
                                    @displayAmount.ToString("N0") <small class="text-white-50">VNĐ</small>
                                    @if (hasDiscount)
                                    {
                                        <br />
                                        <small class="text-success">(Giảm @discountAmount.ToString("N0") VNĐ từ voucher)</small>
                                    }
                                </td>
                                <td>
                                    @(booking.VoucherUsed ?? "—")
                                </td>
                                <td>@booking.BookingDate.ToString("dd/MM/yyyy")<br><small>@booking.BookingDate.ToString("HH:mm")</small></td>
                                <td>
                                    @if (booking.Payment != null)
                                    {
                                        @if (booking.Payment.PaymentStatus == "Completed")
                                        {
                                            <span class="badge bg-success px-3 py-2">Đã thanh toán</span>
                                        }
                                        else if (booking.Payment.PaymentStatus == "Pending")
                                        {
                                            <span class="badge bg-warning px-3 py-2">Đang chờ</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger px-3 py-2">@booking.Payment.PaymentStatus</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary px-3 py-2">Chưa thanh toán</span>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="11" class="text-center py-5">
                                <i class="fas fa-receipt fa-3x mb-3 text-muted"></i><br>
                                <em class="text-muted fs-4">No ticket history</em>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="text-center mt-5">
            <a asp-controller="Home" asp-action="Index" class="btn btn-back glow-effect">
                <i class="fas fa-home me-2"></i> Back to Home
            </a>
        </div>
    </div>
</body>
</html>