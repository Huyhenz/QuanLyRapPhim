@using QuanLyRapPhim.Models
@using System.Linq
@model IEnumerable<Booking>

@{
    ViewData["Title"] = "Lịch sử thanh toán";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Lịch sử thanh toán</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <style>
        body {
            background-color: #0F0F0F;
            color: white;
            font-family: 'Montserrat', sans-serif;
        }
        .table-dark {
            background-color: #1c1c1c;
            border-radius: 15px;
            overflow: hidden;
        }
        .table-dark th {
            background-color: #2a2a2a;
            font-weight: 600;
            text-align: center;
        }
        .table-dark td {
            vertical-align: middle;
            text-align: center;
        }
        .title-gradient {
            background: linear-gradient(90deg, #ff0033, #1c1c1c);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            font-size: 2.2rem;
            font-weight: bold;
            text-align: center;
            margin-bottom: 30px;
        }
        .badge-success {
            background-color: #28a745;
            font-weight: 600;
            padding: 6px 12px;
        }
        .btn-back {
            background-color: #ff0033;
            border: none;
            color: white;
            padding: 12px 30px;
            border-radius: 25px;
            font-weight: 600;
            transition: all 0.3s ease;
        }
        .btn-back:hover {
            background-color: #cc002a;
            transform: scale(1.05);
        }
        .glow-effect {
            box-shadow: 0 0 15px rgba(255, 0, 51, 0.3);
            transition: all 0.3s ease;
        }
        .glow-effect:hover {
            box-shadow: 0 0 25px rgba(255, 0, 51, 0.5);
        }
        .text-muted {
            color: #b3b3b3 !important;
            font-style: italic;
        }
    </style>
</head>
<body>
    <div class="container py-5">
        <h1 class="title-gradient">Lịch sử thanh toán</h1>

        <div class="table-responsive">
            <table class="table table-dark table-bordered glow-effect">
                <thead>
                    <tr>
                        <th>Mã đặt vé</th>
                        <th>Phim</th>
                        <th>Phòng</th>
                        <th>Ghế</th>
                        <th>Ngày chiếu</th>
                        <th>Giờ chiếu</th>
                        <th>Đồ ăn</th>
                        <th>Tổng tiền</th>
                        <th>Ngày đặt</th>
                        <th>Trạng thái</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model?.Any() == true)
                    {
                        @foreach (var booking in Model)
                        {
                            var showtime = booking.Showtime;
                            var isFoodOnly = showtime == null;

                            <tr>
                                <td class="fw-bold">@booking.BookingId</td>

                                <!-- Phim -->
                                <td>
                                    @if (!isFoodOnly)
                                    {
                                        @showtime.Movie.Title
                                    }
                                    else
                                    {
                                        <em class="text-muted">Chỉ đặt đồ ăn</em>
                                    }
                                </td>

                                <!-- Phòng -->
                                <td>
                                    @if (!isFoodOnly)
                                    {
                                        @showtime.Room.RoomName
                                    }
                                    else
                                    {
                                        <em class="text-muted">—</em>
                                    }
                                </td>

                                <!-- Ghế -->
                                <td>
                                    @if (booking.BookingDetails?.Any() == true)
                                    {
                                        @string.Join(", ", booking.BookingDetails.Select(bd => bd.Seat.SeatNumber))
                                    }
                                    else
                                    {
                                        <em class="text-muted">Không chọn</em>
                                    }
                                </td>

                                <!-- Ngày chiếu -->
                                <td>
                                    @if (!isFoodOnly)
                                    {
                                        @showtime.Date.ToString("dd/MM/yyyy")
                                    }
                                    else
                                    {
                                        <em class="text-muted">—</em>
                                    }
                                </td>

                                <!-- Giờ chiếu -->
                                <td>
                                    @if (!isFoodOnly)
                                    {
                                        @showtime.StartTime.ToString("hh\\:mm")
                                    }
                                    else
                                    {
                                        <em class="text-muted">—</em>
                                    }
                                </td>

                                <!-- Đồ ăn -->
                                <td>
                                    @if (booking.BookingFoods?.Any() == true)
                                    {
                                        <ul class="list-unstyled mb-0 small">
                                            @foreach (var bf in booking.BookingFoods)
                                            {
                                                <li>@bf.FoodItem.Name x @bf.Quantity</li>
                                            }
                                        </ul>
                                    }
                                    else
                                    {
                                        <em class="text-muted">Không</em>
                                    }
                                </td>

                                <!-- Tổng tiền -->
                                <td class="text-end text-warning fw-bold" style="font-size: 1.05rem;">
                                    @string.Format("{0:N0}", booking.TotalPrice) <small class="text-white-50">VNĐ</small>
                                </td>

                                <!-- Ngày đặt -->
                                <td>@booking.BookingDate.ToString("dd/MM/yyyy HH:mm")</td>

                                <!-- Trạng thái -->
                                <td>
                                    <span class="badge badge-success">Đã thanh toán</span>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="10" class="text-center py-5">
                                <em class="text-muted">Chưa có lịch sử thanh toán nào.</em>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="text-center mt-5">
            <a asp-controller="Home" asp-action="Index" class="btn btn-back glow-effect">
                Quay lại trang chủ
            </a>
        </div>
    </div>
</body>
</html>