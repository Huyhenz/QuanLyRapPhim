@using QuanLyRapPhim.Models
@using System.Linq
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model IEnumerable<Seat>
@{
    ViewData["Title"] = Localizer["ManageSeats"].Value;
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool isAdmin = User.IsInRole("Admin");
}
<div class="container-fluid d-flex position-relative">
    <!-- Include Christmas Dashboard -->
    @Html.Partial("_ChristmasDashboard")

    <!-- MAIN CONTENT -->
    <div class="frame-wrapper flex-grow-1 @(isAdmin ? "admin-view" : "")">
        <div class="content-inner">
            <h1 class="page-title">@Localizer["ManageSeats"]</h1>
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success" role="alert">
                    @TempData["SuccessMessage"]
                </div>
            }
            <p>
                <a asp-action="Create" class="create-button">@Localizer["CreateSeat"]</a>
            </p>
            <table class="table">
                <thead>
                    <tr>
                        <th>@Localizer["SeatNumber"]</th>
                        <th>@Localizer["Status"]</th>
                        <th>@Localizer["Room"]</th>
                        <th>@Localizer["Actions"]</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.SeatNumber)</td>
                            <td>@Html.DisplayFor(modelItem => item.Status)</td>
                            <td>@Html.DisplayFor(modelItem => item.Room.RoomName)</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.SeatId" class="action-link edit-link">@Localizer["Edit"]</a>
                                <a asp-action="Delete" asp-route-id="@item.SeatId" class="action-link delete-link">@Localizer["Delete"]</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <footer class="footer text-center py-3">
        <p class="text-white mb-0">@Localizer["Copyright"].Value</p>
    </footer>
</div>
<style>
    body {
        margin: 0;
        background-color: #0F0F0F;
        color: #d3d3d3;
        font-family: 'Montserrat', sans-serif;
        overflow-x: hidden;
    }

    .frame-wrapper.admin-view {
        margin-left: 280px;
        transition: margin-left 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55);
    }

        .frame-wrapper.admin-view.shifted {
            margin-left: 0;
        }

    .content-inner {
        max-width: 1200px;
        width: 100%;
    }

    .page-title {
        background-color: #1c1c1c;
        color: #d3d3d3;
        padding: 15px;
        text-align: center;
        border-radius: 15px;
        font-family: 'Montserrat', sans-serif;
        font-weight: 700;
        text-transform: uppercase;
        margin-bottom: 20px;
    }

    .alert-success {
        background-color: #333;
        color: #d3d3d3;
        border: 1px solid #ff0000;
        border-radius: 10px;
        margin-bottom: 20px;
    }

    .create-button {
        display: inline-block;
        padding: 8px 20px;
        background-color: #00cc00;
        color: #d3d3d3;
        text-decoration: none;
        border-radius: 20px;
        font-weight: 600;
        font-family: 'Montserrat', sans-serif;
        margin-bottom: 20px;
    }

        .create-button:hover {
            transform: scale(1.05);
            transition: transform 0.3s ease;
        }

    .table {
        width: 100%;
        border-collapse: collapse;
        background-color: #1c1c1c;
        box-shadow: 0 10px 20px rgba(0,0,0,0.3);
        border-radius: 15px;
        overflow: hidden;
        border: 2px solid #ff0000;
    }

        .table thead tr {
            background-color: #333;
            color: #d3d3d3;
        }

        .table th {
            padding: 15px;
            border: none;
            font-family: 'Montserrat', sans-serif;
            font-weight: 600;
        }

        .table td {
            padding: 12px;
            border: none;
            color: #a9a9a9;
            font-family: 'Montserrat', sans-serif;
        }

        .table tr:hover {
            background-color: #2a2a2a;
        }

    .action-link {
        padding: 5px 15px;
        text-decoration: none;
        border-radius: 20px;
        font-weight: 600;
        font-family: 'Montserrat', sans-serif;
        margin-right: 5px;
    }

    .edit-link {
        color: #000;
        background-color: #ffcc00;
    }

    .details-link {
        color: #d3d3d3;
        background-color: #00bfff;
    }

    .delete-link {
        color: #d3d3d3;
        background-color: #e6002e;
    }

    .action-link:hover {
        transform: scale(1.05);
        transition: transform 0.3s ease;
    }

    @@media (max-width: 768px) {
        .frame-wrapper.admin-view

    {
        margin-left: 220px;
    }

    .frame-wrapper.admin-view.shifted {
        margin-left: 0;
    }

    }

    @@media (max-width: 576px) {
        .container-fluid.d-flex

    {
        flex-direction: column;
    }

    .frame-wrapper.admin-view {
        margin-left: 0;
        width: 100%;
        min-height: auto;
    }

    .content-inner {
        width: 100%;
        padding: 20px;
    }

    }
</style>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const toggleBtn = document.getElementById('sidebar-toggle');
        const sidebar = document.querySelector('.christmas-sidebar');
        const frameWrapper = document.querySelector('.frame-wrapper');
        if (toggleBtn && sidebar && frameWrapper) {
            toggleBtn.addEventListener('click', function() {
                sidebar.classList.toggle('collapsed');
                frameWrapper.classList.toggle('shifted');
                const icon = toggleBtn.querySelector('i');
                if (sidebar.classList.contains('collapsed')) {
                    icon.className = 'fas fa-bars';
                } else {
                    icon.className = 'fas fa-times';
                }
            });
        }
    });
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>