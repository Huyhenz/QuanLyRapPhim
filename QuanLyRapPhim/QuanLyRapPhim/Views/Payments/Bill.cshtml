@model QuanLyRapPhim.Models.Payment
@{
    ViewData["Title"] = "Hóa đơn thanh toán";
    var booking = Model.Booking;
    var fullName = ViewBag.FullName as string;
}

<div class="container my-5">
    <div class="card showtime-card text-light mb-4 shadow-lg rounded-3">
        <div class="card-body text-center">
            <h2 class="mb-0">HÓA ĐƠN THANH TOÁN</h2>
            <p class="text-muted">Mã thanh toán: @Model.PaymentId</p>
        </div>

        <div class="card-body">
            <!-- Thông tin rạp -->
            <div class="row mb-4 text-center">
                <h4>Rạp chiếu phim CinemaX</h4>
                <p>Địa chỉ: 123 Đường Điện Ảnh, TP. Hồ Chí Minh</p>
                <p>Hotline: 1900 1234</p>
            </div>

            <!-- Thông tin khách hàng -->
            <div class="row mb-4">
                <h5>Thông tin khách hàng</h5>
                <p><strong>Họ và tên:</strong> @fullName</p>
            </div>

            <!-- PHẦN VÉ: CHỈ HIỆN NẾU CÓ GHẾ -->
            @if (booking.BookingDetails != null && booking.BookingDetails.Any())
            {
                <div class="row mb-4">
                    <div class="col-md-6">
                        <h5>Thông tin vé</h5>
                        <p><strong>Phim:</strong> @booking.Showtime.Movie.Title</p>
                        <p><strong>Phòng:</strong> @booking.Showtime.Room.RoomName</p>
                        <p><strong>Ngày chiếu:</strong> @booking.Showtime.Date:dd/MM/yyyy</p>
                        <p><strong>Giờ chiếu:</strong> @booking.Showtime.StartTime</p>
                    </div>
                    <div class="col-md-6">
                        <h5>Chi tiết ghế</h5>
                        <ul class="list-unstyled">
                            @foreach (var d in booking.BookingDetails)
                            {
                                <li>@d.Seat.SeatNumber - @d.Price:N0đ</li>
                            }
                        </ul>
                    </div>
                </div>
            }
            else
            {
                <div class="row mb-4">
                    <div class="col-12 text-center">
                        <p class="text-info fst-italic">
                            <i class="fas fa-popcorn me-2"></i>
                            Đơn hàng chỉ bao gồm đồ ăn & nước uống
                        </p>
                    </div>
                </div>
            }

            <!-- PHẦN ĐỒ ĂN & NƯỚC UỐNG -->
            @if (booking.BookingFoods != null && booking.BookingFoods.Any())
            {
                <div class="row mb-4">
                    <div class="col-12">
                        <h5>Đồ ăn & nước uống</h5>
                        <ul class="list-unstyled">
                            @foreach (var bf in booking.BookingFoods)
                            {
                                var totalFoodPrice = bf.UnitPrice * bf.Quantity;
                                <li>
                                    @bf.FoodItem.Name (@bf.FoodItem.Size) × @bf.Quantity
                                    <span class="text-success fw-bold float-end">@totalFoodPrice:N0đ</span>
                                </li>
                            }
                        </ul>
                        <hr class="border-light" />
                        <p class="text-end fw-bold text-warning">
                            Tổng đồ ăn: @booking.BookingFoods.Sum(bf => bf.UnitPrice * bf.Quantity):N0đ
                        </p>
                    </div>
                </div>
            }

            <!-- Thông tin thanh toán -->
            <div class="row mb-4">
                <div class="col-md-6">
                    <h5>Thông tin thanh toán</h5>
                    <p><strong>Mã đơn hàng:</strong> @booking.BookingId</p>
                    <p><strong>Ngày thanh toán:</strong> @Model.PaymentDate:dd/MM/yyyy HH:mm</p>
                    <p><strong>Phương thức:</strong> @Model.PaymentMethod</p>
                    <p>
                        <strong>Trạng thái:</strong>
                        <span class="badge bg-success">@Model.PaymentStatus</span>
                    </p>
                </div>
                <div class="col-md-6 text-end">
                    <h5>Tổng tiền</h5>
                    <p class="fs-3 fw-bold text-primary">@Model.Amount:N0 VNĐ</p>
                </div>
            </div>

            <!-- Nút hành động -->
            <div class="text-center">
                <a href="javascript:window.print()" class="btn btn-primary me-2 rounded-pill px-4">
                    <i class="fas fa-print me-1"></i> In hóa đơn
                </a>
                <a asp-controller="Movies" asp-action="Index" class="btn btn-secondary rounded-pill px-4">
                    <i class="fas fa-home me-1"></i> Về trang chủ
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background: linear-gradient(135deg, #ff9a8b 0%, #ff6a88 50%, #6b48ff 100%);
        font-family: 'Arial', sans-serif;
        color: #fff;
    }

    .showtime-card {
        border: none;
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px);
        border-radius: 15px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .showtime-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3) !important;
        }

    .btn-primary {
        background: linear-gradient(90deg, #ff6a88 0%, #6b48ff 100%);
        color: #fff;
        border: none;
        border-radius: 8px;
        transition: background 0.3s ease, transform 0.2s ease;
    }

        .btn-primary:hover {
            background: linear-gradient(90deg, #ff6a88 50%, #6b48ff 100%);
            transform: scale(1.05);
        }

    .btn-secondary {
        background-color: #333;
        border: none;
        transition: background 0.3s;
    }

        .btn-secondary:hover {
            background-color: #555;
        }

    .text-info {
        color: #a0d8ff !important;
    }

    .badge {
        font-size: 0.9rem;
    }

    hr.border-light {
        border-top: 1px solid rgba(255,255,255,0.3);
    }
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />