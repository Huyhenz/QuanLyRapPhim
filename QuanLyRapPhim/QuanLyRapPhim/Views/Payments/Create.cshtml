@model QuanLyRapPhim.Models.Payment
@{
    ViewData["Title"] = "Thanh toán";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var booking = ViewBag.Booking as QuanLyRapPhim.Models.Booking;
    var showtime = booking?.Showtime;
    var isQuickFoodOnly = showtime == null;
}

<div class="container my-5">
    <h1 class="text-white mb-4 title-gradient">Thanh toán vé xem phim</h1>

    <!-- Thông tin đặt vé -->
    <div class="card showtime-card text-light mb-4 glow-effect rounded-3">
        <div class="card-body">
            <h4 class="card-title">Thông tin đặt vé</h4>

            @if (!isQuickFoodOnly)
            {
                <p><strong>Phim:</strong> @showtime.Movie.Title</p>
                <p><strong>Phòng:</strong> @showtime.Room.RoomName</p>
                <p><strong>Ngày chiếu:</strong> @showtime.Date.ToString("dd/MM/yyyy")</p>
                <p><strong>Giờ chiếu:</strong> @showtime.StartTime.ToString(@"hh\:mm")</p>
            }
            else
            {
                <div class="alert alert-info glow-effect mb-3">
                    <i class="fas fa-info-circle me-2"></i>
                    <strong>Chỉ đặt đồ ăn & nước uống</strong> – Bạn chưa chọn vé xem phim.
                </div>
            }

            @if (booking?.BookingDetails?.Any() == true)
            {
                <p>
                    <strong>Ghế đã chọn:</strong>
                    @string.Join(", ", booking.BookingDetails.Select(bd => bd.Seat.SeatNumber))
                </p>
            }
            else
            {
                <p><strong>Ghế đã chọn:</strong> Không chọn ghế</p>
            }

            <p><strong>Tổng tiền:</strong> @booking?.TotalPrice.ToString("N0") VNĐ</p>
        </div>
    </div>

    <!-- Danh sách đồ ăn -->
    @if (booking?.BookingFoods?.Any() == true)
    {
        <div class="card food-card text-light mb-4 glow-effect rounded-3">
            <div class="card-body">
                <h4 class="card-title">Đồ ăn & nước uống</h4>
                <ul class="list-unstyled">
                    @foreach (var bf in booking.BookingFoods)
                    {
                        <li class="d-flex justify-content-between mb-2">
                            <span><strong>@bf.FoodItem.Name</strong> x @bf.Quantity</span>
                            <span class="text-warning">@(bf.UnitPrice * bf.Quantity):N0 VNĐ</span>
                        </li>
                    }
                </ul>
            </div>
        </div>
    }

    <!-- Form thanh toán MoMo -->
    <form method="POST" asp-action="CreatePaymentMomo" asp-controller="Payments" class="mb-3">
        <input type="hidden" name="FullName" value="@User.Identity.Name" />
        <input type="hidden" name="Amount" value="@Model.Amount" />
        <input type="hidden" name="OrderInfo" value="Thanh toán Momo - Booking #@booking?.BookingId" />
        <div class="text-center">
            <button class="btn btn-primary btn-lg rounded-pill px-5 glow-effect title-gradient" type="submit">
                <i class="fas fa-wallet me-2"></i> Thanh toán bằng MoMo
            </button>
        </div>
    </form>

    <!-- Form thanh toán VNPay -->
    <form method="POST" asp-action="CreatePaymentUrlVnpay" asp-controller="Payments" class="mb-3">
        <input type="hidden" name="Name" value="@User.Identity.Name" />
        <input type="hidden" name="Amount" value="@Model.Amount" />
        <input type="hidden" name="OrderDescription" value="Thanh toán VNPay - Booking #@booking?.BookingId" />
        <input type="hidden" name="OrderType" value="2500" />
        <div class="text-center">
            <button class="btn btn-primary btn-lg rounded-pill px-5 glow-effect title-gradient" type="submit">
                <i class="fas fa-wallet me-2"></i> Thanh toán bằng VNPay
            </button>
        </div>
    </form>

    <!-- Form hủy đặt - đã fix 404 -->
    <form asp-controller="Tickets" asp-action="CancelBooking" method="post"
          onsubmit="return confirm('Bạn có chắc muốn hủy và chọn lại từ đầu không?');">
        <input type="hidden" name="bookingId" value="@booking.BookingId" />
        <div class="text-center mt-4">
            <button type="submit" class="btn btn-danger btn-lg rounded-pill px-5 glow-effect">
                <i class="fas fa-times-circle me-2"></i>
                Hủy đặt & chọn lại
            </button>
        </div>
    </form>
</div>

<!-- CSS -->
<style>
    body {
        background-color: #0F0F0F;
        color: #ffffff;
        font-family: 'Montserrat', sans-serif;
    }

    .title-gradient {
        background: linear-gradient(90deg, #ff0033, #1c1c1c);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .glow-effect {
        box-shadow: 0 0 15px rgba(255, 0, 51, 0.3);
        transition: all 0.3s ease;
    }

        .glow-effect:hover {
            box-shadow: 0 0 25px rgba(255, 0, 51, 0.5);
            transform: scale(1.05);
        }

    .showtime-card, .food-card {
        background-color: #1c1c1c;
        border: 1px solid #ff0033;
        border-radius: 15px;
    }

    .card-title {
        font-size: 1.25rem;
        font-weight: bold;
        color: #fff;
    }

    .alert {
        border-radius: 12px;
    }

    .btn-primary {
        background-color: #ff0033;
        border: none;
        font-weight: 600;
    }

        .btn-primary:hover {
            background-color: #e6002e;
        }

    .btn-secondary {
        border-color: #ff0033;
        color: #ff0033;
        font-weight: 600;
    }

        .btn-secondary:hover {
            background-color: #ff0033;
            color: #fff;
        }

    .btn-warning {
        background-color: #ff8c00;
        border: none;
        color: white;
        font-weight: 600;
    }

        .btn-warning:hover {
            background-color: #e07b00;
        }

    .btn-danger {
        background-color: #dc3545;
        border: none;
        color: white;
        font-weight: 600;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}