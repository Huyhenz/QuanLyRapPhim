@model QuanLyRapPhim.Models.Payment
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Payment"].Value;
    Layout = "~/Views/Shared/_Layout.cshtml";

    var booking = ViewBag.Booking as QuanLyRapPhim.Models.Booking;
    var showtime = booking?.Showtime;
    var isQuickFoodOnly = showtime == null;
}

<div class="container my-5">
    <h1 class="text-white mb-4 title-gradient">@Localizer["MovieTicketPayment"]</h1>

    <!-- Thông tin đặt vé -->
    <div class="card showtime-card text-light mb-4 glow-effect rounded-3">
        <div class="card-body">
            <h4 class="card-title">@Localizer["BookingInformation"]</h4>

            @if (!isQuickFoodOnly)
            {
                <p><strong>@Localizer["Movie"]:</strong> @showtime.Movie.Title</p>
                <p><strong>@Localizer["Room"]:</strong> @showtime.Room.RoomName</p>
                <p><strong>@Localizer["ShowDate"]:</strong> @showtime.Date.ToString("dd/MM/yyyy")</p>
                <p><strong>@Localizer["ShowTime"]:</strong> @showtime.StartTime.ToString(@"hh\:mm")</p>
            }
            else
            {
                <div class="alert alert-info glow-effect mb-3">
                    <i class="fas fa-info-circle me-2"></i>
                    <strong>@Localizer["FoodOnlyOrder"]</strong> – @Localizer["NoTicketSelected"]
                </div>
            }

            @if (booking?.BookingDetails?.Any() == true)
            {
                <p>
                    <strong>@Localizer["SelectedSeats"]:</strong>
                    @string.Join(", ", booking.BookingDetails.Select(bd => bd.Seat.SeatNumber))
                </p>
            }
            else
            {
                <p><strong>@Localizer["SelectedSeats"]:</strong> @Localizer["NoSeatsSelected"]</p>
            }

            <p id="totalAmount"><strong>@Localizer["TotalAmount"]:</strong> @(booking?.TotalPrice?.ToString("N0") ?? "0") VNĐ</p>

            @if (!string.IsNullOrEmpty(booking?.VoucherUsed))
            {
                <p class="text-success">
                    <i class="fas fa-check-circle me-2"></i>
                    <strong>@Localizer["VoucherApplied"]:</strong> @booking.VoucherUsed
                </p>
            }

            <p id="discountInfo" class="text-success" style="display: none;"><strong>@Localizer["Discount"]:</strong> <span id="discountValue"></span> @Localizer["VND"]</p>
            <p id="finalAmount" @(booking?.FinalAmount != booking?.TotalPrice ? "" : "style=display:none;") class="text-warning">
                <strong>@Localizer["FinalAmount"]:</strong>
                <span id="newAmount">@((booking?.FinalAmount ?? booking?.TotalPrice)?.ToString("N0") ?? "0")</span> @Localizer["VND"]
            </p>
        </div>
    </div>

    <!-- Danh sách đồ ăn -->
    @if (booking?.BookingFoods?.Any() == true)
    {
        <div class="card food-card text-light mb-4 glow-effect rounded-3">
            <div class="card-body">
                <h4 class="card-title">@Localizer["FoodAndDrinks"]</h4>
                <ul class="list-unstyled">
                    @foreach (var bf in booking.BookingFoods)
                    {
                        <li class="d-flex justify-content-between mb-2">
                            <span><strong>@bf.FoodItem.Name</strong> x @bf.Quantity</span>
                            <span class="text-warning">@((bf.UnitPrice * bf.Quantity).ToString("N0")) VNĐ</span>
                        </li>
                    }
                </ul>
            </div>
        </div>
    }

    <!-- Áp dụng Voucher -->
    <div class="card voucher-card text-light mb-4 glow-effect rounded-3">
        <div class="card-body">
            <h4 class="card-title title-gradient"><i class="fas fa-ticket-alt me-2"></i>@Localizer["ApplyVoucher"]</h4>
            @Html.AntiForgeryToken()
            <div class="input-group mb-3">
                <input type="text" id="voucherCode" class="form-control rounded-pill glow-effect" placeholder="@Localizer["EnterVoucherCode"]" aria-label="Voucher Code" @(string.IsNullOrEmpty(booking?.VoucherUsed) ? "" : "disabled value=\"" + booking.VoucherUsed + "\"")>
                <button class="btn btn-primary rounded-pill px-4 ms-2 glow-effect" type="button" id="applyVoucherBtn" @(string.IsNullOrEmpty(booking?.VoucherUsed) ? "" : "style=display:none;")>
                    <i class="fas fa-check-circle me-2"></i>@Localizer["Apply"]
                </button>
                <button class="btn btn-danger rounded-pill px-4 ms-2 glow-effect" type="button" id="removeVoucherBtn" @(string.IsNullOrEmpty(booking?.VoucherUsed) ? "style=display:none;" : "")>
                    <i class="fas fa-times-circle me-2"></i>@Localizer["Cancel"]
                </button>
            </div>
            <div id="voucherMessage" class="alert alert-info mt-3" style="display: none;"></div>
        </div>
    </div>

    <!-- Form thanh toán MoMo -->
    <form method="POST" asp-action="CreatePaymentMomo" asp-controller="Payments" class="mb-3">
        <input type="hidden" name="FullName" value="@User.Identity.Name" />
        <input type="hidden" id="momoAmount" name="Amount" value="@(booking?.FinalAmount ?? booking?.TotalPrice ?? 0m)" />
        <input type="hidden" name="OrderInfo" value="@Localizer["MomoPayment"].Value" />
        <div class="text-center">
            <button class="btn btn-primary btn-lg rounded-pill px-5 glow-effect title-gradient" type="submit">
                <i class="fas fa-wallet me-2"></i> @Localizer["PayWithMomo"]
            </button>
        </div>
    </form>

    <!-- Form thanh toán VNPay -->
    <form method="POST" asp-action="CreatePaymentUrlVnpay" asp-controller="Payments" class="mb-3">
        <input type="hidden" name="Name" value="@User.Identity.Name" />
        <input type="hidden" id="vnpayAmount" name="Amount" value="@(booking?.FinalAmount ?? booking?.TotalPrice ?? 0m)" />
        <input type="hidden" name="OrderDescription" value="@Localizer["VNPayPayment"].Value" />
        <input type="hidden" name="OrderType" value="2500" />
        <div class="text-center">
            <button class="btn btn-primary btn-lg rounded-pill px-5 glow-effect title-gradient" type="submit">
                <i class="fas fa-wallet me-2"></i> @Localizer["PayWithVNPay"]
            </button>
        </div>
    </form>

    <!-- Form hủy đặt -->
    <form asp-controller="Tickets" asp-action="CancelBooking" method="post"
          onsubmit="return confirm('@Localizer["ConfirmCancelBooking"].Value');">
        @Html.AntiForgeryToken()
        <div class="text-center mt-4">
            <button type="submit" class="btn btn-danger btn-lg rounded-pill px-5 glow-effect">
                <i class="fas fa-times-circle me-2"></i>
                @Localizer["CancelAndReselect"]
            </button>
        </div>
    </form>
</div>

<!-- CSS -->
<style>
    body {
        background-color: #0F0F0F;
        color: #ffffff;
        font-family: 'Montserrat', sans-serif;
    }

    .title-gradient {
        background: linear-gradient(90deg, #ff0033, #1c1c1c);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .glow-effect {
        box-shadow: 0 0 15px rgba(255, 0, 51, 0.3);
        transition: all 0.3s ease;
    }

        .glow-effect:hover {
            box-shadow: 0 0 25px rgba(255, 0, 51, 0.5);
            transform: scale(1.05);
        }

    .showtime-card, .food-card, .voucher-card {
        background-color: #1c1c1c;
        border: 1px solid #ff0033;
        border-radius: 15px;
    }

    .card-title {
        font-size: 1.25rem;
        font-weight: bold;
        color: #fff;
    }

    .alert {
        border-radius: 12px;
    }

    .btn-primary {
        background-color: #ff0033;
        border: none;
        font-weight: 600;
    }

        .btn-primary:hover {
            background-color: #e6002e;
        }

    .btn-secondary {
        border-color: #ff0033;
        color: #ff0033;
        font-weight: 600;
    }

        .btn-secondary:hover {
            background-color: #ff0033;
            color: #fff;
        }

    .btn-warning {
        background-color: #ff8c00;
        border: none;
        color: white;
        font-weight: 600;
    }

        .btn-warning:hover {
            background-color: #e07b00;
        }

    .btn-danger {
        background-color: #dc3545;
        border: none;
        color: white;
        font-weight: 600;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }

    @@media (max-width: 768px) {
        .btn-lg {
            font-size: 1rem;
            padding: 10px 30px;
        }

        .card-body {
            padding: 15px;
        }
    }

    @@keyframes sparkle {
        0% {
            text-shadow: 0 0 10px rgba(255, 255, 255, 0.5);
        }

        50% {
            text-shadow: 0 0 20px rgba(255, 0, 51, 0.8);
        }

        100% {
            text-shadow: 0 0 10px rgba(255, 255, 255, 0.5);
        }
    }

    .voucher-applied {
        animation: sparkle 1s infinite;
    }
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            var token = $('input[name="__RequestVerificationToken"]').val();

            // Áp dụng voucher
            $('#applyVoucherBtn').click(function () {
                var code = $('#voucherCode').val().trim();
                if (!code) {
                    showVoucherMessage('Vui lòng nhập mã voucher!', 'danger');
                    return;
                }

                $.ajax({
                    url: '/Payments/ApplyVoucher',
                    type: 'POST',
                    data: { code: code, __RequestVerificationToken: token },
                    success: function (response) {
                        if (response.success) {
                            $('#totalAmount').addClass('text-decoration-line-through');
                            $('#discountInfo').show();
                            $('#discountValue').text(response.discount.toLocaleString('vi-VN'));
                            $('#finalAmount').show();
                            $('#newAmount').text(response.newAmount.toLocaleString('vi-VN'));
                            $('#finalAmount strong').addClass('voucher-applied');

                            $('#momoAmount').val(response.newAmount);
                            $('#vnpayAmount').val(response.newAmount);

                            // Hiển thị nút hủy
                            $('#removeVoucherBtn').show();
                            $('#applyVoucherBtn').hide();
                            $('#voucherCode').prop('disabled', true);

                            showVoucherMessage(response.message, 'success');
                        } else {
                            showVoucherMessage(response.message, 'danger');
                        }
                    },
                    error: function () {
                        showVoucherMessage('Lỗi kết nối server!', 'danger');
                    }
                });
            });

            // Hủy voucher
            $('#removeVoucherBtn').click(function () {
                $.ajax({
                    url: '/Payments/RemoveVoucher',
                    type: 'POST',
                    data: { __RequestVerificationToken: token },
                    success: function (response) {
                        if (response.success) {
                            $('#totalAmount').removeClass('text-decoration-line-through');
                            $('#discountInfo').hide();
                            $('#finalAmount').hide();
                            $('#finalAmount strong').removeClass('voucher-applied');

                            $('#momoAmount').val(response.newAmount);
                            $('#vnpayAmount').val(response.newAmount);

                            // Ẩn nút hủy, enable input
                            $('#removeVoucherBtn').hide();
                            $('#applyVoucherBtn').show();
                            $('#voucherCode').prop('disabled', false).val('');

                            showVoucherMessage(response.message, 'info');
                        } else {
                            showVoucherMessage(response.message, 'danger');
                        }
                    },
                    error: function () {
                        showVoucherMessage('Lỗi kết nối server!', 'danger');
                    }
                });
            });

            function showVoucherMessage(message, type) {
                var alertClass = type === 'success' ? 'alert-success' : (type === 'danger' ? 'alert-danger' : 'alert-info');
                $('#voucherMessage')
                    .removeClass('alert-info alert-success alert-danger')
                    .addClass(alertClass)
                    .text(message)
                    .show();
                setTimeout(function () { $('#voucherMessage').fadeOut(); }, 5000);
            }
        });
    </script>
}