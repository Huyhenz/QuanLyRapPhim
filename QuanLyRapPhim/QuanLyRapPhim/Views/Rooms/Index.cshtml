@model IEnumerable<QuanLyRapPhim.Models.Room>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="background-color: #87CEEB; color: #333; padding: 10px; text-align: center; border-radius: 5px; box-shadow: 0 2px 5px rgba(0,0,0,0.2);">
    Room Index
</h1>

<p>
    <a asp-action="Create" style="display: inline-block; padding: 10px 20px; background-color: #4CAF50; color: white; text-decoration: none; border-radius: 5px; font-weight: bold; box-shadow: 0 2px 5px rgba(0,0,0,0.1);">
        Create New
    </a>
</p>

@if (User.IsInRole("Admin"))
{
    <button id="toggleDashboard" class="dashboard-toggle">☰</button>
    <aside id="adminDashboard" class="admin-dashboard">
        <h4>Quản lý</h4>
        <ul class="list-unstyled">
            <li><a href="/Admin/Dashboard">📊 Dashboard</a></li>
            <li><a href="/Movies">🎬 Danh sách phim</a></li>
            <li><a href="/Showtimes">🕒 Lịch chiếu</a></li>
            <li><a href="/Rooms">🏢 Quản lý phòng</a></li>
            <li><a href="/Seats">💺 Quản lý ghế</a></li>
            <li><a href="/Admin/ManageBookings">📌 Quản lý đặt vé</a></li>
            <li><a href="/Admin/Reports">📑 Báo cáo thống kê</a></li>
        </ul>
    </aside>
}

<table class="table" style="width: 100%; border-collapse: collapse; background-color: #F0F8FF; box-shadow: 0 2px 5px rgba(0,0,0,0.1);">
    <thead>
        <tr style="background-color: #ADD8E6; color: #333; font-weight: bold;">
            <th style="padding: 10px; border: 1px solid #ddd;">@Html.DisplayNameFor(model => model.RoomName)</th>
            <th style="padding: 10px; border: 1px solid #ddd;">@Html.DisplayNameFor(model => model.Capacity)</th>
            <th style="padding: 10px; border: 1px solid #ddd;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="padding: 8px; border: 1px solid #ddd;">@Html.DisplayFor(modelItem => item.RoomName)</td>
                <td style="padding: 8px; border: 1px solid #ddd;">@Html.DisplayFor(modelItem => item.Capacity)</td>
                <td style="padding: 8px; border: 1px solid #ddd;">
                    <a asp-action="Edit" asp-route-id="@item.RoomId" style="color: white; background-color: #FFA07A; padding: 5px 15px; text-decoration: none; border-radius: 3px; box-shadow: 0 2px 5px rgba(0,0,0,0.1);">
                        Edit
                    </a>
                    |
                    <a asp-action="Details" asp-route-id="@item.RoomId" style="color: white; background-color: #20B2AA; padding: 5px 15px; text-decoration: none; border-radius: 3px; box-shadow: 0 2px 5px rgba(0,0,0,0.1);">
                        Details
                    </a>
                    |
                    <a asp-action="Delete" asp-route-id="@item.RoomId" style="color: white; background-color: #FF6347; padding: 5px 15px; text-decoration: none; border-radius: 3px; box-shadow: 0 2px 5px rgba(0,0,0,0.1);">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<style>
    .admin-dashboard {
        position: fixed;
        top: 0;
        left: -250px; /* Ẩn dashboard ban đầu */
        width: 250px;
        height: 100vh;
        background: rgba(0, 0, 0, 0.8);
        color: white;
        padding: 20px;
        z-index: 999;
        transition: left 0.3s ease-in-out; /* Hiệu ứng trượt */
    }

    .dashboard-toggle {
        position: fixed;
        top: 20px;
        left: 10px;
        background: #222;
        color: white;
        border: none;
        padding: 10px;
        cursor: pointer;
        z-index: 1000;
        transition: left 0.3s ease-in-out; /* Hiệu ứng trượt */
    }

        .dashboard-toggle:hover {
            background: #444;
        }
</style>
<script>
    document.getElementById("toggleDashboard").addEventListener("click", function() {
        let dashboard = document.getElementById("adminDashboard");
        let toggleButton = document.getElementById("toggleDashboard");

        if (dashboard.style.left === "-250px") {
            dashboard.style.left = "0"; // Hiện Dashboard
            toggleButton.style.left = "260px"; // Nút chuyển sang bên phải
        } else {
            dashboard.style.left = "-250px"; // Ẩn Dashboard
            toggleButton.style.left = "10px"; // Nút chuyển lại bên trái
        }
    });
</script>
