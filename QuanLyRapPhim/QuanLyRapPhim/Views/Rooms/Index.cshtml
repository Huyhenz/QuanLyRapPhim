@model IEnumerable<QuanLyRapPhim.Models.Room>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="background-color: #1c1c1c; color: #fff; padding: 15px; text-align: center; border-radius: 15px; font-family: 'Montserrat', sans-serif; font-weight: 700; text-transform: uppercase;">Quản lý phòng</h1>

<p>
    <a asp-action="Create" style="display: inline-block; padding: 8px 20px; background-color: #00cc00; color: #fff; text-decoration: none; border-radius: 20px; font-weight: 600; font-family: 'Montserrat', sans-serif;">Create New</a>
</p>

@if (User.IsInRole("Admin"))
{
    <button id="toggleDashboard" class="dashboard-toggle"><i class="fas fa-bars"></i></button>
    <aside id="adminDashboard" class="admin-dashboard">
        <div class="dashboard-header">
            <h4><i class="fas fa-user-shield"></i> Quản lý Admin</h4>
        </div>
        <ul class="dashboard-menu">
            <li><a href="/Admin/Dashboard"><i class="fas fa-chart-line"></i> Dashboard</a></li>
            <li><a href="/Movies"><i class="fas fa-film"></i> Danh sách phim</a></li>
            <li><a href="/Showtimes"><i class="fas fa-clock"></i> Lịch chiếu</a></li>
            <li><a href="/Rooms"><i class="fas fa-door-open"></i> Quản lý phòng</a></li>
            <li><a href="/Seats"><i class="fas fa-chair"></i> Quản lý ghế</a></li>
            <li><a href="/Admin/ManageBookings"><i class="fas fa-ticket-alt"></i> Quản lý đặt vé</a></li>
            <li><a href="/Admin/Reports"><i class="fas fa-file-alt"></i> Báo cáo thống kê</a></li>
        </ul>
    </aside>
}

<table class="table" style="width: 100%; border-collapse: collapse; background-color: #1c1c1c; box-shadow: 0 10px 20px rgba(0,0,0,0.3); border-radius: 15px; overflow: hidden;">
    <thead>
        <tr style="background-color: #333; color: #fff;">
            <th style="padding: 15px; border: none; font-family: 'Montserrat', sans-serif; font-weight: 600;">@Html.DisplayNameFor(model => model.RoomName)</th>
            <th style="padding: 15px; border: none; font-family: 'Montserrat', sans-serif; font-weight: 600;">@Html.DisplayNameFor(model => model.Capacity)</th>
            <th style="padding: 15px; border: none; font-family: 'Montserrat', sans-serif; font-weight: 600;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="transition: background 0.3s ease;">
                <td style="padding: 12px; border: none; color: #b3b3b3; font-family: 'Montserrat', sans-serif;">@Html.DisplayFor(modelItem => item.RoomName)</td>
                <td style="padding: 12px; border: none; color: #b3b3b3; font-family: 'Montserrat', sans-serif;">@Html.DisplayFor(modelItem => item.Capacity)</td>
                <td style="padding: 12px; border: none;">
                    <a asp-action="Edit" asp-route-id="@item.RoomId" style="color: #000; background-color: #ffcc00; padding: 5px 15px; text-decoration: none; border-radius: 20px; font-weight: 600; font-family: 'Montserrat', sans-serif; margin-right: 5px;">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.RoomId" style="color: #fff; background-color: #00bfff; padding: 5px 15px; text-decoration: none; border-radius: 20px; font-weight: 600; font-family: 'Montserrat', sans-serif; margin-right: 5px;">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.RoomId" style="color: #fff; background-color: #e6002e; padding: 5px 15px; text-decoration: none; border-radius: 20px; font-weight: 600; font-family: 'Montserrat', sans-serif;">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    body {
        background-color: #0F0F0F; /* Galaxy Black */
        color: #ffffff;
        font-family: 'Montserrat', sans-serif;
    }

    .table tr:hover {
        background-color: #2a2a2a;
    }

    a:hover {
        transform: scale(1.05);
        transition: transform 0.3s ease;
    }

    .admin-dashboard {
        position: fixed;
        top: 0;
        left: -300px;
        width: 300px;
        height: 100vh;
        background: #333;
        color: #ffffff;
        padding: 20px;
        z-index: 999;
        transition: left 0.4s ease-in-out;
        box-shadow: 5px 0 15px rgba(0, 0, 0, 0.3);
    }

    .dashboard-toggle {
        position: fixed;
        top: 20px;
        left: 10px;
        background: #ff0033;
        color: #ffffff;
        border: none;
        padding: 12px 15px;
        font-size: 18px;
        cursor: pointer;
        z-index: 1000;
        border-radius: 50%;
        box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.3);
    }

        .dashboard-toggle:hover {
            background: #e6002e;
        }

    .dashboard-header {
        text-align: center;
        font-size: 20px;
        margin-bottom: 20px;
        font-weight: 600;
    }

    .dashboard-menu {
        list-style: none;
        padding: 0;
    }

        .dashboard-menu li {
            margin-bottom: 15px;
        }

            .dashboard-menu li a {
                display: flex;
                align-items: center;
                gap: 10px;
                color: #ffffff;
                text-decoration: none;
                padding: 10px;
                border-radius: 5px;
                transition: background 0.3s ease;
                font-weight: 500;
            }

                .dashboard-menu li a:hover {
                    background: #ff4040;
                }
</style>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    document.getElementById("toggleDashboard").addEventListener("click", function() {
        let dashboard = document.getElementById("adminDashboard");
        let toggleButton = document.getElementById("toggleDashboard");

        if (dashboard.style.left === "-300px") {
            dashboard.style.left = "0";
            toggleButton.style.left = "310px";
        } else {
            dashboard.style.left = "-300px";
            toggleButton.style.left = "10px";
        }
    });
</script>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />