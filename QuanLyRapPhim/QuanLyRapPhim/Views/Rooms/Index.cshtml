@using QuanLyRapPhim.Models
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model IEnumerable<QuanLyRapPhim.Models.Room>
@{
    ViewData["Title"] = Localizer["ManageRooms"].Value;
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool isAdmin = User.IsInRole("Admin");
}

<div class="container-fluid d-flex position-relative">
    @await Html.PartialAsync("_ChristmasDashboard")

    <div class="frame-wrapper flex-grow-1 @(isAdmin ? "admin-view" : "")">
        <div class="content-inner">
            <h1 class="page-title">
                <span class="christmas-icon">🚪</span>
                @Localizer["ManageRooms"]
                <span class="christmas-icon">🎄</span>
            </h1>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success christmas-alert" role="alert">
                    <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                </div>
            }

            <p>
                <a asp-action="Create" class="create-button christmas-btn">
                    <i class="fas fa-plus"></i> @Localizer["CreateRoom"]
                </a>
            </p>

            <div class="table-responsive">
                <table class="table christmas-table">
                    <thead>
                        <tr>
                            <th><i class="fas fa-door-open"></i> @Localizer["RoomName"]</th>
                            <th><i class="fas fa-users"></i> @Localizer["Capacity"]</th>
                            <th><i class="fas fa-tools"></i> @Localizer["Actions"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-bold text-warning">@Html.DisplayFor(modelItem => item.RoomName)</td>
                                <td>@Html.DisplayFor(modelItem => item.Capacity) <small class="text-muted">seats</small></td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.RoomId" class="action-link edit-link">
                                        <i class="fas fa-edit"></i> @Localizer["Edit"]
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.RoomId" class="action-link delete-link">
                                        <i class="fas fa-trash"></i> @Localizer["Delete"]
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <footer class="footer text-center py-3">
        <p class="text-white mb-0">
            <span class="christmas-icon-small">🎅</span>
            @Localizer["Copyright"] 2025 CinemaX. @Localizer["AllRightsReserved"]
            <span class="christmas-icon-small">🎄</span>
        </p>
    </footer>
</div>

<style>
    body {
        margin: 0;
        background-color: #0F0F0F;
        color: #d3d3d3;
        font-family: 'Montserrat', sans-serif;
        overflow-x: hidden;
    }

    .content-inner {
        max-width: 1200px;
        width: 100%;
        padding: 30px;
    }

    .page-title {
        background: linear-gradient(90deg, #FFD700, #FF4500);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-size: 2.5rem;
        font-weight: 700;
        text-align: center;
        margin-bottom: 30px;
    }

    .christmas-icon {
        font-size: 2rem;
        animation: bounce 2s infinite;
    }

    .christmas-icon-small {
        font-size: 1.2rem;
        animation: bounce 2s infinite;
    }

    @@keyframes bounce {
        0%, 100%

    {
        transform: translateY(0);
    }

    50% {
        transform: translateY(-5px);
    }

    }

    .christmas-alert {
        background: linear-gradient(135deg, rgba(22, 91, 51, 0.3), rgba(139, 0, 0, 0.3));
        color: #FFD700;
        border: 2px solid #FFD700;
        border-radius: 15px;
        padding: 15px;
        margin-bottom: 20px;
    }

        .christmas-alert i {
            margin-right: 10px;
        }

    .create-button {
        display: inline-block;
        margin-bottom: 20px;
    }

    .christmas-btn {
        background: linear-gradient(135deg, #C41E3A, #165B33);
        border: 2px solid #FFD700;
        color: white;
        padding: 12px 30px;
        border-radius: 12px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        display: inline-block;
    }

        .christmas-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(255, 215, 0, 0.6);
            color: white;
        }

        .christmas-btn i {
            margin-right: 8px;
        }

    .christmas-table {
        width: 100%;
        border-collapse: collapse;
        background-color: #1c1c1c;
        box-shadow: 0 10px 30px rgba(255, 215, 0, 0.3);
        border-radius: 15px;
        overflow: hidden;
        border: 2px solid #FFD700;
    }

        .christmas-table thead tr {
            background: linear-gradient(135deg, #8B0000, #165B33);
            color: #FFFAFA;
        }

        .christmas-table th {
            padding: 18px 15px;
            border: none;
            font-weight: 700;
            text-transform: uppercase;
            font-size: 0.9rem;
            letter-spacing: 1px;
        }

            .christmas-table th i {
                margin-right: 8px;
            }

        .christmas-table td {
            padding: 15px;
            border: none;
            color: #FFFAFA;
            border-bottom: 1px solid rgba(255, 215, 0, 0.3);
        }

        .christmas-table tr:hover {
            background: linear-gradient(90deg, rgba(139, 0, 0, 0.3), rgba(22, 91, 51, 0.3));
        }

        .christmas-table tbody tr:last-child td {
            border-bottom: none;
        }

    .action-link {
        padding: 8px 18px;
        text-decoration: none;
        border-radius: 10px;
        font-weight: 600;
        margin-right: 8px;
        display: inline-block;
        transition: all 0.3s ease;
    }

        .action-link i {
            margin-right: 5px;
        }

    .edit-link {
        color: #000;
        background: linear-gradient(135deg, #FFD700, #FFA500);
        border: 2px solid #FFD700;
    }

        .edit-link:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(255, 215, 0, 0.5);
            color: #000;
        }

    .delete-link {
        color: #FFFAFA;
        background: linear-gradient(135deg, #8B0000, #C41E3A);
        border: 2px solid #FFD700;
    }

        .delete-link:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(196, 30, 58, 0.5);
            color: #FFFAFA;
        }

    .footer {
        background: linear-gradient(135deg, #8B0000, #165B33);
        border-top: 2px solid #FFD700;
        margin-top: 50px;
    }

    @@media (max-width: 768px) {
        .page-title

    {
        font-size: 2rem;
    }

    .content-inner {
        padding: 20px;
    }

    .christmas-table {
        font-size: 0.9rem;
    }

    .action-link {
        padding: 6px 12px;
        font-size: 0.85rem;
    }

    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const toggleBtn = document.getElementById('sidebar-toggle');
        const sidebar = document.querySelector('.christmas-sidebar');
        const frameWrapper = document.querySelector('.frame-wrapper');

        if (toggleBtn && sidebar && frameWrapper) {
            toggleBtn.addEventListener('click', function() {
                sidebar.classList.toggle('collapsed');
                frameWrapper.classList.toggle('shifted');

                const icon = toggleBtn.querySelector('i');
                if (sidebar.classList.contains('collapsed')) {
                    icon.className = 'fas fa-bars';
                } else {
                    icon.className = 'fas fa-times';
                }
            });
        }
    });
</script>