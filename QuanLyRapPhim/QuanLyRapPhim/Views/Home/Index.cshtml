@model IEnumerable<QuanLyRapPhim.Models.Movie>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
    // Loại bỏ phim trùng lặp dựa trên Title
    var distinctMovies = Model?.GroupBy(m => m.Title).Select(g => g.First()).ToList();
}
<!-- Navbar -->
<header>
    <nav class="navbar navbar-expand-lg navbar-dark bottom-nav">
        <div class="container rounded-nav">
            <!-- Logo -->
            <a class="navbar-brand" href="/">
                <img src="https://i.pinimg.com/736x/dc/e2/4e/dce24e1753323e14dc6b39527dc53e32.jpg" alt="CinemaX Logo" height="60" />
                <span class="logo-text">CinemaX</span>
            </a>
            <!-- Navbar Toggler -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <!-- Navbar Items -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto nav-icons">
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link nav-icon" href="/Admin/Index">
                                <i class="fas fa-tachometer-alt"></i>
                                <span class="nav-text">@Localizer["AdminDashboard"]</span>
                            </a>
                        </li>
                    }
                </ul>
                <!-- Right Side Actions -->
                <div class="d-flex align-items-center gap-3">
                    <!-- NÚT ĐẶT BẮP NƯỚC -->
                    <a href="@(User.Identity.IsAuthenticated ? Url.Action("QuickFoodBooking", "Tickets") : "/Identity/Account/Login")"
                       class="btn book-btn popcorn-btn">
                        @Html.Raw(Localizer["OrderFood"].Value)
                    </a>
                    <!-- NÚT QUẢN LÝ VOUCHER (CHỈ ADMIN) -->
                    @if (User.IsInRole("Admin"))
                    {
                        <a href="/Vouchers" class="btn book-btn voucher-btn" title="Quản lý Voucher">
                            <i class="fas fa-gift"></i><br>Voucher
                        </a>
                    }
                    <!-- NÚT ĐẶT VÉ NGAY -->
                    <a href="@(User.Identity.IsAuthenticated ? "/Movies" : "/Identity/Account/Login")"
                       class="btn book-btn ticket-btn">
                        @Html.Raw(Localizer["BookTickets"].Value.Replace(" ", "<br>"))
                    </a>
                    <!-- Ô TÌM KIẾM -->
                    <form class="d-flex align-items-center" asp-action="Search" asp-controller="Home" method="get">
                        <div class="search-box">
                            <input type="search" name="searchString" value="@ViewData["CurrentSearch"]"
                                   placeholder="@Localizer["Search"]" class="search-input" id="searchInput">
                            <button type="submit" class="search-btn">
                                <i class="fas fa-search text-danger"></i>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </nav>
</header>
<!-- Banner Carousel -->
<section>
    <div id="movieCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <div class="carousel-overlay"></div>
                <img src="https://i.pinimg.com/736x/13/b0/43/13b043d26ce8e7cd9e72a3de24ad5b00.jpg" class="d-block w-100" alt="The Batman" style="height: 600px; object-fit: cover;">
                <div class="carousel-caption d-none d-md-block text-start">
                    <h1 class="carousel-title">The Batman</h1>
                    <div class="carousel-meta">
                        <span>@Localizer["ActionMovie"] • 2022</span>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <div class="carousel-overlay"></div>
                <img src="https://i.pinimg.com/736x/ad/c8/e0/adc8e054ab0a62fc6fff8e96a25cbdcc.jpg" class="d-block w-100" alt="Inception" style="height: 600px; object-fit: cover;">
                <div class="carousel-caption d-none d-md-block text-start">
                    <h1 class="carousel-title">Inception</h1>
                    <div class="carousel-meta">
                        <span>@Localizer["SciFiMovie"] • 2010</span>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <div class="carousel-overlay"></div>
                <img src="https://i.pinimg.com/736x/c2/6b/68/c26b682ef1df8611eff6d392af092a6e.jpg" class="d-block w-100" alt="Interstellar" style="height: 600px; object-fit: cover;">
                <div class="carousel-caption d-none d-md-block text-start">
                    <h1 class="carousel-title">Interstellar</h1>
                    <div class="carousel-meta">
                        <span>@Localizer["SciFiMovie"] • 2014</span>
                    </div>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#movieCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">@Localizer["Previous"]</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#movieCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">@Localizer["Next"]</span>
        </button>
    </div>
</section>
<!-- Now Showing Movies -->
<section class="now-showing-section container my-5">
    <h2 class="section-title text-white mb-4">@Localizer["NowShowing"]</h2>
    @if (Model != null && Model.Any())
    {
        <div class="row row-cols-1 row-cols-md-4 g-4">
            @foreach (var movie in Model)
            {
                <!-- Tính toán số sao dựa trên trung bình Rating từ Reviews -->
                double rating = 0;
                if (movie.Reviews != null && movie.Reviews.Any())
                {
                    rating = movie.Reviews.Average(r => r.Rating); // Tính trung bình
                }
                int fullStars = (int)Math.Floor(rating);
                bool hasHalfStar = (rating % 1) >= 0.5;
                <div class="col">
                    <div class="card movie-card">
                        <img src="@(movie.Poster ?? "https://images.unsplash.com/photo-1626814026160-2237a9fc5a0a?ixlib=rb-4.0.3&auto=format&fit=crop&w=500&q=80")" class="card-img-top" alt="@(movie.Title ?? "Uva")" style="height: 350px; width: 100%; object-fit: cover;">
                        <div class="card-body text-center">
                            <h5 class="card-title movie-title">@(movie.Title ?? "Uva")</h5>
                            <div class="movie-meta">
                                <span class="rating-stars">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        if (i <= fullStars)
                                        {
                                            <span class="fas fa-star rated"></span>
                                        }
                                        else if (i == fullStars + 1 && hasHalfStar)
                                        {
                                            <span class="fas fa-star-half-alt rated"></span>
                                        }
                                        else
                                        {
                                            <span class="fas fa-star"></span>
                                        }
                                    }
                                    <span class="rating-text"> @(rating > 0 ? rating.ToString("F1") : "Chưa có đánh giá")/5</span>
                                </span>
                            </div>
                            <a href="@(User.Identity.IsAuthenticated ? $"/Movies/Details/{movie.MovieId}" : "/Identity/Account/Login")" class="btn btn-primary book-btn">@Localizer["BookNow"]</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-center text-white no-movie-message">@Localizer["NoMovies"]</p>
    }
    <section class="features-section">
        <div class="container">
            <div class="features-grid">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-couch"></i>
                    </div>
                    <h3>@Localizer["ComfortableSeats"]</h3>
                    <p>@Localizer["ComfortableSeatsDesc"]</p>
                </div>
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-volume-up"></i>
                    </div>
                    <h3>@Localizer["DolbySound"]</h3>
                    <p>@Localizer["DolbySoundDesc"]</p>
                </div>
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-tv"></i>
                    </div>
                    <h3>@Localizer["4KScreen"]</h3>
                    <p>@Localizer["4KScreenDesc"]</p>
                </div>
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-mobile-alt"></i>
                    </div>
                    <h3>@Localizer["OnlineBooking"]</h3>
                    <p>@Localizer["OnlineBookingDesc"]</p>
                </div>
            </div>
        </div>
    </section>
</section>
