@model QuanLyRapPhim.Models.Movie

@{
    ViewData["Title"] = "Chỉnh sửa phim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid vh-100 d-flex flex-column justify-content-center position-relative">
    <div class="frame-wrapper flex-grow-1">
        <h1 class="text-white mb-4">Chỉnh sửa phim</h1>
        <div class="row">
            <div class="col-md-6">
                <form asp-action="Edit" class="p-4 rounded movie-card">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="MovieId" />

                    <div class="mb-3">
                        <label asp-for="Title" class="form-label font-bold text-white"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label font-bold text-white"></label>
                        <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Duration" class="form-label font-bold text-white"></label>
                        <input asp-for="Duration" class="form-control" />
                        <span asp-validation-for="Duration" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Poster" class="form-label font-bold text-white"></label>
                        <input asp-for="Poster" class="form-control" />
                        <span asp-validation-for="Poster" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Genre" class="form-label font-bold text-white"></label>
                        <input asp-for="Genre" class="form-control" />
                        <span asp-validation-for="Genre" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Director" class="form-label font-bold text-white"></label>
                        <input asp-for="Director" class="form-control" />
                        <span asp-validation-for="Director" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Actors" class="form-label font-bold text-white"></label>
                        <input asp-for="Actors" class="form-control" />
                        <span asp-validation-for="Actors" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="TrailerUrl" class="form-label font-bold text-white"></label>
                        <input asp-for="TrailerUrl" class="form-control" placeholder="Ví dụ: https://www.youtube.com/watch?v=VIDEO_ID" />
                        <span asp-validation-for="TrailerUrl" class="text-danger"></span>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-create px-4 py-2">Lưu</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="mt-4">
            <a asp-action="Index" class="btn btn-create"><i class="fas fa-list me-1"></i> Quay lại danh sách</a>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #0F0F0F; /* Đen */
        margin: 0;
        font-family: 'Montserrat', sans-serif;
        /* Xóa overflow-hidden để cho phép cuộn */
    }

    .vh-100 {
        height: 100vh;
    }

    .container-fluid {
        display: flex;
        width: 100%;
        height: 100%;
        align-items: center;
        justify-content: center;
        padding: 20px 0; /* Thêm padding để dễ cuộn */
    }

    /* Khung bao quanh */
    .frame-wrapper {
        display: flex;
        flex-direction: column;
        width: 90%;
        max-width: 1200px;
        /* Chiều cao cố định hoặc tự động, cho phép cuộn nội dung */
        max-height: 80vh;
        overflow-y: auto; /* Cho phép cuộn dọc */
        background: #2e2e2e; /* Nền xám tối */
        border-radius: 20px;
        border: 4px solid #2e2e2e; /* Viền cùng màu nền */
        box-shadow: 0 0 25px rgba(46, 46, 46, 0.5);
        padding: 20px;
    }

        /* Thanh cuộn tùy chỉnh */
        .frame-wrapper::-webkit-scrollbar {
            width: 10px;
        }

        .frame-wrapper::-webkit-scrollbar-track {
            background: #2e2e2e;
            border-radius: 5px;
        }

        .frame-wrapper::-webkit-scrollbar-thumb {
            background: #ff0033;
            border-radius: 5px;
        }

            .frame-wrapper::-webkit-scrollbar-thumb:hover {
                background: #e50914;
            }

    h1 {
        font-size: 2rem;
        font-weight: 700;
        color: #ffffff;
        text-transform: uppercase;
        margin-bottom: 10px;
        background: linear-gradient(90deg, #ff0033 0%, #e50914 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .movie-card {
        background: #1c1c1c;
        border-radius: 15px;
        border: 1px solid transparent;
        background-image: linear-gradient(rgba(28, 28, 28, 0.9), rgba(28, 28, 28, 0.9)), linear-gradient(45deg, #e50914, #0F0F0F);
        background-origin: border-box;
        background-clip: padding-box, border-box;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
        transition: transform 0.3s ease;
        overflow: hidden;
    }

        .movie-card:hover {
            transform: translateY(-5px);
        }

    .form-label {
        font-size: 1rem;
        font-weight: 600;
        color: #ffffff;
    }

    .form-control {
        background-color: #333;
        border: 1px solid #444;
        color: #ffffff;
        border-radius: 8px;
        font-size: 1rem;
        font-weight: 500;
    }

        .form-control:focus {
            background-color: #333;
            border-color: #ff0033;
            color: #ffffff;
            box-shadow: 0 0 10px rgba(255, 0, 51, 0.5);
        }

    .text-danger {
        font-size: 0.85rem;
        color: #ff4444;
    }

    .btn-create {
        background: linear-gradient(90deg, #ff0033 0%, #e50914 100%);
        border: none;
        border-radius: 8px;
        padding: 8px 15px;
        font-size: 14px;
        color: #ffffff;
        font-weight: 600;
        transition: background 0.3s ease, transform 0.2s ease;
    }

        .btn-create:hover {
            background: linear-gradient(90deg, #e6002e 0%, #d30912 100%);
            transform: translateY(-2px);
        }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}