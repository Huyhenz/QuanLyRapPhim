@model QuanLyRapPhim.Models.Movie

@{
    ViewData["Title"] = "Chỉnh sửa phim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5 position-relative">
    <div class="circle circle-1"></div>
    <div class="circle circle-2"></div>
    <div class="circle circle-3"></div>

    <h1 class="text-primary mb-4">Chỉnh sửa phim</h1>
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit" class="p-4 rounded bg-white shadow">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="MovieId" />

                <div class="mb-3">
                    <label asp-for="Title" class="form-label font-bold text-primary"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Description" class="form-label font-bold text-primary"></label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Duration" class="form-label font-bold text-primary"></label>
                    <input asp-for="Duration" class="form-control" />
                    <span asp-validation-for="Duration" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Poster" class="form-label font-bold text-primary"></label>
                    <input asp-for="Poster" class="form-control" />
                    <span asp-validation-for="Poster" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Genre" class="form-label font-bold text-primary"></label>
                    <input asp-for="Genre" class="form-control" />
                    <span asp-validation-for="Genre" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Director" class="form-label font-bold text-primary"></label>
                    <input asp-for="Director" class="form-control" />
                    <span asp-validation-for="Director" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Actors" class="form-label font-bold text-primary"></label>
                    <input asp-for="Actors" class="form-control" />
                    <span asp-validation-for="Actors" class="text-danger"></span>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary px-4 py-2">Lưu</button>
                </div>
            </form>
        </div>
    </div>
    <div class="mt-4">
        <a asp-action="Index" class="btn btn-info"><i class="fas fa-list me-1"></i> Quay lại danh sách</a>
    </div>
</div>

<style>
    body {
        background: linear-gradient(135deg, #ff9a8b 0%, #ff6a88 50%, #6b48ff 100%);
        color: #333;
        font-family: 'Arial', sans-serif;
    }

    .container {
        padding-top: 20px;
        padding-bottom: 20px;
    }

    .circle {
        position: absolute;
        border-radius: 50%;
        background: linear-gradient(135deg, #ff9a8b 0%, #ff6a88 50%, #6b48ff 100%);
        opacity: 0.3;
    }

    .circle-1 {
        width: 300px;
        height: 300px;
        top: -50px;
        left: -50px;
    }

    .circle-2 {
        width: 200px;
        height: 200px;
        bottom: -50px;
        left: 50px;
    }

    .circle-3 {
        width: 150px;
        height: 150px;
        top: 50%;
        left: 20%;
    }

    .btn-primary {
        background: linear-gradient(90deg, #ff6a88 0%, #6b48ff 100%);
        color: #fff;
        border: none;
        border-radius: 8px;
        padding: 10px 20px;
        transition: background 0.3s ease;
    }

        .btn-primary:hover {
            background: linear-gradient(90deg, #ff6a88 50%, #6b48ff 100%);
            transform: scale(1.05);
        }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}