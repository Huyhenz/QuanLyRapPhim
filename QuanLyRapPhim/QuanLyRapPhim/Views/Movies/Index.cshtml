@using System.Linq
@model IEnumerable<QuanLyRapPhim.Models.Movie>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["MovieList"].Value;
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool isAdmin = User.IsInRole("Admin");
    // Pagination setup
    var moviesList = Model.ToList();
    int pageSize = 5;
    int totalMovies = moviesList.Count;
    int totalPages = (int)Math.Ceiling((double)totalMovies / pageSize);
    int currentPage = ViewBag.CurrentPage != null ? (int)ViewBag.CurrentPage : 1;
    if (currentPage < 1) currentPage = 1;
    if (currentPage > totalPages) currentPage = totalPages;
    var paginatedMovies = moviesList.Skip((currentPage - 1) * pageSize).Take(pageSize);
}

<div class="dashboard-container">
    @if (isAdmin)
    {
        <!-- Sidebar Toggle Button -->
        <button id="sidebar-toggle" class="sidebar-toggle">
            <i class="fas fa-bars"></i>
        </button>

        <!-- Admin Sidebar -->
        <aside class="admin-sidebar" id="admin-sidebar">
            <div class="sidebar-header">
                <h3 class="sidebar-brand">
                    <i class="fas fa-film"></i>
                    <span class="brand-text">CinemaX Admin</span>
                </h3>
            </div>

            <nav class="sidebar-menu">
                <a href="/Admin/Index" class="menu-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Admin" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")">
                    <i class="fas fa-tachometer-alt"></i>
                    <span class="menu-text">@Localizer["Dashboard"]</span>
                </a>
                <a href="/Movies" class="menu-item active">
                    <i class="fas fa-film"></i>
                    <span class="menu-text">@Localizer["ManageMovies"]</span>
                </a>
                <a href="/Showtimes" class="menu-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Showtimes" ? "active" : "")">
                    <i class="fas fa-clock"></i>
                    <span class="menu-text">@Localizer["ManageShowtimes"]</span>
                </a>
                <a href="/Rooms" class="menu-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Rooms" ? "active" : "")">
                    <i class="fas fa-door-open"></i>
                    <span class="menu-text">@Localizer["ManageRooms"]</span>
                </a>
                <a href="/Seats" class="menu-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Seats" ? "active" : "")">
                    <i class="fas fa-chair"></i>
                    <span class="menu-text">@Localizer["ManageSeats"]</span>
                </a>
                <a href="/Admin/ManageFoods" class="menu-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "ManageFoods" ? "active" : "")">
                    <i class="fas fa-utensils"></i>
                    <span class="menu-text">@Localizer["ManageFoods"]</span>
                </a>
                <a href="/Admin/ManageBookings" class="menu-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "ManageBookings" ? "active" : "")">
                    <i class="fas fa-ticket-alt"></i>
                    <span class="menu-text">@Localizer["ManageBookings"]</span>
                </a>
                <a href="/Admin/RevenueStatistics" class="menu-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "RevenueStatistics" ? "active" : "")">
                    <i class="fas fa-chart-bar"></i>
                    <span class="menu-text">@Localizer["RevenueStatistics"]</span>
                </a>
                <a href="/Vouchers" class="menu-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Vouchers" ? "active" : "")">
                    <i class="fas fa-gift"></i>
                    <span class="menu-text">@Localizer["Vouchers"]</span>
                </a>

                <div class="menu-divider"></div>

                <a href="#" class="menu-item social-link">
                    <i class="fab fa-facebook"></i>
                    <span class="menu-text">Facebook</span>
                </a>
                <a href="#" class="menu-item social-link">
                    <i class="fab fa-twitter"></i>
                    <span class="menu-text">Twitter</span>
                </a>
                <a href="#" class="menu-item social-link">
                    <i class="fab fa-google"></i>
                    <span class="menu-text">Google</span>
                </a>
            </nav>
        </aside>
    }

    <!-- Main Content Area -->
    <main class="main-content @(isAdmin ? "with-sidebar" : "")">
        <div class="content-wrapper">
            <!-- Page Header -->
            <div class="page-header">
                <div class="header-left">
                    <h1 class="page-title">
                        <i class="fas fa-film me-2"></i>
                        @Localizer["MovieList"]
                    </h1>
                    <p class="page-subtitle">@Localizer["MovieCountFound", Model.Count()]</p>
                </div>
                @if (isAdmin)
                {
                    <div class="header-actions">
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>
                            @Localizer["AddNewMovie"]
                        </a>
                    </div>
                }
            </div>

            <!-- Alert Messages -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Movies Table -->
            <div class="data-table-container">
                <div class="table-responsive">
                    <table class="data-table">
                        <thead>
                            <tr>
                                <th>@Localizer["MovieName"]</th>
                                <th>@Localizer["Poster"]</th>
                                <th>@Localizer["Genre"]</th>
                                <th>@Localizer["Duration"]</th>
                                <th>@Localizer["Director"]</th>
                                <th>@Localizer["Actors"]</th>
                                <th>@Localizer["Description"]</th>
                                <th>@Localizer["TrailerURL"]</th>
                                <th class="text-end">@Localizer["Actions"]</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (paginatedMovies.Any())
                            {
                                @foreach (var movie in paginatedMovies)
                                {
                                    <tr data-id="@movie.MovieId">
                                        <td>@(movie.Title ?? Localizer["N/A"].Value)</td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(movie.Poster))
                                            {
                                                <img src="@movie.Poster" alt="@movie.Title" style="width: 50px; height: auto; border-radius: 5px;" />
                                            }
                                            else
                                            {
                                                <span>@Localizer["N/A"]</span>
                                            }
                                        </td>
                                        <td>@(movie.Genre ?? Localizer["N/A"].Value)</td>
                                        <td>@(movie.Duration != 0 ? $"{movie.Duration} {Localizer["Minutes"].Value}" : Localizer["N/A"].Value)</td>
                                        <td>@(movie.Director ?? Localizer["N/A"].Value)</td>
                                        <td>
                                            @{
                                                var actorsText = string.IsNullOrEmpty(movie.Actors)
                                                ? Localizer["N/A"].Value
                                                : (movie.Actors.Length > 30 ? movie.Actors.Substring(0, 30) + "..." : movie.Actors);
                                            }
                                            @actorsText
                                        </td>
                                        <td>
                                            @{
                                                var descText = string.IsNullOrEmpty(movie.Description)
                                                ? Localizer["N/A"].Value
                                                : (movie.Description.Length > 30 ? movie.Description.Substring(0, 30) + "..." : movie.Description);
                                            }
                                            @descText
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(movie.TrailerUrl))
                                            {
                                                <a href="@movie.TrailerUrl" target="_blank" class="text-danger">
                                                    <i class="fas fa-play-circle me-1"></i>@Localizer["ViewTrailer"]
                                                </a>
                                            }
                                            else
                                            {
                                                <span>@Localizer["N/A"]</span>
                                            }
                                        </td>
                                        <td class="text-end">
                                            <div class="action-buttons">
                                                <a asp-action="Details" asp-route-id="@movie.MovieId" class="btn btn-sm btn-info" title="@Localizer["Details"]">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@movie.MovieId" class="btn btn-sm btn-warning" title="@Localizer["Edit"]">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@movie.MovieId" class="btn btn-sm btn-danger" title="@Localizer["Delete"]">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="9">@Localizer["NoMovies"]</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Pagination -->
            @if (totalPages > 1)
            {
                <nav aria-label="Page navigation" class="mt-4">
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                            <a class="page-link" href="?page=@(currentPage - 1)" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        @for (int i = 1; i <= totalPages; i++)
                        {
                            <li class="page-item @(i == currentPage ? "active" : "")">
                                <a class="page-link" href="?page=@i">@i</a>
                            </li>
                        }
                        <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                            <a class="page-link" href="?page=@(currentPage + 1)" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            }
        </div>

        <!-- Footer -->
        <footer class="dashboard-footer">
            <p class="mb-0">
                @Localizer["Copyright"] 2025 CinemaX. @Localizer["AllRightsReserved"]
            </p>
        </footer>
    </main>
</div>

<!-- Add Movie Modal -->
<div class="modal fade" id="addMovieModal" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Localizer["AddMovie"]</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="add-movie-form" method="post" action="/Admin/CreateMovie">
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Localizer["MovieName"]</label>
                            <input name="Title" class="form-control" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Localizer["Duration"] (@Localizer["Minutes"])</label>
                            <input name="Duration" type="number" class="form-control" required min="1" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Localizer["Genre"]</label>
                            <input name="Genre" class="form-control" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Localizer["Director"]</label>
                            <input name="Director" class="form-control" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">@Localizer["Actors"]</label>
                        <input name="Actors" class="form-control" />
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Localizer["Poster"] URL</label>
                            <input name="Poster" type="url" class="form-control" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Localizer["TrailerURL"]</label>
                            <input name="TrailerUrl" type="url" class="form-control" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">@Localizer["Description"]</label>
                        <textarea name="Description" class="form-control" rows="4"></textarea>
                    </div>
                    <button type="submit" class="btn btn-success">@Localizer["AddMovie"]</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Edit Movie Modal -->
<div class="modal fade" id="editMovieModal" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Localizer["EditMovie"]</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="edit-movie-form" method="post" action="/Admin/EditMovie">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="MovieId" id="editMovieId" />
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Localizer["MovieName"]</label>
                            <input name="Title" id="editTitle" class="form-control" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Localizer["Duration"] (@Localizer["Minutes"])</label>
                            <input name="Duration" id="editDuration" type="number" class="form-control" required min="1" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Localizer["Genre"]</label>
                            <input name="Genre" id="editGenre" class="form-control" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Localizer["Director"]</label>
                            <input name="Director" id="editDirector" class="form-control" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">@Localizer["Actors"]</label>
                        <input name="Actors" id="editActors" class="form-control" />
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Localizer["Poster"] URL</label>
                            <input name="Poster" id="editPoster" type="url" class="form-control" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Localizer["TrailerURL"]</label>
                            <input name="TrailerUrl" id="editTrailerUrl" type="url" class="form-control" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">@Localizer["Description"]</label>
                        <textarea name="Description" id="editDescription" class="form-control" rows="4"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">@Localizer["SaveChanges"]</button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    /* Reset & Base Styles */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Inter', 'Segoe UI', sans-serif;
        background: linear-gradient(135deg, #0a0a0a 0%, #1a1a1a 100%);
        color: #e0e0e0;
        overflow-x: hidden;
    }

    /* Dashboard Container */
    .dashboard-container {
        display: flex;
        min-height: 100vh;
        position: relative;
    }

    /* Sidebar Toggle Button */
    .sidebar-toggle {
        position: fixed;
        top: 20px;
        left: 20px;
        z-index: 1100;
        background: linear-gradient(135deg, #dc2626 0%, #991b1b 100%);
        border: none;
        border-radius: 12px;
        width: 44px;
        height: 44px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        cursor: pointer;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        box-shadow: 0 4px 20px rgba(220, 38, 38, 0.4);
    }

        .sidebar-toggle:hover {
            transform: scale(1.05);
            box-shadow: 0 6px 30px rgba(220, 38, 38, 0.6);
        }

        .sidebar-toggle i {
            font-size: 18px;
        }

    /* Admin Sidebar */
    .admin-sidebar {
        position: fixed;
        left: 0;
        top: 0;
        width: 280px;
        height: 100vh;
        background: linear-gradient(180deg, #1a1a1a 0%, #0f0f0f 100%);
        border-right: 1px solid rgba(220, 38, 38, 0.2);
        overflow-y: auto;
        transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        z-index: 1050;
        box-shadow: 4px 0 24px rgba(0, 0, 0, 0.5);
    }

        .admin-sidebar.collapsed {
            transform: translateX(-100%);
        }

    .sidebar-header {
        padding: 24px 20px;
        border-bottom: 1px solid rgba(220, 38, 38, 0.2);
        background: rgba(220, 38, 38, 0.05);
    }

    .sidebar-brand {
        display: flex;
        align-items: center;
        gap: 12px;
        font-size: 24px;
        font-weight: 700;
        color: #dc2626;
        margin: 0;
    }

    .brand-text {
        background: linear-gradient(135deg, #dc2626 0%, #ef4444 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    /* Sidebar Menu */
    .sidebar-menu {
        padding: 20px 16px;
    }

    .menu-item {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 12px 16px;
        margin-bottom: 4px;
        color: #9ca3af;
        text-decoration: none;
        border-radius: 10px;
        transition: all 0.3s ease;
        font-size: 15px;
        font-weight: 500;
