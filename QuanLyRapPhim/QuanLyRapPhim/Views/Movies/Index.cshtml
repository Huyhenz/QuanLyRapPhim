@using System.Linq
@model IEnumerable<QuanLyRapPhim.Models.Movie>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["MovieList"].Value;
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool isAdmin = User.IsInRole("Admin");

    var moviesList = Model.ToList();
    int pageSize = 5;
    int totalMovies = moviesList.Count;
    int totalPages = (int)Math.Ceiling((double)totalMovies / pageSize);
    int currentPage = ViewBag.CurrentPage != null ? (int)ViewBag.CurrentPage : 1;
    if (currentPage < 1) currentPage = 1;
    if (currentPage > totalPages) currentPage = totalPages;
    var paginatedMovies = moviesList.Skip((currentPage - 1) * pageSize).Take(pageSize);
}

<div class="container-fluid d-flex position-relative">
    @await Html.PartialAsync("_ChristmasDashboard")

    <div class="frame-wrapper flex-grow-1 @(isAdmin ? "admin-view" : "")">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="title-gradient">
                <span class="christmas-icon">🎬</span>
                @Localizer["MovieList"]
                <span class="christmas-icon">🎄</span>
            </h1>
            @if (isAdmin)
            {
                <div class="header-actions">
                    <button class="btn btn-create christmas-btn" data-bs-toggle="modal" data-bs-target="#addMovieModal">
                        <i class="fas fa-plus"></i> @Localizer["AddNewMovie"]
                    </button>
                    <span class="order-count ms-3">
                        <i class="fas fa-film"></i> @totalMovies @Localizer["MoviesFound"]
                    </span>
                </div>
            }
        </div>

        @if (isAdmin)
        {
            <div id="alert-container" class="mb-4"></div>
        }

        @if (isAdmin)
        {
            <div class="admin-section">
                <div class="table-container">
                    <table class="table table-custom christmas-table">
                        <thead>
                            <tr>
                                <th><i class="fas fa-image"></i> @Localizer["Poster"]</th>
                                <th><i class="fas fa-film"></i> @Localizer["MovieName"]</th>
                                <th><i class="fas fa-tags"></i> @Localizer["Genre"]</th>
                                <th><i class="fas fa-clock"></i> @Localizer["Duration"]</th>
                                <th><i class="fas fa-user-tie"></i> @Localizer["Director"]</th>
                                <th><i class="fas fa-users"></i> @Localizer["Actors"]</th>
                                <th><i class="fas fa-align-left"></i> @Localizer["Description"]</th>
                                <th><i class="fas fa-play-circle"></i> @Localizer["TrailerURL"]</th>
                                <th><i class="fas fa-tools"></i> @Localizer["Actions"]</th>
                            </tr>
                        </thead>
                        <tbody id="movies-table">
                            @if (paginatedMovies.Any())
                            {
                                @foreach (var movie in paginatedMovies)
                                {
                                    <tr data-id="@movie.MovieId">
                                        <td>
                                            @if (!string.IsNullOrEmpty(movie.Poster))
                                            {
                                                <img src="@movie.Poster" alt="@movie.Title" class="movie-poster-thumb" />
                                            }
                                            else
                                            {
                                                <div class="no-poster-badge">
                                                    <i class="fas fa-film"></i>
                                                </div>
                                            }
                                        </td>
                                        <td class="fw-bold text-warning">@(movie.Title ?? Localizer["N/A"].Value)</td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(movie.Genre))
                                            {
                                                <span class="genre-badge">@movie.Genre</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">@Localizer["N/A"]</span>
                                            }
                                        </td>
                                        <td>
                                            @if (movie.Duration != 0)
                                            {
                                                <span class="duration-badge">
                                                    <i class="fas fa-stopwatch"></i> @movie.Duration @Localizer["Minutes"].Value
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">@Localizer["N/A"]</span>
                                            }
                                        </td>
                                        <td>@(movie.Director ?? Localizer["N/A"].Value)</td>
                                        <td>
                                            @{
                                                var actorsText = string.IsNullOrEmpty(movie.Actors)
                                                ? Localizer["N/A"].Value
                                                : (movie.Actors.Length > 50 ? movie.Actors.Substring(0, 50) + "..." : movie.Actors);
                                            }
                                            <span class="actors-text">@actorsText</span>
                                        </td>
                                        <td>
                                            @{
                                                var descText = string.IsNullOrEmpty(movie.Description)
                                                ? Localizer["N/A"].Value
                                                : (movie.Description.Length > 50 ? movie.Description.Substring(0, 50) + "..." : movie.Description);
                                            }
                                            <span class="description-text">@descText</span>
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(movie.TrailerUrl))
                                            {
                                                <a href="@movie.TrailerUrl" target="_blank" class="trailer-link">
                                                    <i class="fas fa-external-link-alt"></i> @Localizer["ViewTrailer"]
                                                </a>
                                            }
                                            else
                                            {
                                                <span class="text-muted">@Localizer["N/A"]</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="action-buttons">
                                                <a asp-action="Details" asp-route-id="@movie.MovieId" class="btn btn-sm btn-info action-btn" title="@Localizer["Details"]">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <button class="btn btn-sm btn-warning action-btn edit-movie-btn" data-id="@movie.MovieId" title="@Localizer["Edit"]">
                                                    <i class="fas fa-edit"></i>
                                                </button>
                                                <button class="btn btn-sm btn-danger action-btn delete-movie-btn" data-id="@movie.MovieId" title="@Localizer["Delete"]">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="9" class="text-center text-muted">@Localizer["NoMovies"]</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @if (totalPages > 1)
                {
                    <div class="pagination">
                        <span>@Localizer["Showing"]: @((currentPage - 1) * pageSize + 1)-@(Math.Min(currentPage * pageSize, totalMovies)) @Localizer["Of"]: @totalMovies</span>
                        <div class="pagination-controls">
                            @if (currentPage > 1)
                            {
                                <a href="?page=@(currentPage - 1)" class="btn-pag christmas-btn-small"><i class="fas fa-angle-left"></i></a>
                            }
                            @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                            {
                                <a href="?page=@i" class="btn-pag christmas-btn-small @(i == currentPage ? "active" : "")">@i</a>
                            }
                            @if (currentPage < totalPages)
                            {
                                <a href="?page=@(currentPage + 1)" class="btn-pag christmas-btn-small"><i class="fas fa-angle-right"></i></a>
                            }
                        </div>
                    </div>
                }
            </div>
        }

        @if (!isAdmin)
        {
            <div class="movie-grid">
                @if (paginatedMovies.Any())
                {
                    <div class="row">
                        @foreach (var item in paginatedMovies)
                        {
                            double rating = (item.Reviews?.Any() == true) ? item.Reviews.Average(r => r.Rating) : 0;
                            int fullStars = (int)Math.Floor(rating);
                            bool hasHalfStar = (rating % 1) >= 0.5;
                            int reviewCount = item.Reviews?.Count() ?? 0;
                            var descText = string.IsNullOrEmpty(item.Description)
                            ? Localizer["NoDescription"].Value
                            : (item.Description.Length > 120 ? item.Description.Substring(0, 120) + "..." : item.Description);

                            <div class="col-md-6 col-lg-4 mb-4">
                                <div class="card movie-card christmas-card">
                                    <div class="poster-container">
                                        @if (!string.IsNullOrEmpty(item.Poster))
                                        {
                                            <img src="@item.Poster" alt="@item.Title" class="movie-poster" />
                                        }
                                        else
                                        {
                                            <div class="placeholder-poster">@Localizer["NoPoster"].Value</div>
                                        }
                                    </div>
                                    <div class="card-body">
                                        <h5 class="card-title">@(item.Title ?? Localizer["N/A"].Value)</h5>
                                        <p class="card-text">
                                            <strong>@Localizer["Duration"]:</strong>
                                            @(item.Duration != 0 ? $"{item.Duration} {Localizer["Minutes"].Value}" : Localizer["N/A"].Value)
                                        </p>
                                        <p class="card-text"><strong>@Localizer["Description"]:</strong> @descText</p>
                                        <div class="star-rating mb-2">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                if (i <= fullStars)
                                                {
                                                    <span class="fas fa-star text-warning"></span>
                                                }
                                                else if (i == fullStars + 1 && hasHalfStar)
                                                {
                                                    <span class="fas fa-star-half-alt text-warning"></span>
                                                }
                                                else
                                                {
                                                    <span class="fas fa-star text-secondary"></span>
                                                }
                                            }
                                            <span class="rating-text">(@reviewCount)</span>
                                        </div>
                                        <div class="movie-actions">
                                            @if (!string.IsNullOrEmpty(item.TrailerUrl))
                                            {
                                                <a href="@item.TrailerUrl" target="_blank" class="btn btn-danger btn-sm me-2">@Localizer["ViewTrailer"]</a>
                                            }
                                            <a asp-action="Details" asp-route-id="@item.MovieId" class="btn btn-primary btn-sm christmas-btn">@Localizer["Details"]</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    @if (totalPages > 1)
                    {
                        <div class="pagination">
                            <span>@Localizer["Showing"]: @((currentPage - 1) * pageSize + 1)-@(Math.Min(currentPage * pageSize, totalMovies)) @Localizer["Of"]: @totalMovies</span>
                            <div class="pagination-controls">
                                @if (currentPage > 1)
                                {
                                    <a href="?page=@(currentPage - 1)" class="btn-pag christmas-btn-small"><i class="fas fa-angle-left"></i></a>
                                }
                                @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                                {
                                    <a href="?page=@i" class="btn-pag christmas-btn-small @(i == currentPage ? "active" : "")">@i</a>
                                }
                                @if (currentPage < totalPages)
                                {
                                    <a href="?page=@(currentPage + 1)" class="btn-pag christmas-btn-small"><i class="fas fa-angle-right"></i></a>
                                }
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="row">
                        <div class="col-12 text-center">
                            <p class="no-movies-text">@Localizer["NoMovies"]</p>
                        </div>
                    </div>
                }
            </div>
        }

        @if (isAdmin)
        {
            <!-- Add Movie Modal -->
            <div class="modal fade" id="addMovieModal" tabindex="-1">
                <div class="modal-dialog modal-xl">
                    <div class="modal-content christmas-modal">
                        <div class="modal-header">
                            <h5 class="modal-title">🎄 @Localizer["AddMovie"]</h5>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <form id="add-movie-form" method="post" action="/Admin/CreateMovie">
                                @Html.AntiForgeryToken()
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">@Localizer["MovieName"]</label>
                                        <input name="Title" class="form-control" required />
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">@Localizer["Duration"] (@Localizer["Minutes"])</label>
                                        <input name="Duration" type="number" class="form-control" required min="1" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">@Localizer["Genre"]</label>
                                        <input name="Genre" class="form-control" />
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">@Localizer["Director"]</label>
                                        <input name="Director" class="form-control" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12 mb-3">
                                        <label class="form-label">@Localizer["Actors"]</label>
                                        <input name="Actors" class="form-control" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">@Localizer["Poster"] URL</label>
                                        <input name="Poster" type="url" class="form-control" />
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">@Localizer["TrailerURL"] (YouTube)</label>
                                        <input name="TrailerUrl" type="url" class="form-control" />
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">@Localizer["Description"]</label>
                                    <textarea name="Description" class="form-control" rows="4"></textarea>
                                </div>
                                <button type="submit" class="btn btn-primary christmas-btn">@Localizer["AddMovie"]</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Edit Movie Modal -->
            <div class="modal fade" id="editMovieModal" tabindex="-1">
                <div class="modal-dialog modal-xl">
                    <div class="modal-content christmas-modal">
                        <div class="modal-header">
                            <h5 class="modal-title">🎅 @Localizer["EditMovie"]</h5>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <form id="edit-movie-form" method="post" action="/Admin/EditMovie">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="MovieId" id="editMovieId" />
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">@Localizer["MovieName"]</label>
                                        <input name="Title" id="editTitle" class="form-control" required />
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">@Localizer["Duration"] (@Localizer["Minutes"])</label>
                                        <input name="Duration" id="editDuration" type="number" class="form-control" required min="1" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">@Localizer["Genre"]</label>
                                        <input name="Genre" id="editGenre" class="form-control" />
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">@Localizer["Director"]</label>
                                        <input name="Director" id="editDirector" class="form-control" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12 mb-3">
                                        <label class="form-label">@Localizer["Actors"]</label>
                                        <input name="Actors" id="editActors" class="form-control" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">@Localizer["Poster"] URL</label>
                                        <input name="Poster" id="editPoster" type="url" class="form-control" />
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">@Localizer["TrailerURL"] (YouTube)</label>
                                        <input name="TrailerUrl" id="editTrailerUrl" type="url" class="form-control" />
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">@Localizer["Description"]</label>
                                    <textarea name="Description" id="editDescription" class="form-control" rows="4"></textarea>
                                </div>
                                <button type="submit" class="btn btn-primary christmas-btn">@Localizer["SaveChanges"]</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <footer class="footer text-center py-3">
        <p class="text-white mb-0">
            <span class="christmas-icon-small">🎅</span>
            @Localizer["Copyright"] 2025 CinemaX. @Localizer["AllRightsReserved"]
            <span class="christmas-icon-small">🎁</span>
        </p>
    </footer>
</div>

<style>
    body {
        background-color: #0F0F0F;
        color: #ffffff;
        font-family: 'Montserrat', sans-serif;
    }

    .title-gradient {
        background: linear-gradient(90deg, #FFD700, #FF4500);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-size: 2.5rem;
        font-weight: 700;
    }

    .christmas-icon {
        font-size: 2rem;
        animation: bounce 2s infinite;
    }

    .christmas-icon-small {
        font-size: 1.2rem;
        animation: bounce 2s infinite;
    }

    @@keyframes bounce {
        0%, 100%

    {
        transform: translateY(0);
    }

    50% {
        transform: translateY(-5px);
    }

    }

    .header-actions {
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .order-count {
        color: #FFD700;
        font-weight: 600;
        font-size: 1rem;
    }

    .christmas-btn {
        background: linear-gradient(135deg, #C41E3A, #165B33);
        border: 2px solid #FFD700;
        color: white;
        padding: 10px 25px;
        border-radius: 12px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        display: inline-block;
    }

        .christmas-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(255, 215, 0, 0.6);
            color: white;
        }

        .christmas-btn i {
            margin-right: 8px;
        }

    .christmas-btn-small {
        background: linear-gradient(135deg, #C41E3A, #165B33);
        border: 2px solid #FFD700;
        color: white;
        padding: 8px 15px;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.3s ease;
        text-decoration: none;
    }

        .christmas-btn-small:hover, .christmas-btn-small.active {
            background: linear-gradient(135deg, #FFD700, #FFA500);
            color: #000;
        }

    .table-container {
        overflow-x: auto;
        border-radius: 15px;
    }

    .christmas-table {
        width: 100%;
        background-color: #1c1c1c;
        border: 2px solid #FFD700;
        border-radius: 15px;
        overflow: hidden;
    }

        .christmas-table thead tr {
            background: linear-gradient(135deg, #8B0000, #165B33);
            color: #FFFAFA;
        }

        .christmas-table th {
            padding: 18px 15px;
            border: none;
            font-weight: 700;
            text-transform: uppercase;
            font-size: 0.85rem;
            letter-spacing: 1px;
            border-bottom: 2px solid #FFD700;
        }

            .christmas-table th i {
                margin-right: 8px;
            }

        .christmas-table td {
            padding: 15px;
            border: none;
            color: #FFFAFA;
            border-bottom: 1px solid rgba(255, 215, 0, 0.3);
            vertical-align: middle;
        }

        .christmas-table tr:hover {
            background: linear-gradient(90deg, rgba(139, 0, 0, 0.3), rgba(22, 91, 51, 0.3));
        }

        .christmas-table tbody tr:last-child td {
            border-bottom: none;
        }

    .movie-poster-thumb {
        width: 60px;
        height: 80px;
        object-fit: cover;
        border-radius: 8px;
        border: 2px solid #FFD700;
    }

    .no-poster-badge {
        width: 60px;
        height: 80px;
        background: linear-gradient(135deg, #6B7280, #4B5563);
        border: 2px solid #FFD700;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #FFFAFA;
        font-size: 1.5rem;
    }

    .genre-badge {
        padding: 6px 12px;
        border-radius: 10px;
        background: linear-gradient(135deg, #3B82F6, #2563EB);
        color: white;
        font-weight: 600;
        font-size: 0.85rem;
        display: inline-block;
    }

    .duration-badge {
        padding: 6px 12px;
        border-radius: 10px;
        background: linear-gradient(135deg, #8B5CF6, #7C3AED);
        color: white;
        font-weight: 600;
        font-size: 0.85rem;
        display: inline-block;
    }

        .duration-badge i {
            margin-right: 5px;
        }

    .actors-text, .description-text {
        font-size: 0.9rem;
        color: #d1d5db;
    }

    .trailer-link {
        color: #60A5FA;
        text-decoration: none;
        font-weight: 600;
    }

        .trailer-link:hover {
            color: #3B82F6;
            text-decoration: underline;
        }

        .trailer-link i {
            margin-right: 5px;
        }

    .action-buttons {
        display: flex;
        gap: 5px;
        justify-content: center;
    }

    .action-btn {
        padding: 8px 12px;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.3s ease;
        border: 2px solid #FFD700;
    }

        .action-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(255, 215, 0, 0.5);
        }

    .btn-info {
        background: linear-gradient(135deg, #0EA5E9, #0284C7);
        color: white;
    }

    .btn-warning {
        background: linear-gradient(135deg, #FFD700, #FFA500);
        color: #000;
    }

    .btn-danger {
        background: linear-gradient(135deg, #8B0000, #C41E3A);
        color: white;
    }

    .pagination {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 20px;
        color: #FFD700;
    }

    .pagination-controls {
        display: flex;
        gap: 5px;
    }

    .christmas-modal {
        background: linear-gradient(180deg, #8B0000, #165B33);
        border: 3px solid #FFD700;
        color: #FFFAFA;
    }

        .christmas-modal .modal-header {
            border-bottom: 2px solid #FFD700;
        }

        .christmas-modal .form-label {
            color: #FFD700;
            font-weight: 600;
        }

        .christmas-modal .form-control {
            background-color: rgba(0, 0, 0, 0.3);
            border: 1px solid #FFD700;
            color: #FFFAFA;
        }

            .christmas-modal .form-control:focus {
                background-color: rgba(0, 0, 0, 0.5);
                border-color: #FFD700;
                box-shadow: 0 0 10px rgba(255, 215, 0, 0.5);
                color: #FFFAFA;
            }

    .footer {
        background: linear-gradient(135deg, #8B0000, #165B33);
        border-top: 2px solid #FFD700;
        margin-top: 50px;
    }

    @@media (max-width: 768px) {
        .title-gradient

    {
        font-size: 2rem;
    }

    .header-actions {
        flex-direction: column;
        align-items: flex-start;
        gap: 10px;
    }

    .christmas-table {
        font-size: 0.85rem;
    }

    .action-buttons {
        flex-direction: column;
    }

    }
</style>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const toggleBtn = document.getElementById('sidebar-toggle');
            const sidebar = document.querySelector('.christmas-sidebar');
            const frameWrapper = document.querySelector('.frame-wrapper');

            if (toggleBtn && sidebar && frameWrapper) {
                toggleBtn.addEventListener('click', function() {
                    sidebar.classList.toggle('collapsed');
                    frameWrapper.classList.toggle('shifted');

                    const icon = toggleBtn.querySelector('i');
                    if (sidebar.classList.contains('collapsed')) {
                        icon.className = 'fas fa-bars';
                    } else {
                        icon.className = 'fas fa-times';
                    }
                });
            }
        });

        $(document).ready(function () {
            function showAlert(message, type = 'danger') {
                const alertHtml = `
                    <div class="alert alert-${type} christmas-alert alert-dismissible fade show" role="alert">
                        <i class="fas fa-${type === 'success' ? 'check' : 'exclamation'}-circle"></i>
                        ${message}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                `;
                $('#alert-container').html(alertHtml);
                setTimeout(() => $('.alert').fadeOut(), 5000);
            }

            $(document).on('click', '.edit-movie-btn', function () {
                const movieId = $(this).data('id');
                $('#editMovieId').val(movieId);
                $.ajax({
                    url: `/Admin/GetMovieDetails/${movieId}`,
                    type: 'GET',
                    success: function (data) {
                        if (data) {
                            $('#editTitle').val(data.title || '');
                            $('#editDescription').val(data.description || '');
                            $('#editDuration').val(data.duration || '');
                            $('#editPoster').val(data.poster || '');
                            $('#editGenre').val(data.genre || '');
                            $('#editDirector').val(data.director || '');
                            $('#editActors').val(data.actors || '');
                            $('#editTrailerUrl').val(data.trailerUrl || '');
                            $('#editMovieModal').modal('show');
                        }
                    },
                    error: function() {
                        showAlert('@Localizer["ServerError"]', 'danger');
                    }
                });
            });

            $(document).on('click', '.delete-movie-btn', function () {
                if (!confirm('@Localizer["ConfirmDelete"].Value')) return;
                const movieId = $(this).data('id');
                $.ajax({
                    url: '/Admin/DeleteMovie',
                    type: 'POST',
                    data: {
                        id: movieId,
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function (response) {
                        if (response.success) {
                            showAlert(response.message, 'success');
                            setTimeout(() => location.reload(), 1500);
                        } else {
                            showAlert(response.message || '@Localizer["DeleteFailed"]', 'danger');
                        }
                    },
                    error: function() {
                        showAlert('@Localizer["ServerError"]', 'danger');
                    }
                });
            });

            $('#add-movie-form').submit(function(e) {
                const form = this;
                setTimeout(() => form.submit(), 100);
            });

            $('#edit-movie-form').submit(function(e) {
                const form = this;
                setTimeout(() => form.submit(), 100);
            });
        });
    </script>
}