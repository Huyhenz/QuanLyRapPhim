@model IEnumerable<QuanLyRapPhim.Models.Movie>

@{
    ViewData["Title"] = "Danh sách phim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Danh sách phim -->
<div class="container my-5 position-relative">
    <!-- Các hình tròn gradient trang trí -->
    <div class="circle circle-1"></div>
    <div class="circle circle-2"></div>
    <div class="circle circle-3"></div>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-primary">Danh sách phim</h1>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-primary">Thêm phim mới</a>
        }
    </div>

    <!-- Danh sách phim dạng thẻ -->
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 col-lg-3 mb-4">
                <div class="card movie-card h-100">
                    <div class="poster-container">
                        <img src="@item.Poster" class="card-img-top movie-poster" alt="@item.Title" />
                    </div>
                    <div class="card-body">
                        <h5 class="card-title text-primary">@item.Title</h5>
                        <p class="card-text text-description">
                            @if (string.IsNullOrEmpty(item.Description))
                            {
                                <span>Chưa có mô tả</span>
                            }
                            else if (item.Description.Length > 100)
                            {
                                @(item.Description.Substring(0, 100) + "...")
                            }
                            else
                            {
                                @item.Description
                            }
                        </p>
                        <p class="card-text text-description"><strong>Thể loại:</strong> @item.Genre</p>
                        <p class="card-text text-description"><strong>Thời lượng:</strong> @item.Duration phút</p>
                    </div>
                    <div class="card-footer d-flex justify-content-between">
                        <a asp-action="Details" asp-route-id="@item.MovieId" class="btn btn-primary">Chi tiết</a>
                        @if (User.IsInRole("Admin"))
                        {
                            <div>
                                <a asp-action="Edit" asp-route-id="@item.MovieId" class="btn btn-warning btn-sm">Sửa</a>
                                <a asp-action="Delete" asp-route-id="@item.MovieId" class="btn btn-danger btn-sm">Xóa</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- CSS tùy chỉnh -->
<style>
    body {
        background: linear-gradient(135deg, #ff9a8b 0%, #ff6a88 50%, #6b48ff 100%);
        color: #333;
        font-family: 'Roboto', 'Helvetica', 'Arial', sans-serif; /* Sử dụng Roboto với fallback */
    }

    .container {
        padding-top: 20px;
        padding-bottom: 20px;
    }

    /* Các hình tròn gradient trang trí */
    .circle {
        position: absolute;
        border-radius: 50%;
        background: linear-gradient(135deg, #ff9a8b 0%, #ff6a88 50%, #6b48ff 100%);
        opacity: 0.3;
    }

    .circle-1 {
        width: 300px;
        height: 300px;
        top: -50px;
        left: -50px;
    }

    .circle-2 {
        width: 200px;
        height: 200px;
        bottom: -50px;
        left: 50px;
    }

    .circle-3 {
        width: 150px;
        height: 150px;
        top: 50%;
        left: 20%;
    }

    .movie-card {
        background: rgba(255, 255, 255, 0.2); /* Nền trắng bóng mờ trong suốt */
        border-radius: 15px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        overflow: hidden;
        border: none;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        backdrop-filter: blur(10px);
    }

        .movie-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(255, 255, 255, 0.2);
        }

    .movie-poster {
        border-radius: 15px 15px 0 0;
        height: 300px;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

        .movie-poster:hover {
            transform: scale(1.05);
        }

    .card-body {
        background: transparent;
    }

    .text-primary {
        color: #333;
        font-weight: bold;
    }

    .text-description {
        color: #000000;
    }

    .btn-primary {
        background: linear-gradient(90deg, #ff6a88 0%, #6b48ff 100%);
        color: #fff;
        border: none;
        border-radius: 8px;
        padding: 10px 20px;
        transition: background 0.3s ease;
    }

        .btn-primary:hover {
            background: linear-gradient(90deg, #ff6a88 50%, #6b48ff 100%);
            transform: scale(1.05);
        }

    .btn-warning {
        background-color: #ffca28;
        color: #000;
        border: none;
        border-radius: 8px;
        padding: 5px 15px;
    }

        .btn-warning:hover {
            background-color: #ffb300;
        }

    .btn-danger {
        background-color: #ff4444;
        color: #fff;
        border: none;
        border-radius: 8px;
        padding: 5px 15px;
    }

        .btn-danger:hover {
            background-color: #cc0000;
        }

    .card-footer {
        background: rgba(255, 255, 255, 0.2);
        border-top: none;
    }
</style>