@model QuanLyRapPhim.Models.Movie

@{
    ViewData["Title"] = "Xoá";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid vh-100 d-flex flex-column justify-content-center position-relative">
    <div class="frame-wrapper flex-grow-1">
        <h1 class="text-white mb-4">Xoá phim: @Model.Title</h1>

        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card movie-card">
                    <div class="card-body">
                        <h3 class="text-danger">Are you sure you want to delete this?</h3>
                        <h4 class="text-warning">Movie</h4>
                        <hr />
                        <dl class="row">
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Title)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Title)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Description)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Description)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Duration)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Duration)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Poster)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Poster)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Genre)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Genre)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Director)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Director)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Actors)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Actors)
                            </dd>
                        </dl>

                        <form asp-action="Delete">
                            <input type="hidden" asp-for="MovieId" />
                            <div class="d-flex justify-content-between mt-4">
                                <input type="submit" value="Delete" class="btn btn-delete" />
                                <a asp-action="Index" class="btn btn-back">⏪ Quay lại danh sách</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #0F0F0F; /* Đen */
        margin: 0;
        font-family: 'Montserrat', sans-serif;
    }

    .vh-100 {
        height: 100vh;
    }

    .container-fluid {
        display: flex;
        width: 100%;
        height: 100%;
        align-items: center;
        justify-content: center;
        padding: 20px 0;
    }

    /* Khung bao quanh */
    .frame-wrapper {
        display: flex;
        flex-direction: column;
        width: 90%;
        max-width: 1200px;
        max-height: 80vh;
        overflow-y: auto; /* Cho phép cuộn dọc */
        background: #2e2e2e; /* Nền xám tối */
        border-radius: 20px;
        border: 4px solid #2e2e2e; /* Viền cùng màu nền */
        box-shadow: 0 0 25px rgba(46, 46, 46, 0.5);
        padding: 20px;
    }

        /* Thanh cuộn tùy chỉnh */
        .frame-wrapper::-webkit-scrollbar {
            width: 10px;
        }

        .frame-wrapper::-webkit-scrollbar-track {
            background: #2e2e2e;
            border-radius: 5px;
        }

        .frame-wrapper::-webkit-scrollbar-thumb {
            background: #ff0033;
            border-radius: 5px;
        }

            .frame-wrapper::-webkit-scrollbar-thumb:hover {
                background: #e50914;
            }

    h1 {
        font-size: 2rem;
        font-weight: 700;
        color: #ffffff;
        text-transform: uppercase;
        margin-bottom: 10px;
        background: linear-gradient(90deg, #ff0033 0%, #e50914 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .movie-card {
        background: #1c1c1c;
        border-radius: 15px;
        border: 1px solid transparent;
        background-image: linear-gradient(rgba(28, 28, 28, 0.9), rgba(28, 28, 28, 0.9)), linear-gradient(45deg, #e50914, #0F0F0F);
        background-origin: border-box;
        background-clip: padding-box, border-box;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
        transition: transform 0.3s ease;
    }

        .movie-card:hover {
            transform: translateY(-5px);
        }

    .card-body {
        color: #ffffff;
    }

    .text-danger {
        font-size: 1.2rem;
        font-weight: 600;
    }

    .text-warning {
        font-size: 1.1rem;
        font-weight: 500;
    }

    dt {
        font-weight: 600;
        color: #b3b3b3;
    }

    dd {
        color: #ffffff;
        margin-bottom: 10px;
    }

    hr {
        border-color: #444;
        margin: 15px 0;
    }

    .btn-delete {
        background: linear-gradient(90deg, #ff0033 0%, #e50914 100%);
        color: #ffffff;
        border: none;
        border-radius: 8px;
        padding: 10px 20px;
        font-weight: 600;
        transition: background 0.3s ease, transform 0.2s ease;
    }

        .btn-delete:hover {
            background: linear-gradient(90deg, #e6002e 0%, #d30912 100%);
            transform: translateY(-2px);
        }

    .btn-back {
        background: linear-gradient(90deg, #ff0033 0%, #e50914 100%);
        color: #ffffff;
        border: none;
        border-radius: 8px;
        padding: 10px 20px;
        font-weight: 600;
        transition: background 0.3s ease, transform 0.2s ease;
    }

        .btn-back:hover {
            background: linear-gradient(90deg, #e6002e 0%, #d30912 100%);
            transform: translateY(-2px);
        }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}