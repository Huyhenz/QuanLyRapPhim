@page
@model ConfirmEmailModel

@{
    ViewData["Title"] = "Xác nhận Email";
}

<!-- Xác nhận Email -->
<div class="container-fluid vh-100 d-flex align-items-center justify-content-center position-relative overflow-hidden">
    <div class="frame-wrapper">
        <!-- Phần form bên trái -->
        <div class="left-section">
            <div class="card shadow-lg border-0 register-card p-4">
                <h2 class="mb-3 text-white">Xác nhận Email</h2>
                @if (Model.IsConfirmed)
                {
                    <p class="text-white">Đăng ký thành công! Bạn sẽ được chuyển hướng đến trang đăng nhập trong 5 giây.</p>
                    <p class="text-white">Nếu không được chuyển hướng, vui lòng <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-light-red">nhấn vào đây</a>.</p>
                }
                else
                {
                    <p class="text-white">Một email chứa liên kết xác nhận đã được gửi đến <strong>@Model.Email</strong>. Vui lòng kiểm tra hộp thư (bao gồm thư mục spam) và nhấp vào liên kết để hoàn tất đăng ký. Liên kết có hiệu lực trong 5 phút.</p>
                    <div asp-validation-summary="All" class="text-danger" role="alert"></div>
                    <!-- Liên kết gửi lại email -->
                    <div class="text-center">
                        <p class="text-white">
                            Không nhận được email? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-light-red">Gửi lại liên kết</a>
                        </p>
                    </div>
                }
            </div>
        </div>

        <!-- Phần hình ảnh bên phải -->
        <div class="right-section">
            <div class="intro-text">
                <h2 class="text-white">CinemaX</h2>
                <h3 class="text-white">Experience movies like never before – only at</h3>
            </div>
        </div>
    </div>
</div>

<!-- CSS giữ nguyên -->
<style scoped>
    body {
        background-color: #0F0F0F;
        margin: 0;
        font-family: 'Montserrat', sans-serif;
        overflow: hidden;
    }

    .vh-100 {
        height: 100vh;
    }

    .container-fluid {
        display: flex;
        width: 100%;
        height: 100%;
        align-items: center;
        justify-content: center;
    }

    .frame-wrapper {
        display: flex;
        width: 90%;
        max-width: 1200px;
        height: 80%;
        background: #2e2e2e;
        border-radius: 15px;
        border: 4px solid #2e2e2e;
        box-shadow: 0 0 20px rgba(46, 46, 46, 0.4);
        overflow: hidden;
    }

    .left-section {
        flex: 1;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #2e2e2e;
    }

    .register-card {
        max-width: 400px;
        width: 100%;
        background: #1c1c1c;
        border-radius: 10px;
        border: 1px solid transparent;
        background-image: linear-gradient(rgba(28, 28, 28, 0.9), rgba(28, 28, 28, 0.9)), linear-gradient(45deg, #e50914, #0F0F0F);
        background-origin: border-box;
        background-clip: padding-box, border-box;
        padding: 30px;
        z-index: 2;
    }

    h2 {
        font-size: 2rem;
        font-weight: 700;
        text-align: center;
        color: #ffffff;
        text-transform: uppercase;
        margin-bottom: 20px;
    }

    .text-light-red {
        color: #cc0022 !important;
        text-decoration: none;
        transition: color 0.3s ease;
    }

        .text-light-red:hover {
            color: #ff0033 !important;
            text-decoration: underline;
        }

    .text-white a {
        color: #cc0022;
        text-decoration: none;
    }

        .text-white a:hover {
            color: #ff0033;
            text-decoration: underline;
        }

    .right-section {
        flex: 1;
        background: url('https://i.pinimg.com/originals/40/21/94/402194c8db6bf41861c1aef74a457117.gif') no-repeat center center/cover;
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .right-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.2);
            z-index: 1;
        }

    .intro-text {
        position: relative;
        z-index: 2;
        color: #ffffff;
        text-align: center;
        padding: 20px;
    }

        .intro-text h3 {
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 10px;
        }

        .intro-text h2 {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 20px;
        }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    @if (Model.IsConfirmed)
    {
        <script>
            setTimeout(function () {
                window.location.href = '@Url.Page("./Login", new { returnUrl = Model.ReturnUrl })';
            }, 5000);
        </script>
    }
}