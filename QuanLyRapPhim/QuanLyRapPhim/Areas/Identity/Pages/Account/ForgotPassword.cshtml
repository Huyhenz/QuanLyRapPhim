@page
@model ForgotPasswordModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "Quên mật khẩu";
}

<div class="container-fluid vh-100 d-flex align-items-center justify-content-center position-relative overflow-hidden">
    <div class="frame-wrapper">
        <div class="left-section">
            <div class="card shadow-lg border-0 forgot-password-card p-4">
                <h2 class="mb-3 text-white">Quên mật khẩu?</h2>
                <p class="text-white-50 mb-4">Nhập email của bạn để nhận link đặt lại mật khẩu.</p>
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger mb-3" role="alert"></div>
                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label text-white">Email</label>
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="username@gmail.com" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="d-grid mb-4">
                        <button type="submit" class="btn btn-create btn-lg">Gửi link đặt lại mật khẩu</button>
                    </div>
                    <div class="text-center">
                        <a asp-page="./Login" class="text-light-red">Quay lại đăng nhập</a>
                    </div>
                </form>
            </div>
        </div>
        <div class="right-section">
            <div class="intro-text">
                <h2 class="text-white">CinemaX</h2>
                <h3 class="text-white">Đặt lại mật khẩu của bạn</h3>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #0F0F0F;
        margin: 0;
        font-family: 'Montserrat', sans-serif;
        overflow: hidden;
    }

    .vh-100 {
        height: 100vh;
    }

    .container-fluid {
        display: flex;
        width: 100%;
        height: 100%;
        align-items: center;
        justify-content: center;
    }

    .frame-wrapper {
        display: flex;
        width: 90%;
        max-width: 1200px;
        height: 80%;
        background: #2e2e2e;
        border-radius: 15px;
        border: 4px solid #2e2e2e;
        box-shadow: 0 0 20px rgba(46, 46, 46, 0.4);
        overflow: hidden;
    }

    .left-section {
        flex: 1;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #2e2e2e;
    }

    .forgot-password-card {
        max-width: 400px;
        width: 100%;
        background: #1c1c1c;
        border-radius: 10px;
        border: 1px solid transparent;
        background-image: linear-gradient(rgba(28, 28, 28, 0.9), rgba(28, 28, 28, 0.9)), linear-gradient(45deg, #e50914, #0F0F0F);
        background-origin: border-box;
        background-clip: padding-box, border-box;
        z-index: 2;
    }

    .text-white-50 {
        color: rgba(255, 255, 255, 0.7);
    }

    .form-control {
        border-radius: 5px;
        padding: 12px;
        font-size: 16px;
        border: 1px solid #cc0022;
        background: #2a2a2a;
        color: #ffffff;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

    .form-control:focus {
        border-color: #ff0033;
        box-shadow: 0 0 5px rgba(255, 0, 51, 0.5);
        background: #333;
        color: #ffffff;
    }

    .form-control::placeholder {
        color: rgba(255, 255, 255, 0.6);
    }

    .form-label {
        font-size: 14px;
        font-weight: 500;
        color: #ffffff;
        margin-bottom: 5px;
    }

    .btn-create {
        background: linear-gradient(90deg, #ff0033 0%, #e50914 100%);
        border: none;
        border-radius: 5px;
        padding: 12px;
        font-size: 16px;
        color: #ffffff;
        font-weight: 600;
        transition: background 0.3s ease;
    }

    .btn-create:hover {
        background: linear-gradient(90deg, #e6002e 0%, #d30912 100%);
    }

    .text-light-red {
        color: #cc0022 !important;
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .text-light-red:hover {
        color: #ff0033 !important;
        text-decoration: underline;
    }

    .right-section {
        flex: 1;
        background: url('https://i.pinimg.com/originals/40/21/94/402194c8db6bf41861c1aef74a457117.gif') no-repeat center center/cover;
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .right-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.2);
        z-index: 1;
    }

    .intro-text {
        position: relative;
        z-index: 2;
        color: #ffffff;
        text-align: center;
        padding: 20px;
    }

    .intro-text h3 {
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 10px;
    }

    .intro-text h2 {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 20px;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
